doctype html
html
  head
    title Stride App
    meta http-equiv="X-UA-Compatible" content="IE=10; IE=9; IE=8; IE=7; IE=EDGE"

    meta name="viewport" content="width=device-width, initial-scale=1.0"

    = csrf_meta_tags

    = stylesheet_link_tag @site.name
    javascript:
      (function(d) {
        var config = {
          kitId: 'pto6yzk',
          scriptTimeout: 3000,
          async: true
        },
        h=d.documentElement,t=setTimeout(function(){h.className=h.className.replace(/\bwf-loading\b/g,"")+" wf-inactive";},config.scriptTimeout),tk=d.createElement("script"),f=false,s=d.getElementsByTagName("script")[0],a;h.className+=" wf-loading";tk.src='https://use.typekit.net/'+config.kitId+'.js';tk.async=true;tk.onload=tk.onreadystatechange=function(){a=this.readyState;if(f||a&&a!="complete"&&a!="loaded")return;f=true;clearTimeout(t);try{Typekit.load(config)}catch(e){}};s.parentNode.insertBefore(tk,s)
      })(document);

  body.page-forum.action-index
    header.header.js-header
      .header-toolbar
        .group
          a.header-toolbar__logo
            = insert_svg @site.name+"/logo.svg"
            span.header-logo__alt
              = @site.name
          .header-toolbar__search.js-searchForm-container
            form.header-toolbar__search-form.js-searchForm action="/search"
              label.js-searchForm-toggle for="search-box"
                span Search
                = insert_svg "search.svg"
              input id="query" type="text" name="query"

      nav.header-navigation.js-submenu
        .group role="navigation"
          ul
            - for nav_item in ["forums", "articles", "support", "about"] do
              li
                - if nav_item == "forums"
                  a class="active"
                    = nav_item.capitalize
                - else
                  a
                    = nav_item.capitalize

    main.page id="content" tabindex="0"
      .about
        header.standardHeader
          .constrained
            h1 Forums
        .forum-introduction
          .constrained
            p Political life-expectancy care thinkers who make change happen evolution enable developing poverty. Catalyst inspire social change communities, foundation respect involvement. Campaign Action Against Hunger social entrepreneurship opportunity committed combat malaria board of directors rural global network planned giving.


    .constrained
      h2 Stride â€” #{@site.name}

      - if flash[:success]
        .notifications
          .notification.success = flash[:success]

      - if flash[:error]
        .notifications
          .notification.error = flash[:error]

      hr

      - if @current_user
        p Hello #{@current_user.name}
        p
          a href=logout_path data-method='post' Log out

      - else
        p
          a href=login_path Log in

      hr
        a href=topics_preview_path Forums

      hr

    - if content_for? :dark_strip
      .darkStrip
        .constrained
          = yield :dark_strip

    - if content_for? :light_strip
      .lightStrip
        .constrained
          = yield :light_strip

    .constrained
      .sidebar
        = yield :sidebar
      .content
        = yield

    = javascript_include_tag 'application'
