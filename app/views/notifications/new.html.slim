= form_tag new_notification_proof_path(:new_article_content) do |f|

  h2 New article
  p
    = Notification.new_article_content(@site)

    select name="notification[data][article_data]"
      - @articles.each do |article_url, article_title|
        option value="#{article_url}|#{article_title}" = article_title

  button Proof and send
