p Create new notification

= form_tag new_notification_proof_path(:scheduled_chat_content) do |f|

  h2 Scheduled chat
  p
    = Notification.scheduled_chat_content(@site)

  select name="notification[data][chat_session_id]"
    - @chat_sessions.each do |chat_session|
      option  value=chat_session.id = chat_session.name

  button Proof and send

= form_tag new_notification_proof_path(:today_chat_content) do |f|

