- content_for :dark_strip do
  h2.small All Users

- content_for :light_strip do
  p Search bar here

- content_for :sidebar do
  = render 'partials/sidebar'

- @access_levels.each do |access_level|
  table
    thead
      th
        h2 = access_level.name.pluralize
        | (#{access_level.users.count})
      th Joined
      th Last active
      th Forum replies
      th Chat messages

    - access_level.users.each do |user|
      tr data-href=user_path(user)
        td
          div style="width: 20px; height: 20px; float: left"
            = render "user/avatar", user: user
          = user.name
        td = user.created_at.strftime('%x')
        td = user.last_seen
        td = user.posts.count
        td 0

