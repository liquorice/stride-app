// Post Reply Textarea Styles

.postReply {
  @include breakpoint (mini, small) {
    padding-bottom: 3rem;
    padding-top: 1.867rem;
  }
  display: table;
  padding-bottom: 7.474rem;
  padding-top: 3.421rem;
  width: 100%;
}

  .postReply__title {
    background-color: $green-mid;
    display: table-row;
    width: 100%;

    h3 {
      @include h3-regular;
      @include breakpoint (mini, small) {
        @include p-short;
        @include ff-adelle-bold;
        color: $white;
        padding: 0.334rem 1.2rem;
      }
      color: $white;
      padding: 0.4rem 1.421rem 0.6105rem;
    }
  }

  .postReply__form {
    background-color: $white;
    display: table-row;
    width: 100%;

    textarea {
      @include p-short;
      @include breakpoint(medium) {
        width: 75.8%;
      }
      @include breakpoint(small) {
        width: 79.3%;
      }
      @include breakpoint(mini) {
        width: 100%;
      }
      @include breakpoint(mini, small) {
        padding: 0.9333rem 1.133rem 1.2rem;
      }
      box-sizing:padding-box;
      display: block;
      display: table-cell;
      float: left;
      line-height: 1.4;
      margin-bottom: 0;
      overflow: hidden;
      padding: 1.053rem 1.421rem 1.263rem;
      resize: none;
      width: 84.2%;
    }
  }

// Post Reply Textarea Button Styles

  .postReply__button {
    @include breakpoint(mini) {
      padding: 0 0.8rem 0.734rem;
    }
    background-color: $white;
    display: table-cell;
    float: right;
    padding: 0.6316rem 0.6842rem;

    button {
      @include btn-short;
      cursor: pointer;
      margin-bottom: 0;
      transition: all 100ms ease-out;

      .postReply.hasContent & {
        @include btn-primary;
        margin-bottom: 0;
      }
    }
  }

  .postReply__clear {
    @include icon__clear;
    @include breakpoint(mini) {
      display: table-cell;
    }
    background-color: $bg-dark;
    border-radius: 50%;
    content: "";
    cursor: pointer;
    display: none;
    float: right;
    height: 17px;
    margin-top: 0.4667rem;
    position: relative;
    width: 17px;
  }
