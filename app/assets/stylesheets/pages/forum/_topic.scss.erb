.topic__preview[data-hidden] {
  h2, a, strong {
    color: $grey-warm;

    span {
      @include p-meta;
      color: $grey-warm;
      padding-left: 0.3rem;
    }
  }

  .mobile-thread * {
    color: $grey-warm;
  }

  .thread__preview {
    border-color: mix($grey-warm, $white, 10%);

    &[data-pinned] {
      border-color: $blue-dark;
    }
  }

  .thread * {
    background: mix($grey-warm, $white, 10%);
    &:hover {
      background: mix($links, $white, 8%);
    }
  }

  .thread:hover * {
    background: mix($links, $white, 8%);
  }
}

.topic__preview {
  @include breakpoint (mini, small) {
    margin-top: 0;
  }
  margin-top: -$standard-margin;
  padding-bottom: 3.474rem;

  &:last-child {
    @include breakpoint (mini, small) {
      padding-bottom: 4.2rem;
    }
    padding-bottom: 5.842rem;
  }
}

  .topic__name {
    h2, a {
      @include h2-level2;
      @include breakpoint(mini, small) {
        margin-bottom: $standard-margin;
      }
      color: $green-dark;
      margin-bottom: 0.3rem;
    }
  }

  .topic__viewMore {
    @include breakpoint(mini, small, medium) {
      margin-top: 12px;
    }
    margin: 1.56em 0 0 0;
    
    a {
      @include btn-standard;
      padding: 0.571em 1.0592em 0.643em;
    }
  }

// Manage Forum modal styles

.edit__forums-titles {
  .label__title {
    display: inline-block;
    margin-bottom: 6px;
    width: 79%;
  }

  .label__title:nth-child(n+2) {
    text-align: right;
    width: 20%;
  }
}

.edit__forums-list {
  counter-reset: item;
}

  .edit__forums-row + .edit__forums-row {
    margin-top: 1px;
  }

  .edit__forums-row {
    @include p-meta;
    background-color: $white;
    color: $grey-warm;
    cursor: pointer;
    float: right;
    height: 39px;
    list-style-position: outside;
    margin-left: 27px;
    transition: background-color 200ms ease-out;
    transition: color 200ms ease-out;
    width: calc(100% - 27px);

    &:hover {
      background-color: mix($links, $white, 20%);
      .topic__title {
        color: $blue-dark;
      }

      .checkbox .icon__reorder {
        display: block;
      }
    }

    &:active {
      box-shadow: 0px 0px 3px 1px rgba($grey-warm, 0.15);
    }

    &:before {
      @include p-meta;
      color: $grey-warm;
      content: counter(item) ". ";
      counter-increment: item;
      display: block;
      float: left;
      line-height: 39px;
      margin-left: -27px;
    }

    .topic__title {
      @include p-meta;
      color: $grey-warm;
      display: inline-block;
      line-height: 39px;
      max-width: 79%;
      overflow: hidden;
      padding-left: 13px;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .checkbox {
      display: inline-block;
      float: right;
      width: 21%;

      .icon__reorder {
        display: none;
        float: right;
        height: 9.01px;
        margin-right: calc(11px + 17px + 15px);
        margin-top: calc((39px - 9.01px)/2);
        width: 12.01px;
      }

      .form__checkbox {
        left: initial;
        right: 11px;
        top: calc((39px - 17px)/2);
      }

      & input:checked ~ .form__checkbox:after {
        top: -2px;
      }
    }
  }
