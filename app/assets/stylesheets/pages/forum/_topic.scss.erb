.topic__preview {
  @include breakpoint (mini, small) {
    margin-top: 0;
  }
  margin-top: -$standard-margin;
  padding-bottom: 3.474rem;

  &:last-child {
    @include breakpoint (mini, small) {
      padding-bottom: 4.2rem;
    }
    padding-bottom: 5.842rem;
  }
}

  .topic__name {
    h2, a {
      @include h2-level2;
      @include breakpoint(mini, small) {
        margin-bottom: $standard-margin;
      }
      color: $green-dark;
      margin-bottom: 0.3rem;
    }
  }

  .topic__viewMore {
    @include breakpoint(mini, small, medium) {
      margin-top: 12px;
    }
    margin: 1.56em 0 0 0;
    
    a {
      @include btn-standard;
      padding: 0.571em 1.0592em 0.643em;
    }
  }

// TODO MAIN FORUM EDIT modal styles
// TODO Might need to move this later, depending on where the edit ends up
.edit__forums-titles {
  .label__title {
    display: inline-block;
    margin-bottom: 6px;
    width: 79%;
  }

  .label__title:nth-child(n+2) {
    text-align: right;
    width: 20%;
  }
}

  .edit__forums-row + .edit__forums-row {
    border-top: 1px solid rgba($grey-warm, 0.15);
  }

  .edit__forums-row {
    @include p-meta;
    color: $grey-warm;
    list-style-type: decimal;
    cursor: pointer;
    padding: 0.45rem 0;
    float: right;
    width: 100%;
    list-style-position: inside;

    .topic__title {
      @include p-meta;
      color: $grey-warm;
      max-width: 79%;
      display: inline-block;
    }

    .checkbox {
      display: inline-block;
      float: right;
      width: 20%;

      .form__checkbox {
        left: initial;
        right: 8px;
        top: 0;
      }

      & input:checked ~ .form__checkbox:after {
        top: -1px;
      }
    }
  }
