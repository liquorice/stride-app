.profileContainer {
  overflow: auto;
  width: 100%;
  max-width: 488px;
}

.profileLabel {
  margin-bottom: 2.75rem;

  &.bottomMargin-small {
    margin-bottom: 7px;
  }
}

  .profileLabel__title {
    @include p-meta;
    @include ff_adelle-bold;
  }

  .profileLabel__desc {
    @include p-meta;
  }

.profileTitle {
  @include h3-flood;
  color: $green-dark;
  line-height: 1.9rem;
  margin-bottom: 0.85rem;
}

.profileAvatar__row {
  display: block;
  width: 100%;
  overflow: auto;

  &:nth-child(2) {
    margin-top: 7px;
  }

  &:nth-child(3) {
    margin-bottom: 0.6rem;
  }
}

  .profileAvatar__avatar-container {
    @include breakpoint(small) {
      min-width: 8rem;
    }
    @include breakpoint(mini) {
      height: 5.73rem;
      min-height: 5.73rem;
      min-width: 5.73rem;
    }
    border-right: 2px solid rgba($grey-warm, 0.1);
    display: block;
    background-color: $white;
    float: left;
    height: 8.25rem;
    min-height: 8.25rem;
    width: 33.9%;
  }

    .profileAvatar__avatar {
      @include avatarSize-overlarge;
      @include breakpoint (large) {
        margin: 0.8rem auto 0.8rem;
      }
      @include breakpoint(mini) {
        margin: 0.55rem auto 0.55rem;
      }
      display: block;
      margin: 1rem auto 1rem;
    }

.profileAvatar__faces-container {
  display: block;
  float: left;
  width: 66.1%;
  background-color: $white;
  height: 8.25rem;
  min-height: 8.25rem;
  padding: 1.2rem 1rem;
}
  
  .profileAvatar__face-option {
    float: left;
    margin: 0.2rem 0.1rem;
    height: 52px;
    width: 52px;

    label > input {
      display: none;
    }

    label > input + .avatar {
      cursor: pointer;
      &:hover ~ .avatar__outline {
        border: 2px solid mix($links, $white, 40%);
      }
    }

    label > input:checked ~ .avatar__outline {
      border: 2px solid mix($links, $white, 40%);
      border-radius: 50%;
    }

    .avatar {
      @include avatarSize-medium;
      display: block;
      border: 2px solid transparent;
      border-radius: 50%;
      &:after {
        background-color: $bg;
      }
    }

    .avatar__outline {
      height: 52px;
      width: 52px;
      position: relative;
      top: -51px;
      left: -1px;
      border-radius: 50%;
      border: 2px solid transparent;
      transition: border 100ms ease-in;
    }
  }

.profileAvatar__colour-container {
  border-top: 2px solid rgba($grey-warm, 0.1);
  display: block;
  width: 100%;
  background-color: $white;
  padding: 1rem 1rem;
  overflow: auto;
}
  .profileAvatar__colour-option {
    float: left;
    margin: 0.5rem 0.4906rem 0.25rem 0;
    height: 35px;
    width: 35px;

    label > input {
      display: none;
    }

    label > input + .avatar {
      cursor: pointer;
      &:hover ~ .avatar__outline {
        border: 2px solid mix($links, $white, 40%);
      }
    }

    label > input:checked ~ .avatar__outline {
      border: 2px solid mix($links, $white, 40%);
      border-radius: 50%;
    }

    .avatar {
      height: 33px;
      width: 33px;
      display: block;
      border: 2px solid transparent;
      border-radius: 50%;
    }

    .avatar__outline {
      height: 35px;
      width: 35px;
      position: relative;
      top: -34px;
      left: -1px;
      border-radius: 50%;
      border: 2px solid transparent;
      transition: border 100ms ease-in;
    }
  }

.profileButton {
  @include button-primary-meta;
  padding-top: 0;
  display: block;
}
