// General Preference View styles

.profileContainer {
  max-width: 488px;
  overflow: auto;
  width: 100%;
}

.profileTitle {
  @include h3-flood;
  color: $green-dark;
  line-height: 1.9rem;
  margin-bottom: 2.75rem;
}

.profileLabel {
  margin-bottom: 2.5rem;
}

  .profileLabel__title {
    @include p-meta;
    @include ff_adelle-bold;
    .alert {
      color: $alert;
    }
  }

  .profileLabel__desc {
    @include p-meta;
  }

.btn__saveProfile {
  @include button-primary-short;
  display: none;
  padding-top: 0;
}

.btn__editProfile {
  @include p-meta;
  color: $links;
  cursor: pointer;
  display: block;
  margin-top: 0.3rem;
  padding-right: 1rem;
  width: 20%;

  &:before {
    @include icon__edit-blue;
    content: " ";
    float: left;
    height: 1em;
    margin: 2px 1px 0 0;
    width: 1em;
  }
}

input.hidden {
  display: none;
}

p.visible__default {
  @include p-regular;
}

.visible__edit {
  display: none;
}

input#showEdit__avatar:checked,
input#showEdit__username:checked,
input#showEdit__pw:checked,
input#showEdit__email:checked {
  & ~ .visible__edit {
    display: inline-block;
  }

  & ~ .btn__saveProfile {
    display: block;
  }

  & ~ .btn__editProfile, & ~ .visible__default {
    display: none;
  }
}

// Avatar preference styles

// User avatar display
.profileAvatar__avatar-container {
  @include breakpoint(small, mini) {
    display: block;
    height: 162px;
    margin-bottom: 0;
    margin-right: 0;
    width: 162px;
  }
  background-color: $white;
  display: inline-block;
  height: 8.25rem;
  margin-bottom: -0.125rem;
  margin-right: -0.125rem;
  margin-top: 7px;
  width: 33.9%;
}

  .profileAvatar__avatar {
    @include avatar-overlarge;
    @include breakpoint (small, mini) {
      display: inline-block;
      height: 124px;
      margin: 1.2rem 1.2rem;
      width: 124px;
    }
    display: block;
    margin: 1rem auto 1rem;
  }

// Face options display
.profileAvatar__faces-container {
  @include breakpoint(small, mini) {
    border-left: none;
    border-top: 2px solid rgba($grey-warm, 0.1);
    display: block;
    margin: 0;
    min-height: 150px;
    padding: 1.1rem 1.1rem;
    width: 100%;
  }
  background-color: $white;
  border-left: 2px solid rgba($grey-warm, 0.1);
  height: 8.25rem;
  margin-bottom: -0.125rem;
  margin-left: -0.125rem;
  margin-top: 7px;
  padding: 1.2rem 1rem;
  width: 66.3%;

  .profileLabel__title {
    @include breakpoint(small, mini) {
      display: block;
    }
    display: none;
  }
}
  
  .profileAvatar__face-option {
    @include breakpoint(small, mini) {
      height: 48px;
      margin: 0.25rem 0.175rem 0 0;
      width: 48px;
    }
    float: left;
    height: 52px;
    margin: 0.2rem 0.1rem;
    width: 52px;

    label > input {
      display: none;
    }

    label > input + .avatar {
      cursor: pointer;
      &:hover ~ .avatar__outline {
        border: 2px solid mix($links, $white, 40%);
      }
    }

    label > input:checked ~ .avatar__outline {
      border-radius: 50%;
      border: 2px solid mix($links, $white, 40%);
    }

    .avatar {
      @include avatar-medium;
      border-radius: 50%;
      border: 2px solid transparent;
      display: block;

      &[primary] {
        &:after {
          background-color: $primary;
        }
      }
      &:after {
        background-color: $bg;
      }
    }

    .avatar__outline {
      @include breakpoint(small, mini) {
        height: 48px;
        left: -2px;
        top: -47px;
        width: 48px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      height: 52px;
      left: -1px;
      position: relative;
      top: -51px;
      transition: border 100ms ease-in;
      width: 52px;
    }
  }

.profileAvatar__spacer {
  margin-bottom: 0.6rem;
}

// Colour options display
.profileAvatar__colour-container {
  @include breakpoint(small, mini) {
    display: block;
    margin-top: 0;
    min-height: 155px;
    padding: 1.1rem 1.1rem;
  }
  background-color: $white;
  border-top: 2px solid rgba($grey-warm, 0.1);
  height: 5.75rem;
  margin-bottom: 0.6rem;
  margin-top: -0.125rem;
  min-height: 5.75rem;
  padding: 1rem 1rem 0;
  width: 100%;
}

  .profileAvatar__colour-option {
    @include breakpoint(small, mini) {
      height: 43px;
      margin: 0.5rem 0.4906rem 0 0;
      width: 43px;
    }
    float: left;
    height: 35px;
    margin: 0.5rem 0.4906rem 0.25rem 0;
    width: 35px;

    label > input {
      display: none;
    }

    label > input + .avatar {
      cursor: pointer;
      &:hover ~ .avatar__outline {
        border: 2px solid mix($links, $white, 40%);
      }
    }

    label > input:checked ~ .avatar__outline {
      border-radius: 50%;
      border: 2px solid mix($links, $white, 40%);
    }

    .avatar {
      @include breakpoint(small, mini) {
        height: 41px;
        width: 41px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      display: block;
      height: 33px;
      width: 33px;
    }

    .avatar__outline {
      @include breakpoint(small, mini) {
        height: 43px;
        left: -1px;
        top: -42px;
        width: 43px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      height: 35px;
      left: -1px;
      position: relative;
      top: -34px;
      transition: border 100ms ease-in;
      width: 35px;
    }
  }
