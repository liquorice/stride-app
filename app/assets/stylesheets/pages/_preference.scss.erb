.profileContainer {
  overflow: auto;
  width: 100%;
  max-width: 488px;
}

.profileLabel {
  margin-bottom: 2.75rem;
  padding: 0 10px;

  &.bottomMargin-small {
    margin-bottom: 7px;
  }
}

  .profileLabel__title {
    @include p-meta;
    @include ff_adelle-bold;
  }

  .profileLabel__desc {
    @include p-meta;
  }

.profileTitle {
  @include h3-flood;
  color: $green-dark;
  line-height: 1.9rem;
  margin-bottom: 0.85rem;
}

.profileAvatar__row {
  display: block;
  width: 100%;
  overflow: auto;

  &:nth-child(2) {
    margin-top: 7px;
  }

  &:nth-child(3) {
    margin-bottom: 0.6rem;
  }
}

  .profileAvatar__avatar-container {
    @include breakpoint(small) {
      min-width: 8rem;
    }
    @include breakpoint(mini) {
      height: 5.73rem;
      min-height: 5.73rem;
      min-width: 5.73rem;
    }
    border-right: 2px solid rgba($grey-warm, 0.1);
    display: block;
    background-color: $white;
    float: left;
    height: 8.25rem;
    min-height: 8.25rem;
    width: 35%;
  }

    .profileAvatar__avatar {
      @include avatarSize-overlarge;
      @include breakpoint (large) {
        margin: 0.8rem auto 0.8rem;
      }
      @include breakpoint(mini) {
        margin: 0.55rem auto 0.55rem;
      }
      display: block;
      margin: 1rem auto 1rem;
    }

.profileAvatar__faces-container {
  display: block;
  float: left;
  width: 65%;
  background-color: $white;
  height: 8.25rem;
  min-height: 8.25rem;
  padding: 1rem 0.35rem;
}
  
  .profileAvatar__face > input {
    display: none;
  }

.profileAvatar__colours-container {
  border-top: 2px solid rgba($grey-warm, 0.1);
  display: block;
  max-width: 25.25rem;
  background-color: $white;
  padding: 1rem 0.35rem;
  overflow: auto;
}
  .profileAvatar__face, .profileAvatar__colour {
    @include avatarSize-medium;
    display: block;
    float: left;
    margin: 0.25rem;
    padding: 2px;

    &:hover {
      border: 2px solid orange;
      border-radius: 50%;
    }
  }

  .profileAvatar__colour {
    height: 34px;
    width: 34px;
  }

  .profileAvatar__colour > input {
    display: none;
  }

.profileButton {
  @include button-primary-meta;
  padding-top: 0;
  display: block;
}
