// Preference View Button Styles

@mixin button-profile {
  @include p-meta;
  @include links;
  border-bottom: none;
  cursor: pointer;
  display: block;
  width: 5.421rem;
  &:hover {
    box-shadow: none;
  }
}

.btn__profile-cancel {
  @include button-profile;
  margin-left: 6px;
}

.btn__profile-edit {
  @include button-profile;
  @include breakpoint (small, mini) {
    margin-top: 6px;
  }
  margin-top: 11px;

  &:before {
    @include icon__edit-blue;
    @include breakpoint (small, mini) {
      height: 9px;
      width: 9px;
      margin: 5px 3px 0 0;
    }
    content: " ";
    float: left;
    height: 11px;
    margin: 2px 4px 0 0;
    width: 11px;
  }
}

// General Preference View Styles

.profile {
  max-width: 25.68rem;
  overflow: auto;
  padding-bottom: 2.158rem;
  width: 100%;

  h2 {
    @include h2-level3;
    @include breakpoint (small, mini) {
      margin-bottom: 1.8rem;
    }
    margin-bottom: 2.579rem;
  }

  button {
    @include btn-meta;
    @include btn-primary;
    @include ff_adelle-bold;
    @include breakpoint (small, mini) {
      margin-top: 16px;
      margin-left: 16px;
    }
    display: none;
    margin-top: 13px;
  }

  form {
    @include breakpoint (small, mini) {
      margin-bottom: 2rem;
    }
    font-size: 0;
    height: auto;
    margin-bottom: 2.632rem;
    overflow: auto;

    h3, h4 {
      @include p-meta;
      @include ff_adelle-bold;
      color: $grey-warm;
      margin-bottom: 1px;
      .alert {
        color: $alert;
      }
    }

    h4 {
      margin-top: 14px;
    }

    p {
      @include p-meta;
      color: $grey-warm;
      margin-bottom: 1px;
      &.view-default {
        @include p-short;
        margin-bottom: 3px;
      }
    }

    input {
      display: none;
      margin-top: 5px;
    }
  }

  form.edit {
    margin-bottom: 2.421rem;

    & > .view-edit {
      display: inline-block;

      &.message-required {
        display: block;
        margin-top: 7px;
      }
    }

    & > .view-default {
      display: none;
    }
  }
}

.view-edit {
  display: none;
}

// Avatar preference styles

// User avatar display
.profileAvatar {
  @include breakpoint(small, mini) {
    display: block;
    height: 10.87rem;
    margin-top: 7px;
    width: 10.87rem;
  }
  background-color: $white;
  display: inline-block;
  height: 8.579rem;
  margin-top: 4px;
  padding: 1.105rem 1.105rem;
  width: 8.579rem;
}

  .profileAvatar__avatar {
    @include avatar-overlarge;
  }

// Face options display
.profileFace {
  @include breakpoint(large) {
    padding: 1.15rem 0.77rem;
  }
  @include breakpoint(medium) {
    padding: 1.15rem 0.71rem;
  }
  @include breakpoint(small, mini) {
    border-left: none;
    border-top: 1px solid rgba($grey-warm, 0.1);
    margin-top: 0;
    min-height: 150px;
    padding: 0.8rem 1.1rem;
    width: 100%;
  }
  background-color: $white;
  border-left: 1px solid rgba($grey-warm, 0.1);
  height: 8.579rem;
  margin-top: 4px;
  padding: 1.15rem 0.86rem;
  width: calc(17.11rem - 1px);

  h3 {
    @include breakpoint(small, mini) {
      display: block;
      font-weight: 400 !important;
    }
    display: none;
  }
}
  
  .profileFace__option {
    @include breakpoint(small, mini) {
      height: 46px;
      margin: 4px 2px;
      width: 46px;
    }
    float: left;
    height: calc(2.526rem + 8px);
    margin: 2px 1px; 
    width: calc(2.526rem + 8px);

    label > input {
      display: none;
    }

    label > input + .avatar {
      cursor: pointer;
      &:hover ~ .avatar__outline {
        border: 2px solid mix($links, $white, 40%);
      }
    }

    label > input:checked ~ .avatar__outline {
      border-radius: 50%;
      border: 2px solid mix($links, $white, 40%);
    }

    .avatar {
      @include breakpoint(small, mini) {
        height: 42px;
        left: 0;
        width: 42px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      display: block;
      height: calc(2.526rem + 4px);
      left: 2px;
      top: 2px;
      width: calc(2.526rem + 4px);

      &[primary] {
        &:after {
          background-color: $primary;
        }
      }
      &:after {
        background-color: $bg-dark;
      }
    }

    .avatar__outline {
      @include breakpoint(small, mini) {
        height: 46px;
        left: -2px;
        top: -42px;
        width: 46px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      height: calc(2.526rem + 8px);
      position: relative;
      top: calc(-2.526rem - 4px);
      transition: border 100ms ease-in;
      width: calc(2.526rem + 8px);
    }
  }

// Colour options display
.profileColour {
  @include breakpoint(small, mini) {
    margin-top: 0;
    min-height: 155px;
    padding: 0.8rem 1.1rem;
    width: 100%;
  }
  background-color: $white;
  border-top: 1px solid rgba($grey-warm, 0.1);
  min-height: 5.75rem;
  padding: 1.105rem calc(1.105rem - 2px) 0.8947rem;
  width: calc(25.689rem - 1px);

  & > h3 {
    @include breakpoint (small, mini) {
      font-weight: 400 !important;
      margin-left: 0px;
    }
    margin-left: 2px;
  }
}

  .profileColour__option {
    @include breakpoint(small, mini) {
      height: 44px;
      margin: 5px 3px;
      width: 44px;
    }
    float: left;
    height: calc(1.684rem + 8px);
    margin: 9px 2px;
    width: calc(1.684rem + 8px);

    label > input {
      display: none;
    }

    label > input + .avatar {
      cursor: pointer;
      &:hover ~ .avatar__outline {
        border: 2px solid mix($links, $white, 40%);
      }
    }

    label > input:checked ~ .avatar__outline {
      border-radius: 50%;
      border: 2px solid mix($links, $white, 40%);
    }

    .avatar {
      @include breakpoint(small, mini) {
        height: 40px;
        width: 40px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      display: block;
      height: calc(1.684rem + 4px);
      left: 2px;
      top: 2px;
      width: calc(1.684rem + 4px);

      &:after {
        height: 100%;
        left: 0;
        top: 0;
        width: 100%;
      }
    }

    .avatar__outline {
      @include breakpoint(small, mini) {
        height: 44px;
        top: -40px;
        width: 44px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      height: calc(1.684rem + 8px);
      position: relative;
      top: calc(-1.684rem - 4px);
      transition: border 100ms ease-in;
      width: calc(1.684rem + 8px);
    }
  }

// Notifcations Section Styles

.notificationOption {
  background-color: $bg-dark;
  overflow: auto;
  padding-bottom: 5.842rem;
  padding-top: 3.737rem;
  width: 100%;
}

  .notificationOption-content {
    @include breakpoint(huge, overlarge, large, medium) {
      margin-left: calc(24.32432% + 24px);
    }
    max-width: 25.68rem;

    h2 {
      @include h2-level3;
      @include breakpoint (small, mini) {
        margin-bottom: 1.8rem;
      }
      margin-bottom: 2.368rem;
    }

    p {
      @include p-short;
      padding-bottom: 1.053rem;
      &.sample {
        @include p-meta;
        color: $grey-warm;
        padding-bottom: 0.684rem;
      }
    }

    hr {
      background-color: rgba($grey-warm, 0.1);
      border: none;
      color: rgba($grey-warm, 0.1);
      height: 1px;
      margin: 0 0 2.895rem 0;
    }

    .img__sample {
      margin-bottom: -0.895rem;
      max-width: 100%;
    }

    .modalContent {
      max-width: none;
      padding-bottom: 0;
      padding-top: 0;

      .label {
        margin-bottom: 40px;
        padding: 0;
      }

      .label .checkbox__text {
        margin-bottom: 0.737rem;
      }
    }
  }