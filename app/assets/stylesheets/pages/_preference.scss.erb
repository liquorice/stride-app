.profileContainer {
  max-width: 488px;
  overflow: auto;
  width: 100%;
}

.profileTitle {
  @include h3-flood;
  color: $green-dark;
  line-height: 1.9rem;
  margin-bottom: 2.75rem;
}

.profileLabel {
  margin-bottom: 2.5rem;
}

  .profileLabel__title {
    @include p-meta;
    @include ff_adelle-bold;
    .alert {
      color: $alert;
    }
  }

  .profileLabel__desc {
    @include p-meta;
  }

.profileAvatar__avatar-container {
  @include breakpoint(small, mini) {
    border-right: none;
    float: none;
    height: 162px;
    width: 162px;
  }
  background-color: $white;
  border-right: 2px solid rgba($grey-warm, 0.1);
  display: block;
  float: left;
  height: 8.25rem;
  margin-top: 7px;
  width: 33.9%;
}

  .profileAvatar__avatar {
    @include avatarSize-overlarge;
    @include breakpoint (small, mini) {
      display: inline-block;
      height: 124px;
      margin: 1.2rem 1.2rem;
      width: 124px;
    }
    display: block;
    margin: 1rem auto 1rem;
  }

.profileAvatar__faces-container {
  @include breakpoint(small, mini) {
    border-top: 2px solid rgba($grey-warm, 0.1);
    float: none;
    margin-top: 0;
    min-height: 150px;
    padding: 1.1rem 1.1rem;
    width: 100%;
  }
  background-color: $white;
  display: block;
  float: left;
  height: 8.25rem;
  margin-top: 7px;
  padding: 1.2rem 1rem;
  width: 66.1%;

  .profileLabel__title {
    @include breakpoint(small, mini) {
      display: block;
    }
    display: none;
  }
}
  
  .profileAvatar__face-option {
    @include breakpoint(small, mini) {
      height: 48px;
      margin: 0.25rem 0.175rem 0 0;
      width: 48px;
    }
    float: left;
    height: 52px;
    margin: 0.2rem 0.1rem;
    width: 52px;

    label > input {
      display: none;
    }

    label > input + .avatar {
      cursor: pointer;
      &:hover ~ .avatar__outline {
        border: 2px solid mix($links, $white, 40%);
      }
    }

    label > input:checked ~ .avatar__outline {
      border-radius: 50%;
      border: 2px solid mix($links, $white, 40%);
    }

    .avatar {
      @include avatarSize-medium;
      border-radius: 50%;
      border: 2px solid transparent;
      display: block;
      &:after {
        background-color: $bg;
      }
    }

    .avatar__outline {
      @include breakpoint(small, mini) {
        height: 48px;
        left: -2px;
        top: -47px;
        width: 48px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      height: 52px;
      left: -1px;
      position: relative;
      top: -51px;
      transition: border 100ms ease-in;
      width: 52px;
    }
  }

.profileAvatar__colour-container {
  @include breakpoint(small, mini) {
    float: none;
    min-height: 155px;
    padding: 1.1rem 1.1rem;
  }
  background-color: $white;
  border-top: 2px solid rgba($grey-warm, 0.1);
  display: block;
  float: left;
  height: 5.75rem;
  margin-bottom: 0.6rem;
  min-height: 5.75rem;
  padding: 1rem 1rem 0;
  width: 100%;
}

  .profileAvatar__colour-option {
    @include breakpoint(small, mini) {
      height: 43px;
      margin: 0.5rem 0.4906rem 0 0;
      width: 43px;
    }
    float: left;
    height: 35px;
    margin: 0.5rem 0.4906rem 0.25rem 0;
    width: 35px;

    label > input {
      display: none;
    }

    label > input + .avatar {
      cursor: pointer;
      &:hover ~ .avatar__outline {
        border: 2px solid mix($links, $white, 40%);
      }
    }

    label > input:checked ~ .avatar__outline {
      border-radius: 50%;
      border: 2px solid mix($links, $white, 40%);
    }

    .avatar {
      @include breakpoint(small, mini) {
        height: 41px;
        width: 41px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      display: block;
      height: 33px;
      width: 33px;
    }

    .avatar__outline {
      @include breakpoint(small, mini) {
        height: 43px;
        left: -1px;
        top: -42px;
        width: 43px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      height: 35px;
      left: -1px;
      position: relative;
      top: -34px;
      transition: border 100ms ease-in;
      width: 35px;
    }
  }

.profileButton {
  @include button-primary-meta;
  display: block;
  padding-top: 0;
}
