// Preference View Button Styles

@mixin button-profile {
  @include p-meta;
  @include links;
  border-bottom: none;
  cursor: pointer;
  display: block;
  width: 5.421rem;
}

.btn__profile-cancel {
  @include button-profile;
  margin-left: 6px;
}

.btn__profile-edit {
  @include button-profile;
  margin-top: 11px;

  &:before {
    @include icon__edit-blue;
    content: " ";
    float: left;
    height: 11px;
    margin: 2px 4px 0 0;
    width: 11px;
  }
}

// General Preference View Styles

.profile {
  max-width: 25.68rem;
  overflow: auto;
  width: 100%;

  h2 {
    @include h2-level3;
    margin-bottom: 2.579rem;
  }

  button {
    @include btn-meta;
    @include btn-primary;
    @include ff_adelle-bold;
    display: none;
    margin-top: 13px;
  }

  form {
    font-size: 0;
    height: auto;
    margin-bottom: 2.632rem;
    overflow: auto;

    h3, h4 {
      @include p-meta;
      @include ff_adelle-bold;
      color: $grey-warm;
      margin-bottom: 1px;
      .alert {
        color: $alert;
      }
    }

    h4 {
      margin-top: 14px;
    }

    p {
      @include p-meta;
      color: $grey-warm;
      margin-bottom: 1px;
      &.view-default {
        @include p-short;
        margin-bottom: 3px;
      }
    }

    input {
      display: none;
      margin-top: 5px;
    }
  }

  form.edit {
    margin-bottom: 2.421rem;

    & > .view-edit {
      display: inline-block;
    }

    & > .view-default {
      display: none;
    }
  }
}

.view-edit {
  display: none;
}

// Avatar preference styles

// User avatar display
.profileAvatar {
  @include breakpoint(small, mini) {
    display: block;
    height: 10.87rem;
    margin-bottom: 0;
    margin-right: 0;
    width: 10.87rem;
  }
  background-color: $white;
  display: inline-block;
  height: 8.579rem;
  margin-top: 4px;
  width: 8.579rem;
  padding: 1.105rem 1.105rem;
}

  .profileAvatar__avatar {
    @include avatar-overlarge;
    @include breakpoint (small, mini) {
      height: 124px;
      margin: 1.2rem 1.2rem;
      width: 124px;
    }
  }

// Face options display
.profileFace {
  @include breakpoint(small, mini) {
    border-left: none;
    border-top: 1px solid rgba($grey-warm, 0.1);
    display: block;
    margin: 0;
    min-height: 150px;
    padding: 1.1rem 1.1rem;
    width: 100%;
  }
  background-color: $white;
  border-left: 1px solid rgba($grey-warm, 0.1);
  height: 8.579rem;
  margin-top: 4px;
  padding: 1.15rem 0.86rem;
  width: calc(17.11rem - 1px);

  h3 {
    @include breakpoint(small, mini) {
      display: block;
    }
    display: none;
  }
}
  
  .profileFace__option {
    @include breakpoint(small, mini) {
      height: 48px;
      margin: 0.25rem 0.175rem 0 0;
      width: 48px;
    }
    float: left;
    height: 56px;
    width: 56px;
    margin: 2px 1px; 

    label > input {
      display: none;
    }

    label > input + .avatar {
      cursor: pointer;
      &:hover ~ .avatar__outline {
        border: 2px solid mix($links, $white, 40%);
      }
    }

    label > input:checked ~ .avatar__outline {
      border-radius: 50%;
      border: 2px solid mix($links, $white, 40%);
    }

    .avatar {
      @include breakpoint(small, mini) {
        height: 41px;
        width: 41px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      display: block;
      height: 52px;
      width: 52px;
      top: 2px;
      left: 2px;

      &[primary] {
        &:after {
          background-color: $primary;
        }
      }
      &:after {
        background-color: $bg;
      }
    }

    .avatar__outline {
      @include breakpoint(small, mini) {
        height: 48px;
        left: -2px;
        top: -47px;
        width: 48px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      height: 56px;
      position: relative;
      top: -52px;
      transition: border 100ms ease-in;
      width: 56px;
    }
  }

// Colour options display
.profileColour {
  @include breakpoint(small, mini) {
    display: block;
    margin-top: 0;
    min-height: 155px;
    padding: 1.1rem 1.1rem;
  }
  background-color: $white;
  border-top: 1px solid rgba($grey-warm, 0.1);
  min-height: 5.75rem;
  padding: 1.105rem calc(1.105rem - 2px) 0.8947rem;
  width: calc(25.689rem - 1px);

  & > h3 {
    margin-left: 2px;
  }
}

  .profileColour__option {
    @include breakpoint(small, mini) {
      height: 43px;
      margin: 0.5rem 0.4906rem 0 0;
      width: 43px;
    }
    float: left;
    height: 40px;
    width: 40px;
    margin: 9px 2px;

    label > input {
      display: none;
    }

    label > input + .avatar {
      cursor: pointer;
      &:hover ~ .avatar__outline {
        border: 2px solid mix($links, $white, 40%);
      }
    }

    label > input:checked ~ .avatar__outline {
      border-radius: 50%;
      border: 2px solid mix($links, $white, 40%);
    }

    .avatar {
      @include breakpoint(small, mini) {
        height: 41px;
        width: 41px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      display: block;
      height: 36px;
      width: 36px;
      top: 2px;
      left: 2px;

      &:after {
        height: 100%;
        width: 100%;
        left: 0;
        top: 0;
      }
    }

    .avatar__outline {
      @include breakpoint(small, mini) {
        height: 43px;
        left: -1px;
        top: -42px;
        width: 43px;
      }
      border-radius: 50%;
      border: 2px solid transparent;
      height: 40px;
      position: relative;
      top: -36px;
      transition: border 100ms ease-in;
      width: 40px;
    }
  }
