.topic {
  border-bottom: 2px solid black;
  margin-bottom: 40px;
  padding-bottom: 20px;
}

  .topic__name {
    h2 {
      @include h2-flood;
      color: $green-dark;
      margin-bottom: 0.6rem;
    }
  }

  .topic__viewMore {
    margin: 1.56em 0 4.45em 0;
    a {
      @include button-short;
      @include breakpoint(mini, small, medium) {
        margin-top: 12px;
      }
      padding: 0.571em 1.857em 0.643em;
    }
  }