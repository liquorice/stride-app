.topic__preview {
  @include breakpoint (mini, small) {
    margin-top: 0;
  }
  margin-top: -$standard-margin;
  padding-bottom: 3.474rem;

  &:last-child {
    @include breakpoint (mini, small) {
      padding-bottom: 4.2rem;
    }
    padding-bottom: 5.842rem;
  }
}

  .topic__name {
    h2, a {
      @include h2-level2;
      @include breakpoint(mini, small) {
        margin-bottom: $standard-margin;
      }
      color: $green-dark;
      margin-bottom: 0.3rem;
    }
  }

  .topic__viewMore {
    @include breakpoint(mini, small, medium) {
      margin-top: 12px;
    }
    margin: 1.56em 0 0 0;
    
    a {
      @include btn-standard;
      padding: 0.571em 1.0592em 0.643em;
    }
  }

