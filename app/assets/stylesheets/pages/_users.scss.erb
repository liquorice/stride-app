.usersTable {
  margin-bottom: 3.5rem;
  width: 100%;
}

.usersTable__titles {
  display: block;
}

.usersTable__column {
  @include p-meta;
  @include ff_adelle-bold;
  display: inline-block;
  width: 14.56%;

  h2 {
    @include p-large;
    @include ff_adelle-bold;
    color: $black;
    display: inline-block;
  }

  span {
    @include p-meta;
    display: inline-block;
  }

  &:first-child {
    @include breakpoint(small, mini) {
      width: 100%;
    }
    width: 40.32%;
  }

  &:nth-child(n+2) {
    @include breakpoint(small, mini) {
      display: none;
    }
  }
}

.userRow {
  @include breakpoint(small, mini) {
    height: 2.5rem;
  }
  background-color: $white;
  box-shadow: 0 1pt 0 0 rgba($grey-warm, 0.15);
  cursor: pointer;
  display: block;
  height: 2.2635rem;
  margin-bottom: 0.158rem;
}

.userRow__column {
  @include p-meta;
  display: inline-block;
  padding: 0.85em 0;
  width: 14.56%;

  &.bold {
    @include ff_adelle-bold;
  }

  &:first-child {
    @include breakpoint(small, mini) {
      width: 70%;
    }
    padding-left: 1em;
    width: 40.32%;
  }

  &:nth-child(2) {
    // @include breakpoint(small, mini) {
    //   width: 19.3%;
    // }
    @include breakpoint(small, mini) {
      display: none;
    }
  }

  &:nth-child(n+3) {
    @include breakpoint(small, mini) {
      display: none;
    }
  }
}

.userRow__column-avatar {
  // @include breakpoint(mini) {
  //   display: inline-block;
  //   float: none;
  //   margin-bottom: -0.25em;
  // }
  display: block;
  float: left;
  height: 18.1px;
  margin-right: 0.25em;
  width: 18.1px;
}

.userRow-mobile {
  @include breakpoint(huge, overlarge, large, medium) {
    display: none;
  }
  display: block;
  width: 100%;
  background-color: $white;
  box-shadow: 0 1pt 0 0 rgba($grey-warm, 0.15);
  cursor: pointer;
  height: 2.5rem;
  margin-bottom: 0.158rem;
}

.userRow__column-mobile {
  @include p-meta;
  @include breakpoint(huge, overlarge, large, medium) {
    display: none;
  }
  display: inline-block;
  padding: 0.85em 0;

  .userRow & {
    padding-right: 1em;
    text-align: right;
    width: 29%;
  }
  .userRow-mobile & {
    width: 30%;

    &:first-child {
      padding-left: 1em;
    }
  }
}
