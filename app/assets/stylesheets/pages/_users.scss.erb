.users__search {
  background-color: $white;
  height: 3rem;
  width: 100%;
  position: relative;
  vertical-align: middle;
}

  .users__search-form {
    display: block;
    height: 100%;
    position: relative;
    width: 100%;

    label {
      background-color: $white;
      bottom: 0;
      margin: auto 0;
      position: absolute;
      right: 0;
      top: 0;
      width: 36px;
      z-index: 10;
      height: 100%;

      .users__search-clear {
        @include icon__clear;
        @include breakpoint(mini) {
          margin-top: 0.85rem;
        }
        background-color: $bg-dark;
        border-radius: 50%;
        cursor: pointer;
        float: right;
        height: 20px;
        margin-right: 16px;
        margin-top: 1rem;
        position: relative;
        text-indent: -5000px;
        width: 20px;
      }
    }

    input {
      @include p-large;
      background-color: $white;
      bottom: 0;
      display: block;
      margin: auto 0;
      padding-right: 28px;
      padding: 4px 40px 4px 5px;
      position: absolute;
      right: 0;
      top: 0;
      vertical-align: middle;
      width: 100%;
      z-index: 5;
      max-width: 100%;
    }
  }

.usersTable {
  margin-bottom: 3.5rem;
  width: 100%;
}

.usersTable__titles {
  display: block;
}

.usersTable__column {
  @include p-meta;
  @include ff_adelle-bold;
  @include breakpoint(overlarge, large) {
    width: 15%;
  }
  display: inline-block;
  width: 14.56%;

  h2 {
    @include p-large;
    @include ff_adelle-bold;
    color: $black;
    display: inline-block;
  }

  span {
    @include p-meta;
    display: inline-block;
  }

  &:first-child {
    @include breakpoint(overlarge, large) {
      width: 38%;
    }
    @include breakpoint(medium, small, mini) {
      width: 100%;
    }
    width: 40.32%;
  }

  &:nth-child(n+2) {
    @include breakpoint(medium, small, mini) {
      display: none;
    }
  }
}

.userRow {
  @include breakpoint(medium, small, mini) {
    border-bottom: 2px solid rgba($grey-warm, 0.1);
    box-shadow: none;
    height: 2.5rem;
    margin-bottom: 0;
  }
  background-color: $white;
  box-shadow: 0 1pt 0 0 rgba($grey-warm, 0.15);
  cursor: pointer;
  display: block;
  height: 2.2635rem;
  margin-bottom: 0.158rem;
}

.userRow__column {
  @include p-meta;
  @include breakpoint(overlarge, large) {
    width: 15%;
  }
  display: inline-block;
  padding: 0.85em 0;
  width: 14.56%;

  &.bold {
    @include ff_adelle-bold;
  }

  &:first-child {
    @include breakpoint(overlarge, large) {
      width: 38%;
    }
    @include breakpoint(medium, small, mini) {
      width: 60%;
    }
    padding-left: 1em;
    width: 40.32%;
  }

  &:nth-child(2) {
    @include breakpoint(medium, small, mini) {
      display: none;
    }
  }

  &:nth-child(n+3) {
    @include breakpoint(medium, small, mini) {
      display: none;
    }
  }
}

.userRow__column-avatar {
  @include avatarSize-mini;
  display: block;
  float: left;
  margin-right: 0.25em;
}

.userRow-mobile {
  @include breakpoint(huge, overlarge, large) {
    display: none;
  }
  @include breakpoint(mini) {
    height: auto;
  }
  background-color: $white;
  box-shadow: 0 1pt 0 0 rgba($grey-warm, 0.15);
  cursor: pointer;
  display: block;
  height: 2.5rem;
  margin-bottom: 6px;
  width: 100%;
}

.userRow__column-mobile {
  @include p-meta;
  @include breakpoint(huge, overlarge, large) {
    display: none;
  }
  display: inline-block;
  padding: 0.85em 0;

  .userRow & {
    padding-right: 1.25em;
    text-align: right;
    width: 39%;
  }

  .userRow-mobile & {
    @include ff_adelle-bold;
    @include breakpoint(medium, small) {
      .break {
        display: inline-block;
      }
    }
    @include breakpoint(mini) {
      height: 100%;
      vertical-align: top;

      .break {
        display: block;
      }
    }
    @media screen and (max-width: 364px) {
      height: 4.9rem;
      vertical-align: top;
      
      .break {
        display: block;
      }
    }
    padding-left: 1em;
    width: 32%;
    height: 100%;

    &:nth-child(n+2) {
      border-left: 2px solid rgba($grey-warm, 0.1);
    }

    &:nth-child(1) {
      color: $green-dark;
    }
    &:nth-child(2) {
      color: $green-mid;
    }
    &:nth-child(3) {
      color: $green-light;
    }
  }
}
