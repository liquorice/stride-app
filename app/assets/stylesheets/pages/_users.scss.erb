// All Users Search Bar Styles

.users__search {
  background-color: $white;
  height: 3rem;
  position: relative;
  width: 100%;
}

  .users__search-form {
    display: block;
    height: 100%;
    position: relative;
    width: 100%;

    label {
      background-color: $white;
      bottom: 0;
      height: 100%;
      margin: auto 0;
      position: absolute;
      right: 0;
      top: 0;
      width: 1.895rem;
      z-index: 10;

      .users__search-clear {
        @include icon__clear;
        @include breakpoint(medium) {
          margin-top: 0.9rem;
        }
        @include breakpoint(small, mini) {
          margin-top: 0.85rem;
        }
        background-color: $bg-dark;
        border-radius: 50%;
        cursor: pointer;
        float: right;
        height: 20px;
        margin-right: 0.8421rem;
        margin-top: 1rem;
        position: relative;
        text-indent: -5000px;
        width: 20px;
      }
    }

    input {
      @include h3-short;
      @include ff_adelle-regular;
      background-color: $white;
      display: block;
      line-height: 3rem;
      max-width: 100%;
      padding: 0 2.105rem 0 0.9474rem;
      width: 100%;
      z-index: 5;
    }
  }

// All Users View Styles

.usersTable {
  margin-bottom: 3.368rem;
  width: 100%;

  &:last-child {
    @include breakpoint (small, mini) {
      margin-bottom: 4.2rem;
    }
    margin-bottom: 6.316rem;
  }
}
  
  h3 {
    .usersHeader &,
    .usersRow & {
      @include breakpoint(overlarge, large) {
        width: 38%;
      }
      width: 40.32%;
      display: inline-block;
    }
  }

  h4 {
    .usersHeader &,
    .usersRow & {
      @include p-meta;
      @include breakpoint(overlarge, large) {
        width: 15%;
      }
      @include breakpoint(medium, small, mini) {
        display: none;
      }
      color: $grey-warm;
      display: inline-block;
      width: 14.56%;
    }
  }

  .usersHeader {
    display: block;
    padding-bottom: 0.5789rem;

    h3 {
      @include h3-short;
      @include breakpoint(medium, small, mini) {
        width: 100%;
      }
    }

    h3 > span {
      @include p-meta;
      color: $grey-warm;
      display: inline-block;
      padding-left: 4px;
    }

    h4 {
      @include ff_adelle-bold;
    }
  }

  .usersRow,
  .mobile-usersRow {
    background-color: $white;
    border-bottom: 1px solid rgba($grey-warm, 0.15);
    cursor: pointer;
    display: block;
    height: auto;
    margin-bottom: 3px;
    line-height: 2.211rem;

    h3 {
      @include p-meta;
      @include ff_adelle-bold;
      @include breakpoint(medium, small) {
        width: 72%;
      }
      @include breakpoint(mini) {
        width: 60%;
      }
      color: $grey-warm;
      padding-left: 1em;
      line-height: 2.211rem;
    }
  }

    .usersRow {
      @include breakpoint(medium, small, mini) {
        border-bottom: 1px solid rgba($grey-warm, 0.1);
        box-shadow: none;
        margin-bottom: 0;
      }
    }

      .usersRow-avatar {
        @include avatar-mini;
        display: inline-block;
        margin-right: 0.5789rem;
        vertical-align: text-top;
      }

// All Users View Mobile Only Styles

.mobile-usersRow,
.mobile-usersRow__column {
  display: none;
}

.mobile-usersRow {
  @include breakpoint(mini, small, medium) {
    display: block;
  }
  @include breakpoint(mini) {
    padding: 0.2rem 1em;
    line-height: 1;
  }
  background-color: $white;
  cursor: pointer;
  width: 100%;
  padding-left: 1em;
}

.mobile-usersRow__column {
  @include p-meta;
  @include breakpoint(mini, small, medium) {
    display: inline-block;
  }
  color: $grey-warm;
  line-height: 2.211rem;

  .mobile-usersRow &:nth-child(1),
  .mobile-usersRow &:nth-child(2),
  .mobile-usersRow &:nth-child(3) {
    @include breakpoint(mini) {
      strong {
        display: block;
      }
      line-height: 1.4;
    }
  }

  &:nth-child(1) {
    @include breakpoint(mini) {
      width: 28%;
    }
    color: $green-dark;
    width: 36%;
  }
  &:nth-child(2) {
    @include breakpoint(mini) {
      width: 32%;
    }
    color: $green-mid;
    width: 35%;
  }
  &:nth-child(3) {
    color: $green-light;
  }
}
