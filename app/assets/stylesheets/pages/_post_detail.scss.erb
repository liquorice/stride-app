.postDetails {
  @include breakpoint(medium) {
    height: 7.4rem;
  }
  @include breakpoint(mini, small) {
    height: 6.9rem;
  }
  background: $white;
  height: 4.9rem;
  margin-bottom: 6px;
}

.postDetails__mobile {
  @include breakpoint(medium) {
    display: block;
    float: left;
  }
  @include breakpoint(mini, small) {
    display: block;
    height: 2rem;
    float: left;
    padding: 0.45rem 0 0 1.65rem;
  }
  display: none;
  height: 2.5rem;
  width: 100%;
  padding: 0.7rem 0 0.7rem 1.65rem;
}

.postDetails__mobile-createdDate {
  @include p-meta;
  color: $green-light;
  display: inline;
  margin-right: 0.15rem;
}

.postDetails__mobile-views {
  @include p-meta;
  color: $green-mid;
  display: inline;
  margin-right: 0.15rem;
}

.postDetails__mobile-replies {
  @include p-meta;
  color: $green-dark;
  display: inline;
  margin-right: 0.15rem;
}


.postDetails__createdBy {
  @include breakpoint(mini, small, medium) {
    width: 100%;
    padding: 0.7rem 0 0.7rem 1.65rem;
  }
  background-color: $bg-dark;
  display: block;
  float: left;
  height: 4.9rem;
  padding: 0.9rem 0 0 1.65rem;
  width: 55.8%;
}

  .postDetails__createdBy-avatar {
    @include breakpoint(small, medium) {
      height: 57px;
      width: 57px;
    }
    @include breakpoint(mini) {
      height: 47px;
      width: 47px;
    }
    display: block;
    float: left;
    height: 60px;
    width: 60px;
  }

  .postDetails__createdBy-user {
    @include p-meta;
    @include breakpoint(mini, small, medium) {
      padding: 0.2rem 1rem 0 0.85rem;
      height: auto;
    }
    color: $grey-warm;
    display: block;
    float: left;
    height: 4.9rem;
    padding: 0.2rem 1rem 0 0.85rem;

    h2 {
      @include h2-regular;
      color: $grey-warm;
      font-size: 1.65em;
      line-height: 1.5;
    }
  }

.postDetails__createdDate {
  @include p-meta;
  @include breakpoint(mini, small, medium) {
    display: none;
  }
  border-left: 2px solid rgba($grey-warm, 0.1);
  color: $green-light;
  display: block;
  float: left;
  height: 4.9rem;
  padding: 1.1rem 0 0 0.85rem;
  width: 18.2%;

  h2 {
    @include h2-regular;
    color: $green-light;
    font-size: 1.65em;
    line-height: 1.5;
  }
}

.postDetails__views {
  @include p-meta;
  @include breakpoint(mini, small, medium) {
    display: none;
  }
  border-left: 2px solid rgba($grey-warm, 0.1);
  color: $green-mid;
  display: block;
  float: left;
  height: 4.9rem;
  padding: 1.1rem 0 0 0.85rem;
  width: 13%;

  h2 {
    @include h2-regular;
    color: $green-mid;
    font-size: 1.65em;
    line-height: 1.5;
  }
}

.postDetails__replies {
  @include p-meta;
  @include breakpoint(mini, small, medium) {
    display: none;
  }
  border-left: 2px solid rgba($grey-warm, 0.1);
  color: $green-dark;
  display: block;
  float: left;
  height: 4.9rem;
  padding: 1.1rem 0 0 0.85rem;
  width: 13%;

  h2 {
    @include h2-regular;
    color: $green-dark;
    font-size: 1.65em;
    line-height: 1.5;
  }
}