.postDetails {
  background: $white;
  height: 4.9rem;
  margin-bottom: 6px;
}

.postDetails__createdBy {
  background-color: $bg-dark;
  display: block;
  float: left;
  height: 4.9rem;
  padding: 0.9rem 0 0 1.65rem;
  width: 55.8%;
}

  .postDetails__createdBy-avatar {
    display: block;
    float: left;
    height: 60px;
    width: 60px;
  }

  .postDetails__createdBy-user {
    @include p-meta;
    color: $grey-warm;
    display: block;
    float: left;
    height: 4.9rem;
    padding: 0.2rem 1rem 0 0.85rem;

    h2 {
      @include h2-regular;
      color: $grey-warm;
      font-size: 1.65em;
      line-height: 1.5;
    }
  }

.postDetails__createdDate {
  @include p-meta;
  border-left: 2px solid rgba($grey-warm, 0.1);
  color: $green-light;
  display: block;
  float: left;
  height: 4.9rem;
  padding: 1.1rem 0 0 0.85rem;
  width: 18.2%;

  h2 {
    @include h2-regular;
    color: $green-light;
    font-size: 1.65em;
    line-height: 1.5;
  }
}

.postDetails__views {
  @include p-meta;
  border-left: 2px solid rgba($grey-warm, 0.1);
  color: $green-mid;
  display: block;
  float: left;
  height: 4.9rem;
  padding: 1.1rem 0 0 0.85rem;
  width: 13%;

  h2 {
    @include h2-regular;
    color: $green-mid;
    font-size: 1.65em;
    line-height: 1.5;
  }
}

.postDetails__replies {
  @include p-meta;
  border-left: 2px solid rgba($grey-warm, 0.1);
  color: $green-dark;
  display: block;
  float: left;
  height: 4.9rem;
  padding: 1.1rem 0 0 0.85rem;
  width: 13%;

  h2 {
    @include h2-regular;
    color: $green-dark;
    font-size: 1.65em;
    line-height: 1.5;
  }
}