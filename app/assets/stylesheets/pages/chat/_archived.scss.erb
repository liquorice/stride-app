// Archived Chats Listing Styles

.archiveList {
  padding-bottom: 6.632rem;
}

.chatArchive__preview {
  background-color: $white;
  border-bottom: 1px solid rgba($grey-warm, 0.15);
  display: block;
  margin-bottom: 6px;
  padding: 1.053rem 1.579rem 1.526rem 1.316rem;
  width: 100%;

  .text__main {
    padding-bottom: 0.7895rem;

    h3 {
      @include h2-level1;
      padding-bottom: 5px;
    }

    p {
      @include p-short;
    }
  }

  .text__sub {
    border-top: 1px solid rgba($grey-warm, 0.1);
    padding-top: 0.9474rem;

    p {
      @include p-meta;
      color: $grey-warm;
    }
  }

  & + .pagination {
    @include breakpoint(mini) {
      margin-top: 1.467rem;
    }
    margin-top: 1.053rem;
  }
}

// Archived chat view


.chatArchive {
  padding-bottom: 2rem;
}
  .mobile-chatArchive__row {
    @include breakpoint (small, mini) {
      display: inline-block;
    }
    background-color: $white;
    display: none;
    width: 100%;

    &:nth-child(n+3) {
      border-top: 1px solid rgba($grey-warm, 0.1);
    }

    .chatArchive__col {
      color: $grey-warm !important;
      &:last-child {
        float: right !important;
        padding-right: 1.526rem !important;
        width: 33% !important;
      }
    }
  }
  
  .chatArchive__row {
    background-color: $white;
    width: 100%;

    &:first-child {
      @include breakpoint (small, mini) {
        display: none;
      }
    }

    &:nth-child(n+2) {
      border-top: 1px solid rgba($grey-warm, 0.1);
      padding: 0.8947rem 1.632rem 0.8947rem 1.316rem;
    }

    p {
      @include p-meta;
      color: $grey-warm;

      &.desc {
        @include p-short;
        padding-bottom: 0.7895rem;
      }

      &.note__title {
        padding: 0.316rem 0;
      }

      &.note__text {
        padding: 0.211rem 0 0.6316rem;
      }
    }
  }

    .chatArchive__col {
      background-color: $white;
      display: inline-block;

      &:first-child {
        @include breakpoint (overlarge) {
          padding: 1.158rem 1.111rem 1.111rem 1.526rem;
        }
        @include breakpoint (large) {
          padding: 1.158rem 0.911rem 1.111rem 1.316rem;
        }
        @include breakpoint (medium) {
          padding: 1.108rem 0.511rem 1.111rem 1.326rem;
        }
        @include breakpoint (small, mini) {
          margin-bottom: 0;
          padding: 1.158rem 0 1.211rem 1.526rem;
        }
        padding: 1.158rem 1.211rem 1.111rem 1.526rem;
        margin-bottom: 0.1rem;
      }

      &:nth-child(n+2) {
        @include breakpoint (overlarge) {
          padding: 1.158rem 1.532rem 1.111rem 0.7895rem;
        }
        @include breakpoint (large) {
          padding: 1.158rem 1.316rem 1.111rem 0.6895rem;
        }
        @include breakpoint (medium) {
          padding: 1.108rem 0.532rem 1.111rem 0.4895rem;
        }
        @include breakpoint (small, mini) {
          margin-bottom: 0;
          padding: 1.158rem 0 1.211rem 0;
        }
        margin-bottom: 0.1rem;
        padding: 1.158rem 1.632rem 1.111rem 0.7895rem;
      }

      &:nth-child(n+1):nth-child(-n+4) {
        @include breakpoint (small, mini) {
          border-right: none;
          float: none;
          width: 32%;
        }
        border-right: 1px solid rgba($grey-warm, 0.1);
        float: left;
      }

      &.light {
        @include p-meta;
        color: $green-light;
        h2 {
          @include h2-level1;
          @include breakpoint (medium) {
            font-size: 1.053rem;
          }
          color: $green-light;
          padding-top: 3px;
        }
      }

      &.mid {
        @include p-meta;
        color: $green-mid;
        h2 {
          @include h2-level1;
          @include breakpoint (medium) {
            font-size: 1.053rem;
          }
          color: $green-mid;
          padding-top: 3px;
        }
      }

      &.dark {
        @include p-meta;
        color: $green-dark;
        h2 {
          @include h2-level1;
          @include breakpoint (medium) {
            font-size: 1.053rem;
          }
          color: $green-dark;
          padding-top: 3px;
        }
      }
    }


