// Archived Chats and Notification History Listing Styles

.archiveList {
  padding-bottom: 6.632rem;
}

.chatArchive__preview,
.notificationHistory {
  background-color: $white;
  border-bottom: 1px solid rgba($grey-warm, 0.15);
  display: block;
  margin-bottom: 6px;
  padding: 1.053rem 1.579rem 1.526rem 1.316rem;
  width: 100%;

  .text__main {
    padding-bottom: 0.7895rem;

    h3 {
      @include h2-level1;
      padding-bottom: 5px;
    }

    p {
      @include p-short;
    }
  }

  .text__sub {
    border-top: 1px solid rgba($grey-warm, 0.1);
    padding-top: 0.9474rem;

    p {
      @include p-meta;
      color: $grey-warm;
      a {
        @include links;
      }
    }
  }

  & + .pagination {
    @include breakpoint(mini) {
      margin-top: 1.467rem;
    }
    margin-top: 1.053rem;
  }
}

// Archived chat view

.chatArchive {
  padding-bottom: 2rem;
}

  .mobile-chatArchive__row {
    @include breakpoint (small, mini) {
      display: inline-block;
    }
    background-color: $white;
    display: none;
    width: 100%;

    &:nth-child(n+3) {
      border-top: 1px solid rgba($grey-warm, 0.1);
    }

    .chatArchive__col {
      color: $grey-warm !important;
      &:last-child {
        float: right !important;
        padding-right: 1.526rem !important;
        width: 33% !important;
      }
    }
  }
  
  .chatArchive__row {
    background-color: $white;
    width: 100%;

    &:first-child {
      @include breakpoint (small, mini) {
        display: none;
      }
    }

    &:nth-child(n+2) {
      border-top: 1px solid rgba($grey-warm, 0.1);
      padding: 0.8947rem 1.632rem 0.8947rem 1.316rem;
    }

    p {
      @include p-meta;
      color: $grey-warm;

      a {
        @include links;
      }

      &.desc {
        @include p-short;
        padding-bottom: 0.7895rem;
      }

      &.note__title {
        padding: 0.316rem 0;
      }

      &.note__text {
        padding: 0.211rem 0 0.6316rem;
        white-space: pre-wrap;
      }
    }

    form {
      button {
        @include btn-meta;
        @include btn-primary;
        @include ff_adelle-bold;
        @include breakpoint (small, mini) {
          margin-left: 16px;
          margin-top: 16px;
        }
        cursor: pointer;
        margin-top: 13px;
      }

      .btn-cancel,
      .btn-edit {
        @include p-meta;
        @include links;
        border-bottom: none;
        cursor: pointer;
        width: 5.421rem;
        &:hover {
          box-shadow: none;
        }
      }

      .btn-cancel {
        margin-left: 6px;
      }

      .btn-edit {
        &:before {
          @include icon__edit-blue;
          @include breakpoint (small, mini) {
            height: 9px;
            margin: 5px 3px 0 0;
            width: 9px;
          }
          content: " ";
          float: left;
          height: 11px;
          margin: 2px 4px 0 0;
          width: 11px;
        }
      }
    }

    form.edit {
      & > .btn-edit.view-edit {
        display: block;
      }

      & > .view-edit {
        display: inline-block;
      }

      & > .view-default {
        display: none;
      }
    }

    .btn-edit.view-default {
      display: block;
    }

    .view-default,
    button.view-default,
    p.view-default {
      display: inline-block;
    }

    .view-edit,
    button.view-edit,
    b.view-edit {
      display: none;
    }
  }

    .chatArchive__col {
      background-color: $white;
      display: inline-block;

      &:first-child {
        @include breakpoint (overlarge) {
          padding: 1.158rem 1.111rem 1.111rem 1.526rem;
        }
        @include breakpoint (large) {
          padding: 1.158rem 0.911rem 1.111rem 1.316rem;
        }
        @include breakpoint (medium) {
          padding: 1.108rem 0.511rem 1.111rem 1.326rem;
        }
        @include breakpoint (small, mini) {
          margin-bottom: 0;
          padding: 1.158rem 0 1.211rem 1.526rem;
        }
        margin-bottom: 0.1rem;
        padding: 1.158rem 1.211rem 1.111rem 1.526rem;
      }

      &:nth-child(n+2) {
        @include breakpoint (overlarge) {
          padding: 1.158rem 1.532rem 1.111rem 0.7895rem;
        }
        @include breakpoint (large) {
          padding: 1.158rem 1.316rem 1.111rem 0.6895rem;
        }
        @include breakpoint (medium) {
          padding: 1.108rem 0.532rem 1.111rem 0.4895rem;
        }
        @include breakpoint (small, mini) {
          margin-bottom: 0;
          padding: 1.158rem 0 1.211rem 0;
        }
        margin-bottom: 0.1rem;
        padding: 1.158rem 1.632rem 1.111rem 0.7895rem;
      }

      &:nth-child(n+1):nth-child(-n+4) {
        @include breakpoint (small, mini) {
          border-right: none;
          float: none;
          width: 32%;
        }
        border-right: 1px solid rgba($grey-warm, 0.1);
        float: left;
      }

      &.light {
        @include p-meta;
        color: $green-light;
        h2 {
          @include h2-level1;
          @include breakpoint (medium) {
            font-size: 1.053rem;
          }
          color: $green-light;
          padding-top: 3px;
        }
      }

      &.mid {
        @include p-meta;
        color: $green-mid;
        h2 {
          @include h2-level1;
          @include breakpoint (medium) {
            font-size: 1.053rem;
          }
          color: $green-mid;
          padding-top: 3px;
        }
      }

      &.dark {
        @include p-meta;
        color: $green-dark;
        h2 {
          @include h2-level1;
          @include breakpoint (medium) {
            font-size: 1.053rem;
          }
          color: $green-dark;
          padding-top: 3px;
        }
      }
    }

.chatHistory {
  padding-bottom: 6.316rem; 
}

.chatHistory__bar {
  background-color: $grey-cool;
  height: 2.053rem;
  margin-bottom: 3px;
  z-index: 20;

  &.fixed {
    @include breakpoint(huge, overlarge) {
      top: $toolbar-overlarge;
    }
    @include breakpoint(large, medium) {
      top: calc(#{$toolbar-medium} + #{$navigation-medium});
    }
    @include breakpoint(small, mini) {
      top: calc(#{$toolbar-small} + #{$navigation-medium});
    }
    position: fixed;
  }
}

  .chatHistory__bar-bottom,
  .chatHistory__bar-top {
    @include p-meta;
    color: $blue-light;
    cursor: pointer;
    display: inline-block;
    height: 2.053rem;
    line-height: 2.053rem;

    &:hover {
      color: $links;
      .icon__arrow * {
        fill: $links;
      }
    }
  }

  .chatHistory__bar-bottom {
    padding-left: 2.053rem;
  }

  .chatHistory__bar-top {
    background-color: mix($grey-cool, $white, 90%);
    float: right;
    text-align: center;
    width: 5.737rem;
  }

    .icon__arrow {
      display: inline-block;
      height: 0.4737rem;
      width: 0.4211rem;

      .chatHistory__bar-top & {
        transform: rotate(180deg);
      }
    }

.chatHistory__message {
  @include breakpoint(small, medium) {
    min-height: calc(52px + 0.3158rem);
  }
  @include breakpoint(mini) {
    min-height: calc(47px + 0.3158rem);
  }
  background-color: $white;
  min-height: calc(60px + 0.3158rem);
  padding-bottom: 1.211rem;

  &:nth-child(2) {
    padding-top: 1.579rem;
  }
}

  .chatHistory__message-avatar {
    @include avatar-large;
    display: inline-block;
    float: left;
    margin-left: 1.789rem;
    margin-top: 0.3158rem;
  }

  .chatHistory__message-text {
    @include breakpoint(small, medium) {
      width: calc(100% - 52px - 1.789rem);
    }
    @include breakpoint(mini) {
      width: calc(100% - 47px - 1.789rem);
    }
    display: inline-block;
    padding: 0 2.053rem 0 0.8421rem;
    width: calc(100% - 60px - 1.789rem);

    p {
      @include p-short;
    }

    p.meta {
      @include p-meta;
      color: $grey-warm;
      padding-top: 0.2105rem;
      a {
        @include links;
        @include ff-adelle-bold;
        border-bottom: none;
        cursor: pointer;
      }
    }

    a.anchor {
      @include breakpoint(huge, overlarge) {
        top: calc(-#{$toolbar-overlarge} - 2.053rem);
      }
      @include breakpoint(large, medium) {
        top: calc(-#{$toolbar-medium} - #{$navigation-medium} - 2.053rem);
      }
      @include breakpoint(small, mini) {
        top: calc(-#{$toolbar-small} - #{$navigation-medium} - 2.053rem);
      }
      display: block;
      position: relative;
      visibility: hidden;
    }
  }
