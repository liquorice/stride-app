// Chat Bar Styles

.chatbar {
  width: 100%;
  border-bottom: 2px solid rgba($grey-warm, 0.2);
}

  .chatbar.active .chatbar__title {
    .heading__chat-small {
      path#bolt {
        fill: $green-light;
      }
    }
  }

  .chatbar__title {
    @include breakpoint (medium) {
      padding: 0.8421rem 0 0.4737rem 1rem;
    }
    @include breakpoint (mini) {
      height: 40px;
      padding: 0.8421rem 0 0.4737rem 0.8rem;
      width: calc(100% - 7.8rem - 40px);
    }
    @include retina() {
      background:
        url('header-chat@2x.png') center center repeat,
        url('noise-200x200@2x.png') center center repeat;
      background-color: $grey-cool;
      background-size: 660px 235px, 283px 283px;
    }

    background:
      url('header-chat.png') center center repeat,
      url('noise-200x200.png') center center repeat;
    background-color: $grey-cool;
    background-size: 660px 235px, 283px 283px;
    float: left;
    height: 3.421rem;
    padding: 0.8421rem 0 0.4737rem 2.053rem;
    width: calc(100% - 7.8rem - 3.421rem);

    .heading__chat-small {
      @include breakpoint (mini) {
        height: 16px;
        width: 78.189px;
      }
      float: left;
      height: 1.842rem;
      width: 9.053rem;

      path#bolt {
        fill: $primary;
      }
    }
  }

    .mobile-btn__end {
      @include breakpoint (small, mini) {
        @include btn-meta;
        @include btn-alert;
        @include ff-adelle-bold;
        cursor: pointer;
        display: inline-block;
        margin: 1.6rem 1.333rem 0;
      }
      display: none;
    }

    .btn__start,
    .btn__end {
      @include btn-meta;
      @include ff-adelle-bold;
      @include breakpoint (small, mini) {
        display: none;
      }
      cursor: pointer;
      display: block;
      float: left;
      margin: 4px 0 0 1rem;
    }

    .btn__start {
      @include btn-primary;
    }

    .btn__end {
      @include btn-alert;
    }

  .chatbar__time {
    @include breakpoint (mini) {
      height: 40px;
    }
    background-color: $grey-cool;
    display: inline-block;
    float: left;
    height: 3.421rem;
    width: 7.8rem;

    p {
      @include p-meta;
      @include breakpoint (mini) {
        line-height: 40px;
      }
      color: $white;
      line-height: 3.421rem;
      text-align: center;
    }
  }

  .btn__chatbar {
    @include breakpoint (mini) {
      height: 40px;
      padding-left: calc((40px/2) - (6px/2));
      padding-top: calc((40px/2) - (12.12px/2));
      width: 40px;
    }
    background-color: $black;
    cursor: pointer;
    display: inline-block;
    height: 3.421rem;
    padding-left: calc((3.421rem/2) - (0.5263rem/2));
    padding-top: calc((3.421rem/2) - (1rem/2));
    width: 3.421rem;

    .icon__info {
      @include breakpoint (mini) {
        height: 12.12px;
        width: 6px;
      }
      height: 1rem;
      width: 0.5263rem;

      & > * {
        fill: $blue-light;
      }
    }
  }

    .btn__chatbar:hover,
    .btn__chatbar.expanded {
      background-color: $white;
      transition: all 200ms ease-in;
      .icon__info > * {
        fill: $links;
      }

      & ~ .chatbar__info {
        opacity: 1;
        transform: translateY(0);
        transition: all 200ms ease-out;
        visibility: visible;
        z-index: 100;
      }
    }

  .chatbar__info {
    background-color: $white;
    border-bottom: 3px solid rgba($grey-warm, 0.08);
    min-width: 100%;
    opacity: 0;
    padding: 1.421rem 2.053rem 1.789rem;
    position: absolute;
    transform: translateY(-5px);
    visibility: hidden;

    p {
      @include p-short;
      padding-bottom: 0.4211rem;

      &.moderator {
        @include p-meta;
        color: $grey-warm;
        padding-bottom: 0.6rem;
      }
    }
  }
