// Chat Bar Styles (chat not started)

.chatbar {
  width: 100%;
  border-bottom: 2px solid rgba($grey-warm, 0.2);
}

  .chatbar__title {
    @include breakpoint (medium) {
      padding: 0.8421rem 0 0.4737rem 1rem;
    }
    @include breakpoint (mini) {
      height: 40px;
      padding: 0.8421rem 0 0.4737rem 0.8rem;
      width: calc(100% - 7.8rem - 40px);
    }
    @include retina() {
      background:
        url('header-chat@2x.png') center center repeat,
        url('noise-200x200@2x.png') center center repeat;
      background-color: $grey-cool;
      background-size: 660px 235px, 283px 283px;
    }

    background:
      url('header-chat.png') center center repeat,
      url('noise-200x200.png') center center repeat;
    background-color: $grey-cool;
    background-size: 660px 235px, 283px 283px;
    float: left;
    height: 3.421rem;
    padding: 0.8421rem 0 0.4737rem 2.053rem;
    width: calc(100% - 7.8rem - 3.421rem);

    .heading__chat-small {
      @include breakpoint (mini) {
        height: 16px;
        width: 78.189px;
      }
      float: left;
      height: 1.842rem;
      width: 9.053rem;

      path#bolt {
        fill: $primary;
      }
    }
  }

    .btn__start {
      @include btn-meta;
      @include btn-primary;
      @include ff-adelle-bold;
      @include breakpoint (small, mini) {
        display: none;
      }
      cursor: pointer;
      display: block;
      float: left;
      margin: 4px 0 0 1rem;
    }

  .chatbar__time {
    @include breakpoint (mini) {
      height: 40px;
    }
    background-color: $grey-cool;
    display: inline-block;
    float: left;
    height: 3.421rem;
    width: 7.8rem;

    p {
      @include p-meta;
      @include breakpoint (mini) {
        line-height: 40px;
      }
      color: $white;
      line-height: 3.421rem;
      text-align: center;
    }
  }

  .btn__chatbar {
    @include breakpoint (mini) {
      height: 40px;
      padding-left: calc((40px/2) - (6px/2));
      padding-top: calc((40px/2) - (12.12px/2));
      width: 40px;
    }
    background-color: $black;
    cursor: pointer;
    display: inline-block;
    height: 3.421rem;
    padding-left: calc((3.421rem/2) - (0.5263rem/2));
    padding-top: calc((3.421rem/2) - (1rem/2));
    width: 3.421rem;

    .icon__info {
      @include breakpoint (mini) {
        height: 12.12px;
        width: 6px;
      }
      height: 1rem;
      width: 0.5263rem;

      & > * {
        fill: $blue-light;
      }
    }
  }

    .btn__chatbar:hover,
    .btn__chatbar.expanded {
      background-color: $white;
      transition: all 200ms ease-in;
      .icon__info > * {
        fill: $links;
      }

      & ~ .chatbar__info {
        opacity: 1;
        transform: translateY(0);
        transition: all 200ms ease-out;
        visibility: visible;
      }
    }

  .chatbar__info {
    background-color: $white;
    border-bottom: 3px solid rgba($grey-warm, 0.08);
    opacity: 0;
    position: absolute;
    transform: translateY(-5px);
    visibility: hidden;

    p {
      @include p-meta;
      padding: 1rem 1.333rem;
    }
  }

// Chat Widget Area Styles (chat not started)

.chatArea {
  background-color: $bg-dark;
  height: 11.33rem;
  margin-bottom: 38px;
  text-align: center;

  p {
    @include p-meta;
    color: $grey-warm;
    line-height: 11.33rem;
  }
}

  .img__launch {
    @include breakpoint (small, mini) {
      display: inline-block;
    }
    display: none;
    height: 5.2rem;
    margin-top: calc((11.33rem/2) - (5.2rem/2));
    width: 5.2rem;

    .bg {
      fill: $primary;
    }

    &:hover {
      .bg {
        fill: $primary-dark;
        transition: all 300ms ease-out;
      }
      .arrow-top {
        transform: translateY(-5px) translateX(5px);
        transition: all 300ms ease-in-out;
      }
      .arrow-bottom {
        transform: translateY(5px) translateX(-5px);
        transition: all 300ms ease-in-out;
      }
    }
  }
