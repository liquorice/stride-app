.post {
  background-color: $white;
  display: block;
  margin-bottom: 0.35rem;
  position: relative;

  &[data-hidden] {
    background: rgba($bg-dark, 0.5);
    border-left: 0.37rem solid #36545c;
  }
}

  .permalinkAnchor {
    font-size: 0px;
    height: 0px;
    overflow: hidden;
    position: absolute;
    width: 0px;

    // TODO
    // This is the amount to scroll the page down to compensate
    // for the floating header, and should be breakpoint-aware
    top: -60px;
  }

  .post__hidden {
    @include h3-regular;
    background-color: $bg-dark;
    font-size: 1rem;
    line-height: 1;
    margin-bottom: 0;
    padding: 1rem 2.5rem 1.24rem 1.23rem;
    width: 100%;
  }

  .post__details {
    height: 5rem;
    padding: 1.15rem 0 0 1.65rem;
    position: relative;
    width: 100%;
  }

    .post__details-avatar {
      @include breakpoint(small, medium) {
        height: 52px;
        width: 52px;
      }
      @include breakpoint(mini) {
        height: 47px;
        width: 47px;
      }
      display: block;
      float: left;
      height: 60px;
      width: 60px;

      .post[data-hidden] & {
        opacity: 0.5;
      }
    }

    .post__details-text {
      @include p-meta;
      height: 5rem;
      margin-left: 60px;
      padding: 1rem 1rem 0 0.85rem;

      a {
        border-bottom: 0;
      }

      a.permalink {
        @include p-meta;

        &:hover {
          box-shadow: none;
        }
      }

      .post[data-hidden] & {
        opacity: 0.5;
      }
    }

    .post__moderation {
      height: 1.3rem;
      position: absolute;
      right: 1.5rem;
      top: 2rem;
      width: 1.3rem;
    }

      .post__optionButton {
        content: url("<%= asset_data_uri 'icons/icon_dots-grey.svg' %>");
        cursor: pointer;
        height: 1.3rem;
        position: absolute;
        top: 0;
        width: 1.3rem;
      }

      .post__optionMenu {
        background-color: $white;
        border-radius: 3px;
        box-shadow: 0px 0px 6px 2px rgba(0,0,0,0.15);
        opacity: 0;
        position: absolute;
        right: -0.16rem;
        top: 1.66rem;
        transition: all 200ms ease-out;
        visibility: hidden;
        z-index: 1000;

        .post__moderation:hover & {
          opacity: 1;
          visibility: visible;
        }

        &:before {
          border-color: transparent transparent $white transparent;
          border-style: solid;
          border-width: 0.4rem;
          content: "";
          height: 0;
          position: absolute;
          right: 0.5rem;
          top: -0.7rem;
          width: 0;
        }

        a {
          @include p-meta;
          border: 0;
          color: $grey-warm;
          display: block;
          min-width: 8.75rem;
          padding: 0.65rem;
        }

      }

  .post__content {
    margin-bottom: 0.5rem;
    margin-top: 0.25rem;
    overflow: hidden;
    padding: 0 2.5rem 0 1.65rem;
    position: relative;
    transition: max-height 0.5s ease;

    p {
      @include p-regular;
      margin-bottom: 0.3rem;
    }

    .post.needsCropping & {
      max-height: 400px;

      &:after {
        background-image: linear-gradient(top, rgba($white, 0) 0%, rgba($white, 1) 100%);
        bottom: 0;
        content: '';
        display: block;
        height: 60px;
        position: absolute;
        right: 0;
        width: 100%;
      }
    }

    .post[data-hidden].needsCropping &:after {
       background-image: linear-gradient(top, rgba($bg-dark, 0) 0%, rgba($bg-dark, 0.5) 100%) !important;
    }

    .post.needsCropping.expanded & {
      max-height: 3000px;

      &:after {
        background-image: none !important;
      }
    }

    .post[data-hidden] & {
      opacity: 0.5;
    }
  }

    .post__buttons {
      padding: 0.55rem 0 1.75rem 1.65rem;
    }

    .post__showMore,
    .post__showLess {
      @include button-midLevel-meta;
      @include breakpoint(huge, overlarge, large, medium, small, mini) {
        line-height: 1.4;
        padding-top: 0.357em;
      }
      cursor: pointer;
      display: none;
      margin-right: 0.15rem;
    }

    .post__showMore {
      .post.needsCropping & {
        display: inline-block;
      }
      .post.needsCropping.expanded & {
        display: none;
      }
    }

    .post__showLess {
      .post.needsCropping.expanded & {
        display: inline-block;
      }
    }

    .post__quote {
      @include button-meta;
      @include breakpoint(huge, overlarge, large, medium, small, mini) {
        line-height: 1.4;
        padding-top: 0.357em;
      }
      margin: 0;
    }
