.post {
  background-color: $white;
  display: block;
  margin-bottom: 0.35rem;
  position: relative;

  &[data-hidden] {
    background: rgba($bg-dark, 0.5);
    border-left: 0.37rem solid #36545c;
  }
}

  .permalinkAnchor {
    width: 0px;
    height: 0px;
    overflow: hidden;
    font-size: 0px;
    position: absolute;

    // TODO
    // This is the amount to scroll the page down to compensate
    // for the floating header, and should be breakpoint-aware
    top: -60px;
  }

  .post__hidden {
    @include h3-regular;
    background-color: $bg-dark;
    font-size: 1rem;
    line-height: 1;
    margin-bottom: 0;
    padding: 1rem 2.5rem 1.24rem 1.23rem;
    width: 100%;
  }

  .post__details {
    position: relative;
    height: 5rem;
    width: 100%;
    padding: 1.15rem 0 0 1.65rem;
  }

    .post__details-avatar {
      @include breakpoint(small, medium) {
        height: 52px;
        width: 52px;
      }
      @include breakpoint(mini) {
        height: 47px;
        width: 47px;
      }
      display: block;
      float: left;
      height: 60px;
      width: 60px;
    }

    .post__details-text {
      @include p-meta;
      height: 5rem;
      padding: 1rem 1rem 0 0.85rem;
      margin-left: 60px;

      a {
        border-bottom: 0;
      }

      a.permalink {
        @include p-meta;

        &:hover {
          box-shadow: none;
        }
      }
    }

    .post__moderation {
      height: 1.3rem;
      position: absolute;
      right: 1.5rem;
      top: 2rem;
      width: 1.3rem;
    }

      .post__optionButton {
        content: url("<%= asset_data_uri 'icons/icon_dots-grey.svg' %>");
        cursor: pointer;
        height: 1.3rem;
        position: absolute;
        top: 0;
        width: 1.3rem;
      }

      .post__optionMenu {
        background-color: $white;
        border-radius: 3px;
        box-shadow: 0px 0px 6px 2px rgba(0,0,0,0.15);
        opacity: 0;
        position: absolute;
        right: -0.16rem;
        top: 1.66rem;
        transition: all 200ms ease-out;
        visibility: hidden;
        z-index: 1000;

        .post__moderation:hover & {
          opacity: 1;
          visibility: visible;
        }

        &:before {
          border-color: transparent transparent $white transparent;
          border-style: solid;
          border-width: 0.4rem;
          content: "";
          height: 0;
          position: absolute;
          right: 0.5rem;
          top: -0.7rem;
          width: 0;
        }

        a {
          @include p-meta;
          border: 0;
          color: $grey-warm;
          display: block;
          min-width: 8.75rem;
          padding: 0.65rem;
        }

      }

.post__content {
  padding: 0.25rem 2.5rem 1.7rem 1.65rem;

  p {
    @include p-regular;
    margin-bottom: 0.3rem;
  }

  a.post__showMore {
    @include button-midLevel-meta;
    margin-top: 1rem;
    margin-right: 0.3rem;
  }

  a.post__quote {
    @include button-meta;
    margin-top: 1rem;
  }
}

.fadeContent {
  -webkit-mask-image: -webkit-gradient(linear, left 50%, left bottom, from(rgba(0,0,0,1)), to(rgba(0,0,0,0)));
  display: block;
}

.moreContent span {
  display: none;
}
