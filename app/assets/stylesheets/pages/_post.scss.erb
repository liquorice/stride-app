.posts {

}

.post {
  background-color: $white;
  display: block;
  margin-bottom: 0.35rem;

  &[data-hidden] {
    background: rgba($bg-dark, 0.5);
    border-left: 0.37rem solid #36545c;
  }
}

  .post__hidden {
    @include h3-regular;
    background-color: $bg-dark;
    font-size: 1rem;
    line-height: 1;
    margin-bottom: 0;
    padding: 1rem 2.5rem 1.24rem 1.23rem;
    width: 100%;
  }

  .post__details {
    height: 4.9rem;
    width: 100%;
    padding: 0.9rem 0 0 1.65rem;
  }

  .post__details-avatar {
    display: block;
    float: left;
    height: 60px;
    width: 60px;
  }

  .post__details-text {
    @include p-meta;
    height: 4.9rem;
    padding: 1rem 1rem 0 0.85rem;
    margin-left: 60px;

    a {
      border-bottom: 0;
    }
  }

.post__moderation {
  float: right;
  margin-right: 1.5rem;
  margin-top: 2rem;
}

  .post__optionButton {
    content: url("<%= asset_data_uri 'icons/icon_dots-grey.svg' %>");
    display: block;
    height: 1.3rem;
    position: absolute;
    right: 1.66rem;
    width: 1.3rem;
  }

  .post__optionMenu {
    background-color: $white;
    border-radius: 3px;
    box-shadow: 0px 0px 6px 2px rgba(0,0,0,0.15);
    display: none;
    min-width: 8.75rem;
    position: relative;
    top: 1.4rem;
    z-index: 1000;

    &:before {
      border-color: transparent transparent $white transparent;
      border-style:solid;
      border-width:0.4rem;
      content: "";
      height:0;
      position:absolute;
      right: 0.5rem;
      top: -0.7rem;
      width:0;
    }
  }

    .post__optionMenu-links {
      padding: 0.65rem;

      a {
        @include p-meta;
        border: 0;
        color: $grey-warm;
      }
    }

.post__content {
  padding: 0 2.5rem 1.7rem 1.65rem;

  p {
    @include p-regular;
    margin-bottom: 0.3rem;
  }

  a.post__showMore {
    @include button-midLevel-meta;
    margin-top: 1rem;
    margin-right: 0.3rem;
  }

  a.post__quote {
    @include button-meta;
    margin-top: 1rem;
  }
}

.fadeContent {
  -webkit-mask-image: -webkit-gradient(linear, left 50%, left bottom, from(rgba(0,0,0,1)), to(rgba(0,0,0,0)));
  display: block;
}

.moreContent span {
  display: none;
}
