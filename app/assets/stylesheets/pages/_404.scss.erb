.page__404 {
  .strip__dark {
    background-color: $blue-dark;
    background-size: 283px 283px;
    background: url('/images/noise-diamonds-283x283-@2x.png') top left repeat;

    h1 {
      @include ff_adelle-bold;
      @include breakpoint(small, mini) {
        font-size: 2.4rem;
        line-height: 1.09em;
        margin-top: 3.2rem;
      }
      color: $white;
      font-size: 3.06rem;
      line-height: 1.09em;
      margin-top: 2.8rem;
      transform: none;
    }

    .constrained {
      align-items: center;
      display: flex;
      height: 100%;
      justify-content: center;
    }
  }
}