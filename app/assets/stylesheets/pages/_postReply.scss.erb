.postReply {
  padding-top: 2rem;
  padding-bottom: 2rem;
  display: table;
  width: 100%;
}

.postReply__title {
  width: 100%;
  background-color: $green-mid;
  display: table-row;

  h3 {
    @include h3-regular;
    color: $white;
    padding: 0.4rem 1.2rem;
    margin-bottom: 0;
  }
}

.postReply__form {
  background-color: $white;
  width: 100%;
  // height: 100%;
  // min-height: 4rem;
  display: table-row;

  textarea {
    @include p-regular;
    line-height: 1;
    display: block;
    box-sizing:padding-box;
    overflow: hidden;
    float: left;
    padding: 1.2rem 1rem;
    width: 87.6%;
    resize: none;
    display: table-cell;
    margin-bottom: 0;
  }
}

.postReply__button {
  // display: block;
  float: left;
  padding: 0.65rem;
  background-color: $white;
  display: table-cell;

  button {
    @include button-standard;
    padding: 0.571em 0.877em 0.643em;
  }
}
