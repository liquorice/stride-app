.postDetails {
  display: table;
  cursor: pointer;
  background: $white;
  margin-bottom: 0.3rem;
}

.postDetails__createdBy-avatar {
  display: table-cell;
  width: 8%;
  margin-bottom: 0.37rem;
  padding: 0 1rem 0.1rem 1rem;

  .avatar {
    @include avatar__mid;
  }
}

.postDetails__createdBy-user {
  @include p-meta;
  display: table-cell;
  width: 43%;
  max-width: 1rem;
  color: $grey-warm;
  margin-bottom: 0.37rem;
  padding: 0 1rem 0.1rem 1rem;

  h2 {
    @include h2-regular;
    color: $grey-warm;
    font-size: 1.65em;
    line-height: 1.5;
  }
}

