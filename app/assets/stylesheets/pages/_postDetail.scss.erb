.postDetails {
  height: 4.9rem;
  background: $white;
  margin-bottom: 6px;
  // margin-bottom: 0.3rem;
}

.postDetails__createdBy {
  display: block;
  float: left;
  // width: 8%;
  width: 55.8%;
  background-color: $bg-dark;
  height: 4.9rem;
}

.postDetails__createdBy-avatar {
  display: block;
  float: left;
  // width: 8%;
  padding: 0.9rem 0 0 1.65rem;
  height: 4.9rem;

  .avatar {
    @include avatar__mid;
  }
}

.postDetails__createdBy-user {
  @include p-meta;
  display: block;
  float: left;
  // width: 43%;
  color: $grey-warm;
  padding: 1.1rem 1rem 0 0.85rem;
  height: 4.9rem;

  h2 {
    @include h2-regular;
    color: $grey-warm;
    font-size: 1.65em;
    line-height: 1.5;
  }
}

.postDetails__createdDate {
  @include p-meta;
  display: block;
  float: left;
  // width: 1%;
  width: 18.2%;
  color: $green-light;
  padding: 1.1rem 0 0 0.85rem;
  border-left: 2px solid rgba($grey-warm, 0.1);
  height: 4.9rem;

  h2 {
    @include h2-regular;
    color: $green-light;
    font-size: 1.65em;
    line-height: 1.5;
  }
}

.postDetails__views {
  @include p-meta;
  display: block;
  float: left;
  // width: 1%;
  width: 13%;
  color: $green-mid;
  padding: 1.1rem 0 0 0.85rem;
  border-left: 2px solid rgba($grey-warm, 0.1);
  height: 4.9rem;

  h2 {
    @include h2-regular;
    color: $green-mid;
    font-size: 1.65em;
    line-height: 1.5;
  }
}

.postDetails__replies {
  @include p-meta;
  display: block;
  float: left;
  // width: 1%;
  width: 13%;
  color: $green-dark;
  padding: 1.1rem 0 0 0.85rem;
  border-left: 2px solid rgba($grey-warm, 0.1);
  height: 4.9rem;

  h2 {
    @include h2-regular;
    color: $green-dark;
    font-size: 1.65em;
    line-height: 1.5;
  }
}