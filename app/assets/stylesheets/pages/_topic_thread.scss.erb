.strip__dark {
  h3.topic__text {
    margin-bottom: 0.5rem;
    margin-top: 1rem;

    em {
      &:before {
        @include icon__back;
        content: " ";
        display: inline-block;
        margin: 0 10px 0 0;
      }
    }
  }
}

.topic__preview {
  h1.topic__text {
    @include h3-flood;
    line-height: 1.9rem;
    margin-bottom: 0.85rem;
    color: $green-dark;
    a {
      color: $green-dark;
    }
  }
}

.topicThreads__viewMore {
  margin: 1.56em 0 4.45em 0;
  a {
    @include button-short;
    padding: 0.571em 1.857em 0.643em;
  }
}