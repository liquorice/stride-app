.strip__dark {
  h3.topic__title {
    &:before {
      @include icon__back;
      content: " ";
      display: inline-block;
      margin: 0 10px 0 0;
    }
  }
}

.topic__preview {
  .topic__name {
    @include h3-flood;
    color: $green-dark;
    line-height: 1.9rem;
    margin-bottom: 0.85rem;
    a {
      color: $green-dark;
    }
  }
}

.topicThreads__viewMore {
  margin: 1.56em 0 4.45em 0;
  a {
    @include button-short;
    @include breakpoint(mini, small, medium) {
      margin-top: 12px;
    }
    padding: 0.571em 1.857em 0.643em;
  }
}
