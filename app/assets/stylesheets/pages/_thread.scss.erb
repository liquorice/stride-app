.threads {

}

.thread {
  display: table;
  cursor: pointer;
  background: $white;
  margin-bottom: 0.3rem;
}

.thread__preview {
  @include p-meta;
  box-shadow: 0 1pt 0 0 rgba($grey-warm, 0.15);
  margin-bottom: 0.37rem;
  padding: 0.5rem 1rem 1.31rem 1rem;
  border-left: 0.37rem solid $white;
  display: table-cell;
  width: 39%;
  max-width: 1rem;
  cursor: pointer;

  &[data-pinned] {
    border-left: 0.37rem solid $blue-dark;
  }

  &[data-locked] {
    .thread__name {
      h2 {
        color: $grey-warm;
      }
      &:before {
        @include icon__lock;
        content: " ";
        float: left;
        margin-top: 0.71em;
      }
    }
  }
}

.thread__name {
  h2 {
    @include h2-regular;
    color: $other-primary;
    font-size: 1.65em;
    line-height: 1.5;
    white-space: nowrap;
    overflow: hidden;
    margin-bottom: 0.2em;
  }
}

.thread__latest {
  p {
    @include p-meta;
    overflow: hidden;
    word-break: break-word;
    max-height: 1.4em;
  }

  .avatar {
    @include avatar__sml;
    float: left;
    margin-right: 0.25em;
  }
}

.thread__created {
  @include p-meta;
  box-shadow: 0 1pt 0 0 rgba($grey-warm, 0.15);
  margin-bottom: 0.37rem;
  padding: 0 1rem 0.1rem 1rem;
  border-left: 2px solid rgba($grey-warm, 0.1);
  color: $green-light;
  display: table-cell;
  width: 1%;
  cursor: pointer;

  h2 {
    @include h2-regular;
    color: $green-light;
    font-size: 1.65em;
    line-height: 1.5;
  }

  h4 {
    font-size: 1.22rem;
    line-height: 1;
  }
}

.thread__replies {
  @include p-meta;
  box-shadow: 0 1pt 0 0 rgba($grey-warm, 0.15);
  margin-bottom: 0.37rem;
  padding: 0 1rem 0.1rem 1rem;
  border-left: 2px solid rgba($grey-warm, 0.1);
  color: $green-mid;
  display: table-cell;
  width: 1%;
  cursor: pointer;

  h2 {
    @include h2-regular;
    color: $green-mid;
    font-size: 1.65em;
    line-height: 1.5;
  }

  h4 {
    font-size: 1.22rem;
    line-height: 1;
  }
}

.icon__pinned {
  float: left;
  height: 1rem;
  margin: 0.68em 0.34em 0 0.2em;
  width: 0.9rem;
}

.icon__unpinned {
  float: left;
  height: 0.55rem;
  margin: 1em 0.34em 0 0.2em;
  opacity: 0.5;
  width: 0.65rem;
}