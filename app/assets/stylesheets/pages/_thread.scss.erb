/* Mixins */

@mixin thread-column {
  cursor: pointer;
  display: block;
  float: left;
  height: 5rem;
}

/* General Font Styles */

h2 {
  @include h2-level1;

  .thread__name & {
    @include breakpoint(mini) {
      -webkit-line-clamp: 2;
      margin-bottom: 0.35em;
      max-height: 2.6em;
    }
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    color: $primary;
    display: -webkit-box;
    margin-bottom: 0.25em;
    max-height: 1.4em;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .thread__created &,
  .thread__replies & {
    @include breakpoint(mini, small, medium) {
      @include p-meta;
    }
    padding-top: 0.1em;
  }

  .thread__created & {
    color: $green-light;
  }

  .thread__replies & {
    color: $green-mid;
  }
}

.thread__preview,
.thread__created,
.thread__replies {
  @include p-meta;
}

/* Mobile Only Styles */

.mobile-thread {
  @include p-meta;
  @include ff_adelle-bold;
  @include breakpoint(mini, small, medium) {
    display: block;
    float: left;
  }
  background: $white;
  box-shadow: 0 1pt 0 0 rgba($grey-warm, 0.15);
  display: none;
  height: 2.5rem;
  margin-bottom: 6px;
  width: 100%;

  &[data-pinned] {
    border-left: 4px solid $blue-dark;
  }

  & > * {
    border-top: 1px solid rgba($grey-warm, 0.1);
    display: block;
    float: left;
    height: 2.5rem;
    width: 50%;
  }
}

  .mobile-thread__created {
    color: $green-light;
    padding: 0.6rem 0 0.6rem calc(0.85rem + 4px);

    .mobile-thread[data-pinned] & {
      padding: 0.6rem 0.85rem;
    }
  }

  .mobile-thread__replies {
    border-left: 1px solid rgba($grey-warm, 0.1);
    color: $green-dark;
    padding: 0.6rem 0 0.6rem 0.85rem;
  }

/* Page Styles */

.threads {
  padding-bottom: 4.105rem;
}

.thread {
  @include breakpoint(medium) {
    height: 7.4rem;
    margin-bottom: 0.5rem;
  }
  @include breakpoint(mini, small) {
    height: auto;
    margin-bottom: 0;
    box-shadow: none;
  }
  background: $white;
  cursor: pointer;
  height: 5rem;
  margin-bottom: 0.3rem;
  box-shadow: 0 1pt 0 0 rgba($grey-warm, 0.15);
}

  .thread[data-hidden] {
    & * {
      background: mix($grey-warm, $white, 10%);
      color: $grey-warm;
    }
    
    & .thread__preview{
      @include breakpoint(mini, small, medium) {
        border-left: 4px solid mix($grey-warm, $white, 10%);
      }
      border-left: 6px solid mix($grey-warm, $white, 10%);

      &[data-pinned] {
        @include breakpoint(mini, small, medium) {
          border-left: 4px solid mix($grey-warm, $white, 10%);
        }
        border-left: 6px solid mix($grey-warm, $white, 10%);
      }
    }
  }

  .thread[data-locked] {
    & .thread__preview,
    & .thread__created,
    & .thread__replies {
      h2,
      strong {
        color: $grey-warm;
      }
    }

    & .thread__name {
      &:before {
        @include icon__lock;
        content: " ";
        float: left;
        margin-top: 0.71em;
      }
    }
  }

  .thread:hover {
    & * {
      background: mix($links, $white, 8%);
      color: $links;
      transition: all 100ms ease-out;
    }

    & .thread__preview{
      @include breakpoint(mini, small, medium) {
        border-left: 4px solid mix($links, $white, 8%);
      }
      border-left: 6px solid mix($links, $white, 8%);

      &[data-pinned] {
        @include breakpoint(mini, small, medium) {
          border-left: 4px solid $blue-dark;
        }
        border-left: 6px solid $blue-dark;
      }
    }
  }

    .thread__preview {
      @include thread-column;
      @include breakpoint(mini, small, medium) {
        border-left: 4px solid $white;
        width: 100%;
      }
      @include breakpoint(mini) {
        max-height: 8rem;
        height: auto;
        padding: 0.9rem 0.85rem;
      }
      background: $white;
      border-left: 6px solid $white;
      padding: 0.65rem 1rem;
      width: 68%;

      &[data-pinned] {
        @include breakpoint(mini, small, medium) {
          border-left: 4px solid $blue-dark;
        }
        border-left: 6px solid $blue-dark;
      }
    }

      .thread__name {
        display: block;
        float: left;
        max-width: 91%;
      }

      .thread__latest {
        @include breakpoint(mini) {
          -webkit-line-clamp: 2;
          max-height: 3.6em;
        }
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
        display: -webkit-box;
        float: left;
        max-height: 1.8em;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 100%;

        a {
          border-bottom: none;
          line-height: 1.8;
        }

        a, a > strong {
          color: $grey-warm !important;
        }

        a:hover,
        a:hover > strong {
          color: $links !important;
          box-shadow: none;
        }
      }

        .thread__latest-avatar {
          @include avatar-mini;
          @include breakpoint(mini, small, medium, large) {
            margin-top: 0.15em;
          }
          @include breakpoint(mini) {
            display: inline-block;
            float: none;
            margin-bottom: -0.25em;
          }
          display: block;
          float: left;
          margin-right: 0.25em;
          margin-top: 0.25em;
        }

    .thread__created {
      @include thread-column;
      @include breakpoint(mini, small, medium) {
        display: none;
      }
      border-left: 1px solid rgba($grey-warm, 0.1);
      color: $green-light;
      padding: 1.1rem 0.7rem;
      width: 19%;
    }

    .thread__replies {
      @include thread-column;
      @include breakpoint(mini, small, medium) {
        display: none;
      }
      border-left: 1px solid rgba($grey-warm, 0.1);
      color: $green-mid;
      padding: 1.1rem 0.7rem;
      width: 13%;
    }
