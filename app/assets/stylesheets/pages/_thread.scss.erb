.thread {
  @include breakpoint(small, medium) {
    height: 7.4rem;
    margin-bottom: 0.5rem;
  }
  @include breakpoint(mini) {
    height: auto;
    margin-bottom: 0;
    box-shadow: none;
  }
  background: $white;
  cursor: pointer;
  height: 5rem;
  margin-bottom: 0.35rem;
  box-shadow: 0 1pt 0 0 rgba($grey-warm, 0.15);
}

.thread__mobile {
  @include breakpoint(mini, small, medium) {
    display: block;
    float: left;
  }
  display: none;
  height: 2.5rem;
  width: 100%;
  background: $white;
  margin-bottom: 6px;
  box-shadow: 0 1pt 0 0 rgba($grey-warm, 0.15);
  border-left: 6px solid $white;

  &[data-pinned] {
    border-left: 6px solid $blue-dark;
  }
}

.thread__mobile-created {
  @include p-meta;
  color: $green-light;
  display: block;
  float: left;
  width: 50%;
  padding: 0.6rem 1rem;
  height: 2.5rem;
  border-top: 2px solid rgba($grey-warm, 0.1);
}

.thread__mobile-replies {
  @include p-meta;
  color: $green-dark;
  display: block;
  float: left;
  width: 50%;
  border-left: 2px solid rgba($grey-warm, 0.1);
  padding: 0.6rem 1rem;
  height: 2.5rem;
  border-top: 2px solid rgba($grey-warm, 0.1);
}

.thread__preview {
  @include p-meta;
  @include breakpoint(small, medium) {
    width: 100%;
  }
  @include breakpoint(mini) {
    width: 100%;
    max-height: 8rem;
    height: auto;
  }
  background: $white;
  cursor: pointer;
  display: block;
  float: left;
  padding: 0.75rem 0.5rem;
  width: 68.9%;
  height: 5rem;
  border-left: 6px solid $white;

  &[data-pinned] {
    border-left: 6px solid $blue-dark;
  }

  &[data-locked] {
    .thread__name {
      h2 {
        color: $grey-warm;
      }
      &:before {
        @include icon__lock;
        content: " ";
        float: left;
        margin-top: 0.71em;
      }
    }
  }
}

.thread__name {
  display: block;
  float: left;
  max-width: 93%;
  h2 {
    @include h2-regular;
    @include breakpoint(mini) {
      max-height: 3.3em;
    }
    color: $primary;
    font-size: 1.65em;
    line-height: 1.5;
    margin-bottom: 0.2em;
    overflow: hidden;
    word-break: break-word;
    max-height: 1.65em;
  }
}

.thread__latest {
  @include breakpoint(mini) {
    max-height: 2.8em;
  }
  display: block;
  float: left;
  width: 100%;
  max-height: 1.4em;
  overflow: hidden;
  word-break: break-word;
  p {
    @include p-meta;
  }
}

  .thread__latest-avatar {
    @include breakpoint(mini) {
      display: inline-block;
      float: none;
      margin-bottom: -0.25em;
    }
    display: block;
    float: left;
    margin-right: 0.25em;
    height: 18.1px;
    width: 18.1px;
  }

.thread__created {
  @include p-meta;
  @include breakpoint(mini, small, medium) {
    display: none;
  }
  border-left: 2px solid rgba($grey-warm, 0.1);
  color: $green-light;
  cursor: pointer;
  display: block;
  float: left;
  padding: 1rem 0.5rem;
  width: 18.1%;
  height: 5rem;

  h2 {
    @include h2-regular;
    color: $green-light;
    font-size: 1.65em;
    line-height: 1.5;
  }

  h4 {
    font-size: 1.22rem;
    line-height: 1;
  }
}

.thread__replies {
  @include p-meta;
  @include breakpoint(mini, small, medium) {
    display: none;
  }
  border-left: 2px solid rgba($grey-warm, 0.1);
  color: $green-mid;
  cursor: pointer;
  display: block;
  float: left;
  padding: 1rem 0.5rem;
  width: 13%;
  height: 5rem;

  h2 {
    @include h2-regular;
    color: $green-mid;
    font-size: 1.65em;
    line-height: 1.5;
  }

  h4 {
    font-size: 1.22rem;
    line-height: 1;
  }
}

.icon__pinned {
  float: left;
  height: 1rem;
  margin: 0.68em 0.34em 0 0.2em;
  width: 0.9rem;
}

.icon__unpinned {
  float: left;
  height: 0.55rem;
  margin: 1em 0.34em 0 0.2em;
  opacity: 0.5;
  width: 0.65rem;
}