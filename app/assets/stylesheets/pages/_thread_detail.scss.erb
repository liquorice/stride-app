// Thread Detail Mixins

@mixin threadDetails-user {
  @include breakpoint(mini, small, medium) {
    height: auto;
    min-height: 4.6rem;
    padding: 0.7333rem 0 0.7333rem 1.579rem;
    width: 100%;
  }
  @include breakpoint(mini, small) {
    padding: 0.7333rem 0 0.7333rem 1.067rem;
  }
  background-color: $bg-dark;
  display: block;
  float: left;
  height: 5rem;
  padding: 0.8947rem 0 0 1.579rem;

  & h2 {
    @include h2-level1;
    @include breakpoint(huge, overlarge, large) {
      overflow: hidden;
      text-overflow: ellipsis;
    }
    color: $grey-warm;
    line-height: 1.3;

    & > span {
      @include p-meta;
      @include breakpoint(mini, small) {
        margin: 0 2px 0 3px;
      }
      color: $grey-warm;
      margin: 0 2px 0 5px;
    }
  }

  & > * {
    @include p-meta;
    color: $grey-warm;
    display: block;
    float: left;
  }
}

@mixin threadDetails-column {
  @include p-meta;
  @include breakpoint(mini, small, medium) {
    display: none;
  }
  border-left: 1px solid rgba($grey-warm, 0.1);
  display: block;
  float: left;
  height: 5rem;
  padding: 1.1rem 0 0 0.7895rem;

  & > h2 {
    @include h2-level1;
    @include breakpoint(mini, small, medium) {
      @include p-meta;
    }
    line-height: 1.4;
  }
}

@mixin mobile-threadDetails-column {
  @include p-meta;
  @include ff_adelle-bold;
  @include breakpoint(medium) {
    @include p-short;
    @include ff_adelle-bold;
  }
  display: inline;
  margin-right: 0.4rem;
}

// Thread Detail Mobile Styles

.mobile-threadDetails {
  @include breakpoint(mini, small, medium) {
    display: block;
  }
  display: none;
  float: left;
  height: auto;
  min-height: 2.561rem;
  padding: 0.6rem 0 0.6rem 1.067rem;
  width: 100%;
}

  .mobile-threadDetails-date {
    @include mobile-threadDetails-column;
    color: $green-light !important;
  }

  .mobile-threadDetails-views {
    @include mobile-threadDetails-column;
    color: $green-mid !important;
  }

  .mobile-threadDetails-replies {
    @include mobile-threadDetails-column;
    color: $green-dark !important;
  }

// Thread Detail Styles

.threadDetails {
  @include breakpoint(mini, small, medium) {
    height: auto;
    min-height: 7.161rem;
    overflow: auto;
  }
  background: $white;
  height: 5rem;
  margin-bottom: 6px;
}

  .threadDetails__created {
    @include threadDetails-user;
    width: 55.8%;
  }

    .threadDetails__created-avatar {
      @include avatar-large;
    }

    .threadDetails__created-user {
      @include breakpoint(huge, overlarge, large) {
        max-width: 80%;
        white-space: nowrap;
      }
      @include breakpoint(mini, small, medium) {
        height: auto;
        max-width: 75%;
        padding: 0.1333rem 0 0 0.4667rem;
      }
      padding: 0.2632rem 0 0 0.6842rem;
    }

  .threadDetails__date {
    @include threadDetails-column;
    width: 18.2%;

    & > h2,
    & > strong, {
      color: $green-light;
    }
  }

  .threadDetails__views {
    @include threadDetails-column;
    width: 13%;

    & > h2,
    & > strong, {
      color: $green-mid;
    }
  }

  .threadDetails__replies {
    @include threadDetails-column;
    width: 13%;

    & > h2,
    & > strong, {
      color: $green-dark;
    }
  }