.userSection {
  width: 100%;
  margin-bottom: 1.789rem;

  &:first-child {
    margin-bottom: 2.526rem;
  }

  h3 {
    @include h3-regular;
    margin-bottom: 0.5789rem;

    &.short {
      @include h3-short;
    }
  }

  p {
    @include p-meta;
    color: $grey-warm;
  }
}

.mobile__show {
  @include breakpoint(mini) {
    display: block;
    width: 100%;
  }
  background-color: $white;
  border-top: 2px solid rgba($grey-warm, 0.1);
  display: none;
  padding: 1.1rem 1.1rem;
}

.mobile__hide {
  @include breakpoint(mini) {
    display: none;
  }
}

.mobile__row {
  @include breakpoint(mini, small, medium) {
    border-top: 2px solid rgba($grey-warm, 0.1);
    display: block;
    padding: 0.55rem 0.523rem;
    width: 100%;
  }
  display: inline;
}

.userDetails__row {
  background-color: $white;
  display: block;
  width: 100%;

  &:first-child {
    @include breakpoint(mini) {
      height: 5.73rem;
    }
    height: 8.25rem;
  }

  &:nth-child(n+2) {
    @include breakpoint(mini, small, medium) {
      border-top: none;
    }
    border-top: 2px solid rgba($grey-warm, 0.1);
  }
}

  .userDetails__avatar-container {
    @include breakpoint(small) {
      min-width: 8rem;
    }
    @include breakpoint(mini) {
      height: 5.73rem;
      min-height: 5.73rem;
      min-width: 5.73rem;
    }
    border-right: 2px solid rgba($grey-warm, 0.1);
    display: block;
    float: left;
    height: 8.25rem;
    min-height: 8.25rem;
    min-width: 8.25rem;
  }

    .userDetails__avatar {
      @include avatar-overlarge;
      @include breakpoint (large) {
        margin: 0.8rem auto 0.8rem;
      }
      @include breakpoint(mini) {
        margin: 0.55rem auto 0.55rem;
      }
      display: block;
      margin: 1rem auto 1rem;
    }

  .userDetails__status {
    @include breakpoint (large) {
      padding: 0.5rem 0.8rem;
    }
    @include breakpoint (medium, small) {
      padding: 0.35rem 0.8rem;
      width: 70%;
    }
    @include breakpoint (mini) {
      height: 5.73rem;
      padding: 1rem;
      width: 70%;
    }
    display: block;
    float: left;
    height: 8.25rem;
    padding: 0.75rem 1rem;
    width: 76%;

    .large__text {
      @include p-leading;
      @include ff_adelle-bold;
      @include breakpoint (medium, small, mini) {
        margin-bottom: 0.1rem;
      }
      color: $black;
      display: block;
      margin-bottom: 0.3rem;
    }

    .checkbox__text {
      @include ff_adelle-bold;
      color: $black;
      float: none;
    }
  }

  .dropdown__accesslevel * {
    display: inline-block;
  }

  .button__accesslevel {
    @include btn-meta;
    @include btn-primary;
    display: inline-block;
    margin-left: 0.6rem;
    vertical-align: top;
  }

  .text__suspend {
    @include p-meta;
    display: block;
  }

  .button__suspend {
    @include btn-meta;
    @include btn-alert;
    @include ff_adelle-bold;
    &:before {
      content: url("<%= asset_data_uri 'icons/icon_suspend-black.svg' %>");
      display: inline-block;
      height: 11px;
      margin-right: 5px;
      position: relative;
      top: 0.088em;
      width: 11px;
    }
  }

.userDetails__column {
  @include p-meta;
  @include breakpoint(overlarge) {
    padding: 1rem 0.5rem;
  }
  @include breakpoint(large) {
    min-width: 4.65rem;
    padding: 1rem 0.5rem;
  }
  @include breakpoint(mini, small, medium) {
    min-width: 5.5rem;
    padding: 0 0.55rem;
    width: 32%;
  }
  display: inline-block;
  min-width: 6rem;
  padding: 1rem;
  vertical-align: top;

  strong {
    display: block;
  }

  &.first {
    @include breakpoint(overlarge, huge) {
      padding-left: 2rem;
    }
    @include breakpoint(large) {
      padding-left: 1.15rem;
    }
  }

  &.last {
    @include breakpoint(huge) {
      max-width: 11.1rem;
      padding-right: 1rem;
    }
    @include breakpoint(overlarge) {
      max-width: 10.49rem;
      padding-right: 1rem;
    }
    @include breakpoint(large) {
      max-width: 8.2rem;
      padding-right: 0.8rem;
    }
  }
}


// User View Hide Activity Styles

.button_hideActivity {
  @include btn-meta;
  @include btn-alert;
  @include ff_adelle-bold;
  margin-bottom: 7px;
  margin-top: 4px;

  &:before {
    @include icon__hide;
    background-size: 11px 11px;
    content: " ";
    display: inline-block;
    height: 11px;
    margin-right: 6px;
    width: 11px;
  }
}

// User View Thread and Posts Styles

.userThread,
.userPost {
  background-color: $white;
  display: block;
  margin-bottom: 6px;
  position: relative;

  &[data-hidden],
  &[data-locked] {
    background: rgba($bg-dark, 0.5);
    border-left: 6px solid $green-dark;

    .userThread__details,
    .userPost__details {
      opacity: 0.5;
    }
  }

  &[data-locked] {
    color: $grey-warm;
  }
}

  .userThread__details,
  .userPost__details {
    height: auto;
    position: relative;
    width: 100%;

    h4 {
      @include p-short;
      @include ff_adelle-bold;
      margin-bottom: 0.6316rem;
      line-height: 1;

      a {
        @include links;
        @include ff_adelle-bold;
        border-bottom: 0;
      }
    }

    p {
      @include p-meta;
      display: inline-block;
      margin-right: 0.5263rem;
      color: $grey-warm;
    }
  }

  .userThread__details {
    @include breakpoint(mini) {
      padding: 1rem 1.1rem 0;
    }
    padding: 1.211rem 1.579rem 1.474rem;
  }

  .userPost__details {
    @include breakpoint(mini) {
      padding: 1rem 1.1rem 0;
    }
    padding: 1.211rem 1.579rem 0;
  }

  .userPost__moderate {
    top: 1.211rem;
    right: 0.7895rem;
  }

  .userPost__button {
    padding-bottom: 0;
  }

  .userThread__view,
  .userPost__view {
    a {
      @include p-short;
      @include links;
    }
  }

  .userThread__view {
    padding-top: 0.5263rem;
  }

  .userPost__view {
    padding: 0.5263rem 1.579rem 1.474rem;
  }

