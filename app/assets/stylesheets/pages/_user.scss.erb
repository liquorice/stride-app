.userOverview, .userThreads, .userPosts {
  width: 100%;
  margin-bottom: 2.5rem;
}

.userOverview__title, .userThreads__title, .userPosts__title {
  @include p-large;
  @include ff_adelle-bold;
  color: $black;
}

.userOverview__row {
  width: 100%;
  background-color: $white;
  display: block;

  &:first-child {
    height: 8.25rem;
  }

  &:nth-child(n+2) {
    border-top: 2px solid rgba($grey-warm, 0.1);
  }
}

  .userOverview__avatar-container {
    min-height: 8.25rem;
    min-width: 8.25rem;
    height: 8.25rem;
    display: block;
    float: left;
    border-right: 2px solid rgba($grey-warm, 0.1);
  }

    .userOverview__avatar {
      display: block;
      height: 6.2rem;
      width: 6.2rem;
      margin: 1rem auto 1rem;
    }

  .userOverview__status {
    height: 8.25rem;
    display: block;
    float: left;
    width: 35.5rem;
    padding: 0.75rem 1rem;

    .large__text {
      @include p-large;
      @include ff_adelle-bold;
      color: $black;
      display: block;
      margin-bottom: 0.3rem;
    }

    .checkbox__text {
      @include ff_adelle-bold;
      color: $black;
      float: none;
    }

    .small__text {
      @include p-meta;
      display: block;
    }
  }

  .button__suspend {
    @include button-meta;
    @include ff_adelle-bold;
    @include breakpoint (huge, overlarge, large, medium, small, mini) {
      padding: 0.32em 0.75em 0.4877em;
    }
    background-color: rgba($alert, 0.2);
    color: $black;
    margin: 1rem 0 0.3rem;

    &:before {
      content: url("<%= asset_data_uri 'icons/icon_suspend-black.svg' %>");
      height: 11px;
      width: 11px;
      display: inline-block;
      position: relative;
      top: 0.088em;
      margin-right: 5px;
    }

    &:hover {
      background-color: $alert;
      color: $black;
    }
  }

.userOverview__column {
  @include p-meta;
  display: inline-block;
  min-width: 6rem;
  padding: 1rem;

  strong {
    display: block;
  }

  &:first-child {
    padding-left: 2rem;
  }

  &:last-child {
    padding-right: 1rem;
    max-width: 11.1rem;
  }
}

.userThread {
  background-color: $white;
  display: block;
  margin-bottom: 0.35rem;
  position: relative;

  &[data-hidden] {
    background: rgba($bg-dark, 0.5);
    border-left: 0.37rem solid #36545c;
  }
}

  .userThread__hidden {
    @include h3-regular;
    background-color: $bg-dark;
    font-size: 1rem;
    line-height: 1;
    margin-bottom: 0;
    padding: 1rem 2.5rem 1.24rem 1.23rem;
    width: 100%;
  }

  .userThread__details {
    height: auto;
    padding: 1.15rem 0 0 1.65rem;
    position: relative;
    width: 100%;
  }

    .userThread__details-text {
      @include p-regular;
      @include ff_adelle-bold;
      height: auto;
      margin-bottom: 0.35rem;
      margin-left: 0;
      padding: 0;

      a {
        border-bottom: 0;
      }

      .userThread[data-hidden] & {
        opacity: 0.5;
      }
    }

    .userThread__details-date {
      @include p-meta;
    }

    .userThread__details-padding {
      display: inline-block;
      min-width: 15px;
    }

  .userThread__view {
    padding: 0.55rem 0 1.55rem 1.65rem;
    a {
      @include p-regular;
      @include links;
    }
  }

.userPosts__content {
  .post__details-text {
    @include p-regular;
    @include ff_adelle-bold;
    height: auto;
    margin-left: 0;
    padding: 0;
    a {
      border-bottom: none;
    }
  }

  .post__details-date {
    @include p-meta;
  }

  .post__buttons {
    padding: 0.55rem 0 0.55rem 1.65rem;
  }

  .post__view {
    padding: 0.55rem 0 1.55rem 1.65rem;
    a {
      @include p-regular;
      @include links;
    }
  }
}