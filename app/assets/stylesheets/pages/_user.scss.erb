.userSection {
  margin-bottom: 1.789rem;
  width: 100%;

  &.large {
    margin-bottom: 2.526rem;
  }

  &:last-child {
    padding-bottom: 5.842rem;
  }

  h3 {
    @include h3-regular;
    margin-bottom: 0.5789rem;

    &.short {
      @include h3-short;
    }
  }

  p {
    @include p-meta;
    color: $grey-warm;
  }

  .alert {
    color: $alert;
  }
}

.userDetails__row {
  background-color: $white;
  display: block;
  width: 100%;

  &:first-child {
    @include breakpoint(medium, small, mini) {
      height: auto;
      overflow: auto;
    }
    height: 8.579rem;
  }

  &:nth-child(n+2) {
    @include breakpoint(mini, small, medium) {
      border-top: none;
    }
    border-top: 1px solid rgba($grey-warm, 0.1);
  }
}

// User Details First Row Styles

  .userDetails__avatar-container {
    @include breakpoint(small, mini) {
      height: 10.87rem;
      width: 10.87rem;
    }
    display: block;
    float: left;
    height: 8.579rem;
    padding: 1.105rem 1.105rem;
    width: 8.579rem;
  }

    .userDetails__avatar {
      @include avatar-overlarge;
    }


  .userDetails__access,
  .userDetails__suspend {
    border-left: 1px solid rgba($grey-warm, 0.1);
    display: block;
    float: left;
    height: 8.579rem;

    h3 {
      @include p-short;
      @include ff_adelle-bold;
      line-height: 1;
      margin-bottom: 0.6316rem;
    }
  }


  .userDetails__access {
    @include breakpoint(small, mini) {
      border-left: none;
      border-top: 1px solid rgba($grey-warm, 0.1);
      height: auto;
      width: 100% !important;
    }
    min-width: 8.526rem;
    padding: 1.158rem 1.263rem;
    width: 21.77%;
  }

  .userDetails__suspend {
    @include breakpoint(medium, small, mini) {
      border-left: none;
      border-top: 1px solid rgba($grey-warm, 0.1);
      height: auto;
      width: 100% !important;
    }
    padding: 1.158rem 0.5rem 1.158rem 1.579rem;
    
    p {
     @include breakpoint(medium, small, mini) {
        max-width: 100%;
      }
      max-width: 13.32rem;
    }

    a {
      @include btn-meta;
      @include ff_adelle-bold;
      margin: 3px 0 4px;

      &.suspend {
        @include btn-alert;
        &:before {
          content: url("<%= asset_data_uri 'icons/icon_suspend-black.svg' %>");
          display: inline-block;
          height: 11px;
          margin-right: 5px;
          position: relative;
          top: 0.088em;
          width: 11px;
        }
      }

      &.unsuspend {
        @include btn-blue;
      }
    }
  }

// User Details Second Row Styles

  .mobile__row {
    @include breakpoint(mini, small, medium) {
      border-top: 1px solid rgba($grey-warm, 0.1);
      display: block;
      padding: 1.158rem 1.579rem;
      width: 100%;
    }
    display: inline;
  }

    .userDetails__column {
      @include p-meta;
      @include breakpoint(mini, small, medium) {
        width: 32%;
        padding: 0;
      }
      @include breakpoint(large, overlarge, huge) {
        &.first {
          padding-left: 1.205rem;
          width: 15%;
        }

        &.second {
          width: 14%;
        }

        &.third {
          width: 12%;
        }

        &.fourth {
          width: 17%;
        }

        &.fifth {
          width: 18%;
        }
      }

      color: $grey-warm;
      display: inline-block;
      padding: 0.9474rem 0 1.316rem;
      text-align: left;
      vertical-align: top;

      strong {
        display: block;
      }
    }

// User Password Reset Email Styles

.userSection {
  form {
    p {
      @include p-meta;
      color: $grey-warm;
      margin-bottom: 1px;
      &.view-default {
        @include p-short;
        margin-top: 2px;
        margin-bottom: 3px;
      }
    }

    button {
      @include btn-meta;
      @include btn-primary;
      @include ff_adelle-bold;
      @include breakpoint (small, mini) {
        margin-top: 16px;
        margin-left: 16px;
      }
      display: none;
      margin-top: 13px;
    }
  }

  form.edit {

    & > .view-edit {
      display: inline-block;
    }

    & > .view-default {
      display: none;
    }
  }

  .view-edit {
    display: none;
  }
}

.btn__email-edit,
.btn__email-cancel {
  @include p-meta;
  @include links;
  border-bottom: none;
  cursor: pointer;
  display: block;
  width: 5.421rem;
}

  .btn__email-cancel {
    margin-left: 6px;
  }

  .btn__email-edit {
    @include breakpoint (small, mini) {
      margin-top: 6px;
    }
    margin-top: 11px;

    &:before {
      @include icon__edit-blue;
      @include breakpoint (small, mini) {
        height: 9px;
        width: 9px;
        margin: 5px 3px 0 0;
      }
      content: " ";
      float: left;
      height: 11px;
      margin: 2px 4px 0 0;
      width: 11px;
    }
  }

.btn__resetEmail {
  @include btn-meta;
  @include ff_adelle-bold;
  text-align: center;
  width: 5.263rem;
}


// User View Hide Activity Styles

.btn__hideActivity {
  @include btn-meta;
  @include btn-alert;
  @include ff_adelle-bold;
  margin-bottom: 7px;
  margin-top: 4px;

  &:before {
    @include icon__hide;
    background-size: 11px 11px;
    content: " ";
    display: inline-block;
    height: 11px;
    margin-right: 6px;
    width: 11px;
  }
}

// User View Thread and Posts Styles

.userThread,
.userPost {
  background-color: $white;
  display: block;
  margin-bottom: 6px;
  position: relative;

  &[data-hidden],
  &[data-locked] {
    background: rgba($bg-dark, 0.5);
    border-left: 6px solid $green-dark;

    .userThread__details,
    .userPost__details {
      opacity: 0.5;
    }
  }

  &[data-locked] {
    color: $grey-warm;
  }
}

  .userThread__details,
  .userPost__details {
    height: auto;
    position: relative;
    width: 100%;

    h4 {
      @include p-short;
      @include ff_adelle-bold;
      margin-bottom: 0.6316rem;
      line-height: 1;

      a {
        @include links;
        @include ff_adelle-bold;
        border-bottom: 0;
      }
    }

    p {
      @include p-meta;
      display: inline-block;
      margin-right: 0.5263rem;
      color: $grey-warm;
    }
  }

  .userThread__details {
    @include breakpoint(mini) {
      padding: 1rem 1.1rem 0;
    }
    padding: 1.211rem 1.579rem 1.474rem;
  }

  .userPost__details {
    @include breakpoint(mini) {
      padding: 1rem 1.1rem 0;
    }
    padding: 1.211rem 1.579rem 0;
  }

  .userPost__moderate {
    top: 1.211rem;
    right: 0.7895rem;
  }

  .userPost__button {
    padding-bottom: 0;
  }

  .userThread__view,
  .userPost__view {
    a {
      @include p-short;
      @include links;
    }
  }

  .userThread__view {
    padding-top: 0.5263rem;
  }

  .userPost__view {
    padding: 0.5263rem 1.579rem 1.474rem;
  }

