.userOverview, .userThreads, .userPosts {
  width: 100%;
  margin-bottom: 2.5rem;
}

.userOverview__title, .userThreads__title, .userPosts__title {
  @include p-leading;
  @include ff_adelle-bold;
  color: $black;
}

.mobile__show {
  @include breakpoint(mini) {
    display: block;
    width: 100%;
  }
  background-color: $white;
  border-top: 2px solid rgba($grey-warm, 0.1);
  display: none;
  padding: 1.1rem 1.1rem;
}

.mobile__hide {
  @include breakpoint(mini) {
    display: none;
  }
}

.mobile__row {
  @include breakpoint(mini, small, medium) {
    border-top: 2px solid rgba($grey-warm, 0.1);
    display: block;
    padding: 0.55rem 0.523rem;
    width: 100%;
  }
  display: inline;
}

.userOverview__row {
  background-color: $white;
  display: block;
  width: 100%;

  &:first-child {
    @include breakpoint(mini) {
      height: 5.73rem;
    }
    height: 8.25rem;
  }

  &:nth-child(n+2) {
    @include breakpoint(mini, small, medium) {
      border-top: none;
    }
    border-top: 2px solid rgba($grey-warm, 0.1);
  }
}

  .userOverview__avatar-container {
    @include breakpoint(small) {
      min-width: 8rem;
    }
    @include breakpoint(mini) {
      height: 5.73rem;
      min-height: 5.73rem;
      min-width: 5.73rem;
    }
    border-right: 2px solid rgba($grey-warm, 0.1);
    display: block;
    float: left;
    height: 8.25rem;
    min-height: 8.25rem;
    min-width: 8.25rem;
  }

    .userOverview__avatar {
      @include avatar-overlarge;
      @include breakpoint (large) {
        margin: 0.8rem auto 0.8rem;
      }
      @include breakpoint(mini) {
        margin: 0.55rem auto 0.55rem;
      }
      display: block;
      margin: 1rem auto 1rem;
    }

  .userOverview__status {
    @include breakpoint (large) {
      padding: 0.5rem 0.8rem;
    }
    @include breakpoint (medium, small) {
      padding: 0.35rem 0.8rem;
      width: 70%;
    }
    @include breakpoint (mini) {
      height: 5.73rem;
      padding: 1rem;
      width: 70%;
    }
    display: block;
    float: left;
    height: 8.25rem;
    padding: 0.75rem 1rem;
    width: 76%;

    .large__text {
      @include p-leading;
      @include ff_adelle-bold;
      @include breakpoint (medium, small, mini) {
        margin-bottom: 0.1rem;
      }
      color: $black;
      display: block;
      margin-bottom: 0.3rem;
    }

    .checkbox__text {
      @include ff_adelle-bold;
      color: $black;
      float: none;
    }
  }

  .dropdown__accesslevel * {
    display: inline-block;
  }

  .button__accesslevel {
    @include btn-meta;
    @include btn-primary;
    display: inline-block;
    margin-left: 0.6rem;
    vertical-align: top;
  }

  .text__suspend {
    @include p-meta;
    display: block;
  }

  .button__suspend {
    @include btn-meta;
    @include ff_adelle-bold;
    @include breakpoint (huge, overlarge, large, medium, small, mini) {
      padding: 0.32em 0.75em 0.4877em;
    }
    @include breakpoint (medium, small) {
      margin: 0.65rem 0 0.1rem;
    }
    @include breakpoint (mini) {
      margin: 0 0 0.1rem;
    }
    background-color: rgba($alert, 0.2);
    color: $black;

    &:before {
      content: url("<%= asset_data_uri 'icons/icon_suspend-black.svg' %>");
      display: inline-block;
      height: 11px;
      margin-right: 5px;
      position: relative;
      top: 0.088em;
      width: 11px;
    }

    &:hover {
      background-color: $alert;
      color: $black;
    }
  }

.userOverview__column {
  @include p-meta;
  @include breakpoint(overlarge) {
    padding: 1rem 0.5rem;
  }
  @include breakpoint(large) {
    min-width: 4.65rem;
    padding: 1rem 0.5rem;
  }
  @include breakpoint(mini, small, medium) {
    min-width: 5.5rem;
    padding: 0 0.55rem;
    width: 32%;
  }
  display: inline-block;
  min-width: 6rem;
  padding: 1rem;
  vertical-align: top;

  strong {
    display: block;
  }

  &.first {
    @include breakpoint(overlarge, huge) {
      padding-left: 2rem;
    }
    @include breakpoint(large) {
      padding-left: 1.15rem;
    }
  }

  &.last {
    @include breakpoint(huge) {
      max-width: 11.1rem;
      padding-right: 1rem;
    }
    @include breakpoint(overlarge) {
      max-width: 10.49rem;
      padding-right: 1rem;
    }
    @include breakpoint(large) {
      max-width: 8.2rem;
      padding-right: 0.8rem;
    }
  }
}

.userThread {
  background-color: $white;
  display: block;
  margin-bottom: 0.35rem;
  position: relative;

  &[data-hidden] {
    background: rgba($bg-dark, 0.5);
    border-left: 0.37rem solid #36545c;
  }
}

  .userThread__hidden {
    @include h3-regular;
    background-color: $bg-dark;
    font-size: 1rem;
    line-height: 1;
    margin-bottom: 0;
    padding: 1rem 2.5rem 1.24rem 1.23rem;
    width: 100%;
  }

  .userThread__details {
    @include breakpoint(mini) {
      padding: 1rem 1.1rem 0;
    }
    height: auto;
    padding: 1.15rem 0 0 1.65rem;
    position: relative;
    width: 100%;
  }

    .userThread__details-text {
      @include p-regular;
      @include ff_adelle-bold;
      height: auto;
      margin-bottom: 0.35rem;
      margin-left: 0;
      padding: 0;

      a {
        border-bottom: 0;
      }

      .userThread[data-hidden] & {
        opacity: 0.5;
      }
    }

    .userThread__details-date {
      @include p-meta;
    }

    .userThread__details-padding {
      display: inline-block;
      min-width: 15px;
    }

  .userThread__view {
    @include breakpoint(mini) {
      padding: 0.55rem 0 1.55rem 1.1rem;
    }
    padding: 0.55rem 0 1.55rem 1.65rem;
    a {
      @include p-regular;
      @include links;
    }
  }

.userPosts__content {
  .post__details {
    height: auto;
  }

  .post__details-text {
    @include p-regular;
    @include ff_adelle-bold;
    @include breakpoint(mini) {
      padding-right: 50px;
    }
    height: auto;
    margin-left: 0;
    padding: 0;
    a {
      border-bottom: none;
    }
  }

  .post__details-date {
    @include p-meta;
  }

  .post__buttons {
    padding-bottom: 0.55rem;
  }

  .post__view {
    @include breakpoint(mini) {
      padding: 0.55rem 0 1.55rem 1.1rem;
    }
    padding: 0.55rem 0 1.55rem 1.65rem;
    a {
      @include p-regular;
      @include links;
    }
  }
}