.modalContainer {
  h1 {
    @include h3-flood;
    color: $green-dark;
    margin-bottom: 1rem;
    padding: 10px;
  }

  .alert {
    color: $alert;
  }

  .label {
    margin-bottom: 2.75rem;
    padding: 0 10px;
  }

    .label__title {
      @include p-meta;
      @include ff_adelle-bold;
    }

    .label__desc {
      @include p-meta;
    }

    .label__required {
      @include p-meta;
      margin-top: 10px;
    }

    input[type=text] {
      margin-top: 7px;
    }

    .dropdown {
      margin: 7px 0 0 0;
    }

    .toggle {
      margin-top: 15px;
    }

  .form__buttons {
    padding: 0 10px;
  }

  .form__button-standard {
    @include button-standard;
    margin-right: 5px;
  }

  .form__button-primary {
    @include button-primary;
    margin-right: 5px;
  }

  .form__button-fullWidth {
    text-align: center;
    width: 360px;
  }
}
