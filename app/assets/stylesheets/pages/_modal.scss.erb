// Modal Styles

.modalOverlay {
  background-color: $bg;
  bottom: 0;
  display: none;
  left: 0;
  overflow-y: auto;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 2000;

  body.modal-visible & {
    display: block;
  }
}

  body.modal-visible {
    overflow-y: hidden;
  }

  .modalOverlay__close {
    @include icon__clear;
    background-color: $bg-dark;
    margin-top: 65px;
    border-radius: 50%;
    cursor: pointer;
    height: 42px;
    position: absolute;
    right: 0;
    width: 42px;
  }

  .modalOverlay__loading {
    @include topMessage;
    background-color: $white;
    opacity: 0;
    top: 0;
    transform: translateY(-10px);
    visibility: hidden;

    .modalOverlay.loading & {
      opacity: 1;
      transform: translateY(0);
      visibility: visible;
    }
  }

.modalContainer {
  margin-top: 65px;
  z-index: 1;
}

.modalContent {
  margin: auto;
  max-width: 508px;
  padding-bottom: 155px;
  padding-top: 78px;
  width: 100%;

  h1 {
    @include h2-level3;
    @include breakpoint (mini) {
      padding: 10px;
    }
    margin-bottom: 2.474rem;
    padding: 0 10px;
  }

  h2 {
    @include h2-level3;
    @include breakpoint (mini) {
      padding: 10px;
    }
    font-size: 2.237rem;
    margin-bottom: 1.579rem;
    padding: 0 10px;
  }

  & .modal__small {
    margin: auto;
    max-width: 340px;
    width: 100%;
  }

  .alert {
    color: $alert;
  }

  .label {
    margin-bottom: 14px;
    overflow: auto;
    padding: 0 10px;

    &.small {
      margin-bottom: 7px;
    }

    &.med {
      margin-bottom: 34px;
    }

    &.large {
      margin-bottom: 54px;
    }

    &.xlarge {
      margin-bottom: 87px;
    }

    button,
    .form__button {
      margin-left: 0;
      margin-right: 0;
    }
  }

  .label__title {
    @include p-meta;
    @include ff_adelle-bold;
    color: $grey-warm;
  }

  .label__desc {
    @include p-meta;
    color: $grey-warm;
  }

  a.label__link {
    @include p-meta;
    @include links;
    float: right;
  }

  .dropdown {
    margin: 7px 0 0 0;
  }

  .toggle {
    margin-top: 15px;
  }

  .form__button {
    @include btn-standard;
    margin-left: 10px;
    margin-top: 7px;
    text-align: center;
    width: 6.316rem;

    &.primary {
      @include btn-primary;
    }

    &.fullwidth {
      max-width: 320px;
      text-align: center;
      width: 100%;
    }
  }
}
