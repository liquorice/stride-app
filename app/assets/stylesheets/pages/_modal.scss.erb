// Modal Styles

.modalOverlay {
  background-color: $bg;
  bottom: 0;
  display: none;
  left: 0;
  overflow-y: auto;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 2000;

  body.modal-visible & {
    display: block;
  }
}

  body.modal-visible {
    overflow-y: hidden;
  }

  .modalOverlay__close {
    @include icon__clear;
    @include breakpoint (small, mini) {
      margin-top: 18px;
      height: 28px;
      width: 28px;
    }
    background-color: $bg-dark;
    margin-top: 65px;
    border-radius: 50%;
    cursor: pointer;
    height: 42px;
    position: absolute;
    right: 0;
    width: 42px;
    z-index: 50;
  }

  .modalOverlay__loading {
    @include topMessage;
    background-color: $white;
    opacity: 0;
    top: 0;
    transform: translateY(-10px);
    visibility: hidden;

    .modalOverlay.loading & {
      opacity: 1;
      transform: translateY(0);
      visibility: visible;
    }
  }

.modalContainer {
  margin-top: 65px;
  z-index: 1;
}

.modalContent {
  @include breakpoint (small, mini) {
    padding-top: 0;
    padding-bottom: 35px;
  }
  margin: auto;
  max-width: 508px;
  padding-bottom: 155px;
  padding-top: 78px;
  width: 100%;

  h1 {
    @include h2-level3;
    @include breakpoint (mini) {
      padding: 0 0 10px 0;
      margin-bottom: 1.133rem;
    }
    margin-bottom: 2.474rem;
    padding: 0 10px;
  }

  h2 {
    @include h2-level3;
    @include breakpoint (mini) {
      padding: 0 0 10px 0;
    }
    font-size: 2.237rem;
    margin-bottom: 1.579rem;
    padding: 0 10px;
  }

  & .modal__small {
    margin: auto;
    max-width: 340px;
    width: 100%;
  }

  .alert {
    color: $alert;
  }

  .label {
    @include breakpoint (small, mini) {
      margin-bottom: 12px;
      padding: 0;
    }
    margin-bottom: 16px;
    overflow: auto;
    padding: 0 10px;

    &.med {
      @include breakpoint (small, mini) {
        margin-bottom: 24px;
      }
      margin-bottom: 34px;
    }

    &.large {
      @include breakpoint (small, mini) {
        margin-bottom: 37px;
      }
      margin-bottom: 54px;
    }

    &.xlarge {
      @include breakpoint (small, mini) {
        margin-bottom: 36px;
      }
      margin-bottom: 87px;
    }

    &.recaptcha {
      overflow: visible;
    }

    button,
    .form__button {
      margin-left: 0;
      margin-right: 0;
    }
  }

  .label__title {
    @include p-meta;
    @include ff_adelle-bold;
    color: $grey-warm;
  }

  .label__desc {
    @include p-meta;
    color: $grey-warm;
  }

  a.label__link {
    @include p-meta;
    @include links;
    float: right;
  }

  .toggle {
    margin-top: 15px;
  }

  .form__textfield.date,
  .form__textfield.time {
    display: inline-block;

    button {
      margin-right: 10px;
    }
  }

  .form__textfield.date {
    padding-right: 0.6rem;
    width: 190px;
  }

  .form__textfield.time {
    width: 114px;

    .icon__time {
      cursor: pointer;
      display: inline-block;
      float: right;
      position: relative;
    }
    .icon__time > svg {
      @include breakpoint(mini, small) {
        top: 14px;
      }
      height: 12px;
      margin: 0 10px 0 0;
      position: absolute;
      right: 0;
      top: 20px;
      width: 13px;
    }
  }

  .form__button {
    @include btn-standard;
    @include breakpoint (small, mini) {
      margin-left: 0;
      margin-right: 6px;
      margin-top: 4px;
    }

    cursor: pointer;
    margin-left: 10px;
    margin-top: 7px;
    text-align: center;
    width: 6.316rem;

    &.meta {
      @include btn-meta;
      @include ff_adelle-bold;
    }

    &.primary {
      @include btn-primary;
    }

    &.fullwidth {
      max-width: 320px;
      text-align: center;
      width: 100%;
    }
  }
}
