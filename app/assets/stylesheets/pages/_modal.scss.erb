.modalOverlay {
  background-color: $bg;
  bottom: 0;
  display: none;
  left: 0;
  overflow-y: auto;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 2000;

  body.modal-visible & {
    display: block;
  }
}

  body.modal-visible {
    overflow-y: hidden;
  }

  .modalOverlay__close {
    @include icon__clear;
    @include breakpoint (mini) {
      right: 0;
    }
    background-color: $bg-dark;
    border-radius: 50%;
    cursor: pointer;
    height: 50px;
    position: absolute;
    right: 20px;
    top: 20px;
    width: 50px;
  }

  .modalOverlay__loading {
    // TODO style this MC
    // TODO ask AT regarding loading style
    color: purple;
    display: none;
    font-family: 'Comic Sans MS', fantasy;
    font-size: 50px;
    padding: 100px;
    text-align: center;

    .modalOverlay.loading & {
      display: block;
    }
  }


.modalContainer {

  h1 {
    @include h3-flood;
    @include breakpoint (mini) {
      padding: 10px 50px 10px 10px;
    }
    color: $green-dark;
    margin-bottom: 1rem;
    padding: 10px;
  }

  .alert {
    color: $alert;
  }

  .label {
    margin-bottom: 2.75rem;
    padding: 0 10px;

    &.bottomMargin-small {
      margin-bottom: 7px;
    }
  }

    .label__title {
      @include p-meta;
      @include ff_adelle-bold;
    }

    .label__desc {
      @include p-meta;
    }

    a.label__link {
      @include p-meta;
      @include links;
      float: right;
    }

    .label__required {
      @include p-meta;
      margin-top: 10px;
    }

    .dropdown {
      margin: 7px 0 0 0;
    }

    .toggle {
      margin-top: 15px;
    }

  .form__buttons {
    padding: 0 10px;
  }

  .form__button-standard {
    @include button-standard;
    margin-right: 5px;
  }

  .form__button-primary {
    @include button-primary;
    margin-right: 5px;
  }

  .form__button-fullWidth {
    max-width: 360px;
    text-align: center;
    width: 100%;
  }
}

.modalContent {
  margin: auto;
  max-width: 536px;
  width: 100%;
}

.modalContent__login {
  margin: auto;
  max-width: 360px;
  width: 100%;
}
