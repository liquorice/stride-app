.modalOverlay {
  background-color: $bg;
  bottom: 0;
  display: none;
  left: 0;
  overflow-y: auto;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 2000;

  body.modal-visible & {
    display: block;
  }
}

  body.modal-visible {
    overflow-y: hidden;
  }

  .modalOverlay__close {
    // TODO style this MC
    position: absolute;
    top: 20px;
    right: 20px;
    width: 50px;
    height: 50px;
    background: red;
  }

  .modalOverlay__loading {
    // TODO style this MC
    color: purple;
    display: none;
    font-family: 'Comic Sans MS', fantasy;
    font-size: 50px;
    padding: 100px;
    text-align: center;

    .modalOverlay.loading & {
      display: block;
    }
  }


.modalContainer {

  h1 {
    @include h3-flood;
    color: $green-dark;
    margin-bottom: 1rem;
    padding: 10px;
  }

  .alert {
    color: $alert;
  }

  .label {
    margin-bottom: 2.75rem;
    padding: 0 10px;
  }

    .label__title {
      @include p-meta;
      @include ff_adelle-bold;
    }

    .label__desc {
      @include p-meta;
    }

    .label__required {
      @include p-meta;
      margin-top: 10px;
    }

    input[type=text] {
      margin-top: 7px;
    }

    .dropdown {
      margin: 7px 0 0 0;
    }

    .toggle {
      margin-top: 15px;
    }

  .form__buttons {
    padding: 0 10px;
  }

  .form__button-standard {
    @include button-standard;
    margin-right: 5px;
  }

  .form__button-primary {
    @include button-primary;
    margin-right: 5px;
  }

  .form__button-fullWidth {
    text-align: center;
    width: 360px;
  }
}
