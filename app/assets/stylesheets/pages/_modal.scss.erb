// Modal Styles

.modalOverlay {
  background-color: $bg;
  bottom: 0;
  display: none;
  left: 0;
  overflow-y: auto;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 2000;

  body.modal-visible & {
    display: block;
  }
}

  body.modal-visible {
    overflow-y: hidden;
  }

  .modalOverlay__close {
    @include icon__clear;
    background-color: $bg-dark;
    margin-top: 65px;
    border-radius: 50%;
    cursor: pointer;
    height: 42px;
    position: absolute;
    right: 0;
    width: 42px;
  }

  .modalOverlay__loading {
    @include topMessage;
    background-color: $white;
    opacity: 0;
    top: 0;
    transform: translateY(-10px);
    visibility: hidden;

    .modalOverlay.loading & {
      opacity: 1;
      transform: translateY(0);
      visibility: visible;
    }
  }

.modalContainer {
  margin-top: 65px;
  z-index: 1;
}

.modalContent {
  max-width: 508px;
  padding-top: 78px;
  margin: auto;
  padding-bottom: 155px;

  h1 {
    @include h2-level3;
    @include breakpoint (mini) {
      padding: 10px 50px 10px 10px;
    }
    margin-bottom: 2.474rem;
    padding: 0 10px;
  }

  .alert {
    color: $alert;
  }

  .label {
    margin-bottom: 14px;
    padding: 0 10px;

    &.small {
      margin-bottom: 7px;
    }

    &.large {
      margin-bottom: 57px;
    }

    &.xlarge {
      margin-bottom: 87px;
    }
  }

    .label__title {
      @include p-meta;
      @include ff_adelle-bold;
      color: $grey-warm;
    }

    .label__desc {
      @include p-meta;
      color: $grey-warm;
    }

    a.label__link {
      @include p-meta;
      @include links;
      float: right;
    }

    .label__required {
      @include p-meta;
      margin-top: 10px;
    }

    .dropdown {
      margin: 7px 0 0 0;
    }

    .toggle {
      margin-top: 15px;
    }

  .form__button {
    @include btn-standard;
    margin-left: 10px;
    text-align: center;
    width: 8.368rem;
    margin-top: 7px;

    &.primary {
      @include btn-primary;
    }

    &.fullwidth {
      max-width: 360px;
      text-align: center;
      width: 100%;
    }

    &.margin-med {
      margin-top: 20px;
    }

    &.margin-none {
      margin-top: 0;
    }
  }
}

.modalContent__small {
  margin: auto;
  max-width: 360px;
  width: 100%;
}
