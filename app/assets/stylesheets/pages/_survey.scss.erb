.survey {
  background-color: rgba($black, 0.6);
  height: 100%;
  position: fixed;
  transition: all 300ms ease-in-out;
  width: 100%;
  z-index: 1000;

  &.hidden {
    opacity: 0;
    visibility: hidden;
  }
}

  .survey-close {
    @include icon__clear;
    @include breakpoint(small, mini) {
      right: 15px;
    }
    cursor: pointer;
    height: 20px;
    margin-top: calc(10% + 15px);
    position: absolute;
    right: calc(50% - 334px + 15px);
    width: 20px;
  }

  .survey-popup {
    @include breakpoint(small, mini) {
      padding: 4.211rem 1.2rem;
      width: 100%;
    }
    background-color: $bg;
    margin: 10% auto;
    padding: 4.211rem 4.474rem;
    width: 668px;

    h1, h2, h3 {
      @include h2-level3;
      margin-bottom: 0.9474rem;
    }

    p {
      @include p-short;
      color: $grey-warm;
      margin-bottom: 0.6rem;

      a {
        @include links;
      }
    }
  }

    .btn-no,
    .btn-yes {
      @include btn-standard;
      margin-right: 4px;
      margin-top: 1.526rem;
      cursor: pointer;
    }

    .btn-yes {
      @include btn-primary;
    }