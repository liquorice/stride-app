.survey {
  background-color: rgba($black, 0.6);
  height: 100%;
  position: absolute;
  transition: all 300ms ease-in-out;
  width: 100%;
  z-index: 1000;

  &.hidden {
    opacity: 0;
    visibility: hidden;
  }
}

  .survey-close {
    @include icon__clear;
    cursor: pointer;
    height: 20px;
    margin-top: calc(10% + 15px);
    position: absolute;
    right: calc(50% - 284px + 15px);
    width: 20px;
  }

  .survey-popup {
    background-color: $bg;
    margin-top: 10%;
    margin: auto;
    padding: 4.211rem 4.474rem;
    width: 568px;

    h1 {
      @include h2-level3;
      margin-bottom: 0.9474rem;
    }

    p {
      @include p-short;
      color: $grey-warm;
    }
  }

    .btn-no,
    .btn-yes {
      @include btn-standard;
      margin-right: 4px;
      margin-top: 1.526rem;
    }

    .btn-yes {
      @include btn-primary;
    }