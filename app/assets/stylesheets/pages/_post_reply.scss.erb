.postReply {
  display: table;
  padding-bottom: 2rem;
  padding-top: 2rem;
  width: 100%;
}

.postReply__title {
  background-color: $green-mid;
  display: table-row;
  width: 100%;

  h3 {
    @include h3-regular;
    color: $white;
    margin-bottom: 0;
    padding: 0.4rem 1.2rem;
  }
}

.postReply__form {
  background-color: $white;
  display: table-row;
  width: 100%;

  textarea {
    @include p-regular;
    box-sizing:padding-box;
    display: block;
    display: table-cell;
    float: left;
    line-height: 1;
    margin-bottom: 0;
    overflow: hidden;
    padding: 1.2rem 1rem;
    resize: none;
    width: 87.6%;
  }
}

.postReply__button {
  background-color: $white;
  display: table-cell;
  float: left;
  padding: 0.65rem;

  button {
    @include button-standard;
    padding: 0.571em 0.877em 0.643em;
  }
}
