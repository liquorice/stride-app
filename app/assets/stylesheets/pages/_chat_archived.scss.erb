.archivedList {
  padding-bottom: 6.632rem;
}

.chatArchived__preview {
  background-color: $white;
  border-bottom: 1px solid rgba($grey-warm, 0.15);
  display: block;
  margin-bottom: 6px;
  padding: 1.053rem 1.579rem 1.526rem 1.316rem;
  width: 100%;

  .text-main {
    padding-bottom: 0.7895rem;

    h3 {
      @include h2-level1;
      padding-bottom: 5px;
    }

    p {
      @include p-short;
    }
  }

  .text-sub {
    border-top: 1px solid rgba($grey-warm, 0.1);
    padding-top: 0.9474rem;

    p {
      @include p-meta;
      color: $grey-warm;
    }
  }

  & + .pagination {
    @include breakpoint(mini) {
      margin-top: 1.467rem;
    }
    margin-top: 1.053rem;
  }
}