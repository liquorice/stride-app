// This file is for all dev-only styles, and will not be used in production
// That being said, please keep this file tidy as you would any other

body {
  @include ff_adelle-regular;
  background: #f7f6f4;
  border-top: 10px solid $primary;
  font-size: 15px;
  line-height: 1.5;
}

h1, h2, h3, h4 {
  font-size: 20px;
  margin-bottom: 1em;
}

p {
  margin-bottom: 1em;
}

input, textarea {
  border: 1px solid;
  background: #fff;
  padding: 5px;
  margin-bottom: 20px;
}

button {
  border: 1px solid;
  padding: 5px 10px;
  cursor: pointer;
}

.darkStrip {
  background: #347a7a;
  color: #fff;
}

.lightStrip {
  background: #eeefe9;
  color: #347a7a;
}

.constrained {
  padding: 20px;
}

.dev__modal {
  background: black;
  color: white;
  font-size: 40px;
  text-align: center;
  padding: 20px;
  text-transform: uppercase;
}