/* Shared Styles */
$standard-margin: 0.6rem;

@mixin bold-italic {
  em {
    @include ff_adelle-regularItalic;
  }
  strong {
    @include ff_adelle-bold;
  }
  strong em,
  em strong {
    @include ff_adelle-boldItalic;
  }
}

/* Heading Styles */

// H1

@mixin h1-level1 {
  @include ff_flood;
  @include breakpoint (huge) {
    font-size: 140px;
  }
  @include breakpoint (overlarge) {
    font-size: 120px;
  }
  @include breakpoint (large) {
    font-size: 100px;
  }
  @include breakpoint (medium) {
    font-size: 92px;
  }
  @include breakpoint (small) {
    font-size: 72px;
  }
  font-size: 3.334rem;
  transform: rotate(-5deg);
  letter-spacing: -0.025em;
  color: $white;
}

@mixin h1-level2 {
  @include ff_flood;
  @include breakpoint (small, mini) {
    font-size: 2.2rem;
    line-height: 1.05;
  }
  font-size: 3.368rem;
  line-height: 0.95;
  color: $white;
}

@mixin h1-level3 {
  @include ff_adelle-bold;
  @include breakpoint (small, mini) {
    font-size: 1.933rem;
  }
  font-size: 2.737rem;
  line-height: 1.1;
  color: $white;
}

@mixin h1-breadcrumb {
  @include ff_flood;
  @include breakpoint (small, mini) {
    font-size: 1.467rem;
    line-height: 1;
  }
  font-size: 1.526rem;
  line-height: 1.03;
  color: $white;
  a {
    color: $white;
  }
}

// H2

@mixin h2-level1 {
  @include ff_adelle-bold;
  @include breakpoint (small, mini) {
    font-size: 1.333rem;
    line-height: 1.3;
  }
  font-size: 1.263rem;
  line-height: 1.26;
  color: $black;
}

@mixin h2-level2 {
  @include ff_flood;
  @include breakpoint (small, mini) {
    font-size: 1.733rem;
    line-height: 1.1;
  }
  font-size: 2.105rem;
  line-height: 1.41;
  color: $black;
}

@mixin h2-level3 {
  @include ff_flood;
  @include breakpoint (small, mini) {
    font-size: 2.2rem;
    line-height: 1.05;
  }
  font-size: 2.368rem;
  line-height: 0.9;
  color: $blue-dark;
}

// H3

@mixin h3-regular {
  @include ff_adelle-bold;
  @include breakpoint (small, mini) {
    font-size: 1.467rem;
    line-height: 1.46;
  }
  font-size: 1.053rem;
  line-height: 1.2;
  color: $black;
}

@mixin h3-short {
  @include ff_adelle-bold;
  @include breakpoint (small, mini) {
    font-size: 1.334rem;
  }
  font-size: 1.316rem;
  line-height: 1.1;
  color: $black;
}

// H4

@mixin h4-short {
  @include ff_adelle-bold;
  @include breakpoint (small, mini) {
    font-size: 1.334rem;
    line-height: 1.1;
    color: $black;
  }
}

// P

@mixin p-regular {
  @include ff_adelle-regular;
  font-size: 1rem;
  line-height: 1.46;
  color: $black;
}

@mixin p-short {
  @include ff_adelle-regular;
  font-size: 0.934rem;
  line-height: 1.4;
  color: $black;
}

@mixin p-leading {
  @include ff_adelle-regular;
  @include breakpoint (small, mini) {
    font-size: 1.2rem;
  }
  font-size: 1.211rem;
  line-height: 1.46;
  color: $black;
}

@mixin p-meta {
  @include ff_adelle-regular;
  @include breakpoint (small, mini) {
    font-size: 0.867rem;
  }
  font-size: 0.737rem;
  line-height: 1.4;
  color: $black;
}

@mixin p-tag {
  @include ff_adelle-regular;
  @include p-meta;
  color: $links;
}

@mixin font-btn-regular {
  @include ff_adelle-bold;
  font-size: 1rem;
  line-height: 1.1;
  color: $grey-warm;
}

@mixin font-btn-short {
  @include ff_adelle-bold;
  @include breakpoint (small, mini) {
    font-size: 0.934rem;
    line-height: 1.4;
  }
  font-size: 0.895rem;
  line-height: 1.4;
  color: $black;
}