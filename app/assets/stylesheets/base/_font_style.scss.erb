/* Shared Styles */
$standard-margin: 0.6rem;

@mixin bold-italic {
  em {
    @include ff_adelle-regularItalic;
  }
  strong {
    @include ff_adelle-bold;
  }
  strong em,
  em strong {
    @include ff_adelle-boldItalic;
  }
}

//
//  Heading Styles
//

// Page Heading Styles

@mixin heading-forum {
  @include ff_flood;
  @include breakpoint (huge) {
    font-size: 140px;
  }
  @include breakpoint (overlarge) {
    font-size: 120px;
  }
  @include breakpoint (large) {
    font-size: 100px;
  }
  @include breakpoint (medium) {
    font-size: 92px;
  }
  @include breakpoint (small) {
    font-size: 72px;
  }
  font-size: 3.333334rem;
  transform: rotate(-5deg);
  letter-spacing: -0.025em;
  color: $white;
}

@mixin heading-topic {
  @include ff_flood;
  @include breakpoint (small, mini) {
    font-size: 1.933rem;
  }
  font-size: 3.368rem;
  letter-spacing: -0.02em;
  line-height: 0.95;
  color: $white;
}

@mixin heading-thread {
  @include ff_adelle-bold;
  @include breakpoint (small, mini) {
    font-size: 1.933rem;
  }
  letter-spacing: -0.01em;
  line-height: 1.11;
  font-size: 2.474rem;
  color: $white;
}

@mixin heading-breadcrumb {
  @include ff_flood;
  @include breakpoint (small, mini) {
    font-size: 1.467rem;
  }
  font-size: 1.526rem;
  line-height: 1.2;
  color: $white;
  a {
    color: $white;
  }
}

@mixin title-reply {
  @include ff_adelle-bold;
  color: $white;
  font-size: 1.053rem;
  margin: 0 0 $standard-margin;
}

// H1 Styles

@mixin h1-regular {
  @include ff_adelle-regular;
  @include breakpoint (medium) {
    font-size: 2.2rem;
  }
  @include breakpoint (small, mini) {
    font-size: 1.86667rem;
  }
  color: $black;
  font-weight: 900;
  letter-spacing: -0.01em;
  line-height: 1.1;
  margin: 0 0 0.5em;
}

@mixin h1-primary {
  @include h1-regular;
  color: $primary;
}

@mixin h1-flood {
  @include ff_flood;
  @include breakpoint (small, mini) {
    font-size: 1.737rem;
    letter-spacing: -0.025em;
  }
  color: $white;
  font-size: 3.368rem;
  letter-spacing: -0.02em;
}

// H2 Styles

@mixin h2-regular {
  @include ff_adelle-bold;
  color: $black;
  font-size: 1.263rem;
  line-height: 1.33334;
}

@mixin h2-primary {
  @include h2-regular;
  color: $primary;
}

@mixin h2-flood {
  @include ff_flood;
  color: $green-dark;
  font-size: 2.105rem;
  letter-spacing: -0.03em;
  line-height: 1.3;
  a {
    color: $green-dark;
  }
}

// H3 Styles

@mixin h3-regular {
  color: $black;
  font-size: 1.1rem;
  line-height: 1.33334;
  margin: 0 0 $standard-margin;
}

@mixin h3-primary {
  @include h3-regular;
  color: $primary;
}

@mixin h3-flood {
  @include ff_flood;
  color: $green-dark;
  font-size: 2.105rem;
  letter-spacing: -0.03em;
  line-height: 1.3;
  a {
    color: $green-dark;
  }
}

// P Styles

@mixin p-regular {
  @include ff_adelle-regular;
  @include bold-italic;
  a {
    @include links;
  }
  color: $black;
  font-size: 1rem;
  margin: 0 0 $standard-margin;
}

@mixin p-leading {
  @include ff_adelle-regular;
  @include bold-italic;
  a {
    @include links;
  }
  font-size: 1.26rem;
  color: $blue-dark;
  max-width: 44em;
}

@mixin p-short {
  @include ff_adelle-regular;
  @include bold-italic;
  a {
    @include links;
  }
  color: $black;
  font-size: 0.86667rem;
  font-size: 0.933334rem;
  line-height: 1.4;
  margin-bottom: 0.4rem;
}

@mixin p-meta {
  @include ff_adelle-regular;
  @include bold-italic;
  @include breakpoint(huge, overlarge, large) {
    font-size: 0.75rem;
  }
  a {
    @include links;
  }
  color: $grey-warm;
  font-size: 13px;
  line-height: 1.4;
}
