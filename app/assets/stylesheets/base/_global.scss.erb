html {
  @include breakpoint(huge) {
    font-size: 20px;
  }
  @include breakpoint(overlarge) {
    font-size: 19px;
  }
  @include breakpoint(large) {
    font-size: 18px;
  }
  @include breakpoint(medium) {
    font-size: 17px;
  }
  @include breakpoint(small) {
    font-size: 16px;
  }
  @include breakpoint(mini) {
    font-size: 15px;
  }
  height: 100%;
  position: relative;

  &.wf-loading {
    .header,
    .container,
    .getSupport,
    .footer {
      opacity: 0;
      transform: translateY(-10px);
    }
  }
}

::selection {
  background: $black;
  background: $blue-dark;
  color: $bg;
  text-shadow: none;
}

body {
  background-color: $bg;
  line-height: 1.46667;
  min-height: 100%;
  position: relative;
  width: 100%;
}

.header {
  @include breakpoint(huge, overlarge) {
    border-bottom: 1px solid rgba($grey-warm, 0.15);
    height: 65px;
  }
  @include breakpoint(large, medium) {
    height: 95px;
  }
  background-color: $white;
  opacity: 1;
  position: fixed;
  transform: translate3d(0, 0, 0);
  transition: all 200ms ease-out;
  width: 100%;
  z-index: 1000;

  &.hide {
    @include breakpoint(large, medium) {
      transform: translate3d(0, -53px, 0);
    }
    @include breakpoint(small, mini) {
      transform: translate3d(0, -50px, 0);
    }
  }
}

main {
  @include breakpoint(huge, overlarge) {
    padding-top: 65px;
  }
  @include breakpoint(large, medium, small, mini) {
    padding-top: 90px;
  }
}

.getSupport {
  background-color: $blue-dark;
  display: block;
  opacity: 1;
  overflow: hidden;
  position: relative;
  transition: all 200ms ease-out 400ms;

  .constrained {
    @include breakpoint(small, mini) {
      margin: 0;
      width: 100%;
    }
  }
}

  .getSupport__link {
    @include ff_quatroSlab;
    transition: background-color 200ms;
    @include breakpoint(huge, overlarge, large, medium) {
      display: table-cell;
      letter-spacing: -0.03em;
      min-height: 80px;
      width: columns(8.75);
    }
    @include breakpoint(small, mini) {
      display: block;
      padding: 22px 10px;
      width: 100%;
    }

    background-color: $primary;
    color: $white;
    font-size: 1.2rem;
    height: 100%;
    text-align: center;
    vertical-align: middle;

    &:hover {
      background-color: $primary-dark;
    }
  }

  .getSupport__text {
    @include ff_adelle-regular;
    @include breakpoint(huge, overlarge, large, medium) {
      font-size: 0.8rem;
      line-height: 1.1rem;
      min-height: 80px;
      padding: 20px 0 20px columns(0.5);
      width: columns(27);
    }
    @include breakpoint(small, mini) {
      display: block;
      font-size: 13px;
      line-height: 19px;
      padding: 22px 5%;
      text-align: center;
      width: 100%;
    }
    color: mix($blue-dark, $white, 50%);
    display: table-cell;
    height: 100%;
  }