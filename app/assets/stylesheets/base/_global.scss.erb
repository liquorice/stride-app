html {
  @include breakpoint(huge) {
    font-size: 20px;
  }
  @include breakpoint(overlarge) {
    font-size: 19px;
  }
  @include breakpoint(large) {
    font-size: 18px;
  }
  @include breakpoint(medium) {
    font-size: 17px;
  }
  @include breakpoint(small) {
    font-size: 16px;
  }
  @include breakpoint(mini) {
    font-size: 15px;
  }
  height: 100%;
  position: relative;

  &.wf-loading {
    .header,
    .container,
    .getSupport,
    .footer {
      visibility: hidden;
    }
  }
}

::selection {
  background: $black;
  background: $blue-dark;
  color: $bg;
  text-shadow: none;
}

body {
  background-color: $bg;
  line-height: 1.46667;
  min-height: 100%;
}

main {
  @include breakpoint(huge, overlarge) {
    padding-top: 65px;
  }
  @include breakpoint(large, medium, small, mini) {
    padding-top: 90px;
  }
}

.getSupport {
  transition: all 200ms ease-out 400ms;
  background-color: $blue-dark;
  display: block;
  overflow: hidden;
  position: relative;
  width: 100%;

  .container {
    @include breakpoint(huge, overlarge) {
      padding-top: 65px;
    }
    @include breakpoint(large, medium) {
      padding-top: 95px;
    }
    @include breakpoint(small, mini) {
      padding-top: 90px;
    }
    opacity: 1;
    transition: all 200ms ease-out 200ms;
  }
}
