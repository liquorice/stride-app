html {
  @include breakpoint(huge) {
    font-size: 20px;
  }
  @include breakpoint(overlarge) {
    font-size: 19px;
  }
  @include breakpoint(large) {
    font-size: 18px;
  }
  @include breakpoint(medium) {
    font-size: 17px;
  }
  @include breakpoint(small) {
    font-size: 16px;
  }
  @include breakpoint(mini) {
    font-size: 15px;
  }
  height: 100%;
  position: relative;
}

body {
  min-height: 100%;
  overflow-y: scroll;
  position: relative;
  width: 100%;
}