$toolbar-overlarge: 65px;
$toolbar-large: 53px;
$toolbar-medium: 60px;
$toolbar-small: 50px;

$navigation-medium: 40px;

html {
  @include breakpoint(huge) {
    font-size: 20px;
  }
  @include breakpoint(overlarge) {
    font-size: 19px;
  }
  @include breakpoint(large) {
    font-size: 18px;
  }
  @include breakpoint(medium) {
    font-size: 17px;
  }
  @include breakpoint(small) {
    font-size: 16px;
  }
  @include breakpoint(mini) {
    font-size: 15px;
  }
  height: 100%;
  position: relative;

  &.wf-loading {
    .header,
    .main,
    .page,
    .getSupport,
    .footer {
      opacity: 0;
      transform: translateY(-10px);
    }
  }
}

::selection {
  background: $black;
  background: $blue-dark;
  color: $bg;
  text-shadow: none;
}

body {
  background-color: $bg;
  line-height: 1.46667;
  min-height: 100%;
  position: relative;
  width: 100%;
}

// Load transistions

.header {
  opacity: 1;
  transition: all 200ms ease-out 200ms;
}

.main {
  opacity: 1;
  transition: all 200ms ease-out 400ms;
}

.page {
  opacity: 1;
  transition: all 200ms ease-out 600ms;
}

.getSupport {
  opacity: 1;
  transition: all 200ms ease-out 800ms;
}

.footer {
  opacity: 1;
  transition: all 200ms ease-out 1000ms;
}

// Layout

.constrained {
  @include breakpoint(small) {
    width: 84%;
  }
  @include breakpoint(mini) {
    width: 90%;
  }

  margin: 0 auto;
  max-width: 1200px;
  overflow: hidden;
  position: relative;
  width: 71%;

  .header & {
    @include breakpoint(medium, small, mini) {
      width: 100%;
    }
    background-color: $white;
    overflow: visible;
  }
}

.header {
  @include breakpoint(huge, overlarge) {
    height: $toolbar-overlarge;
  }
  @include breakpoint(large) {
    height: $toolbar-large;
  }
  @include breakpoint(medium) {
    height: calc(#{$toolbar-medium} + #{$navigation-medium});
  }
  @include breakpoint(small, mini) {
    height: calc(#{$toolbar-small} + #{$navigation-medium});
  }
  background-color: $white;
  border-bottom: 1px solid rgba($grey-warm, 0.15);
  position: fixed;
  width: 100%;
  z-index: 800;
}

.main {
  @include breakpoint(huge, overlarge) {
    padding-top: $toolbar-overlarge;
  }
  @include breakpoint(large) {
    padding-top: $toolbar-large;
  }
  @include breakpoint(medium) {
    padding-top: calc(#{$toolbar-medium} + #{$navigation-medium});
  }
  @include breakpoint(small, mini) {
    padding-top: calc(#{$toolbar-small} + #{$navigation-medium});
  }
  z-index: 1;
}

.page {
  @include breakpoint(small, mini) {
    padding-top: 1.2rem;
  }
  background-color: $bg;
  padding-top: 3.158rem;
  position: relative;
}

.sidebar {
  @include breakpoint(huge, overlarge, large, medium) {
    width: 23.34%;
    float: left;
  }
  @include breakpoint(small, mini) {
    margin-bottom: 20px;
    margin-right: 0;
    width: 100%;
  }
  position: relative;
}

.content {
  @include breakpoint(huge, overlarge, large, medium) {
    margin-left: calc(23.34% + 24px);
  }
  @include breakpoint(small, mini) {
    margin-bottom: 20px;
    margin-right: 0;
    padding-left: 0;
    width: 100%;
  }
  position: relative;
}

// Notifications

.notification {
  // TODO Style this MC
  background: #fff;
  font-family: 'Comic Sans MS', fantasy;
  left: 100px;
  padding: 30px;
  position: fixed;
  right: 100px;
  text-align: center;
  top: 100px;
  transition: all .3s;
  z-index: 2000;

  &.hidden {
    opacity: 0;
    visibility: hidden;
  }

  &.error {
    border: 10px solid red;
  }

  &.success {
    border: 10px solid green;
  }
}