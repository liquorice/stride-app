$toolbar-overlarge: 66px;
$toolbar-medium: 54px;
$toolbar-small: 51px;

$navigation-medium: 41px;

html {
  @include breakpoint(huge) {
    font-size: 20px;
  }
  @include breakpoint(overlarge) {
    font-size: 19px;
  }
  @include breakpoint(large) {
    font-size: 18px;
  }
  @include breakpoint(medium) {
    font-size: 17px;
  }
  @include breakpoint(small) {
    font-size: 16px;
  }
  @include breakpoint(mini) {
    font-size: 15px;
  }
  height: 100%;
  position: relative;

  &.wf-loading {
    .header,
    .main,
    .page,
    .getSupport,
    .footer {
      opacity: 0;
      transform: translateY(-10px);
    }
  }
}

::selection {
  background: $black;
  background: $blue-dark;
  color: $bg;
  text-shadow: none;
}

body {
  background-color: $bg;
  line-height: 1.46667;
  min-height: 100%;
  position: relative;
  width: 100%;
}

// Load transistions

.header {
  opacity: 1;
  transition: all 200ms ease-out 200ms;
}

.main {
  opacity: 1;
  transition: all 200ms ease-out 400ms;
}

.page {
  opacity: 1;
  transition: all 200ms ease-out 600ms;
}

.getSupport {
  opacity: 1;
  transition: all 200ms ease-out 800ms;
}

.footer {
  opacity: 1;
  transition: all 200ms ease-out 1000ms;
}

// Layout

.constrained {
  @media screen and (min-width: 1400px) {
    width: 71%;
  }
  @media screen and (min-width: 1200px) and (max-width: 1399px) {
    width: 75%;
  }
  @media screen and (min-width: 900px) and (max-width: 1199px) {
    width: 84%;
  }
  @media screen and (min-width: 720px) and (max-width: 899px) {
    width: 90%;
  }
  @include breakpoint(small, mini) {
    width: 90%;
  }

  margin: 0 auto;
  max-width: 1200px;
  overflow: hidden;
  position: relative;

  .header & {
    @include breakpoint(large, medium, small, mini) {
      width: 100%;
    }
    background-color: $white;
    overflow: visible;
  }
}

.header {
  @include breakpoint(huge, overlarge) {
    height: $toolbar-overlarge;
  }
  @include breakpoint(large, medium) {
    height: calc(#{$toolbar-medium} + #{$navigation-medium});
  }
  @include breakpoint(small, mini) {
    height: calc(#{$toolbar-small} + #{$navigation-medium});
  }
  background-color: $white;
  border-bottom: 1px solid rgba($grey-warm, 0.15);
  position: fixed;
  width: 100%;
  z-index: 800;
}

.main {
  @include breakpoint(huge, overlarge) {
    padding-top: $toolbar-overlarge;
  }
  @include breakpoint(large, medium) {
    padding-top: calc(#{$toolbar-medium} + #{$navigation-medium});
  }
  @include breakpoint(small, mini) {
    padding-top: calc(#{$toolbar-small} + #{$navigation-medium});
  }
  z-index: 1;
}

.page {
  @include breakpoint(small, mini) {
    padding-top: 0.6rem;
  }
  background-color: $bg;
  padding-top: 2.558rem;
  position: relative;
}

.sidebar {
  @include breakpoint(huge, overlarge) {
    width: 23.34%;
    float: left;
  }
  @include breakpoint(large, medium) {
    width: 24.32432%;
    float: left;
  }
  @include breakpoint(small, mini) {
    margin-bottom: 20px;
    margin-right: 0;
    padding-bottom: 0;
    width: 100%;
  }
  padding-bottom: 7rem;
  padding-top: 0.6rem;
  position: relative;
}

.content {
  @include breakpoint(huge, overlarge, large, medium) {
    margin-left: calc(24.32432% + 24px);
  }
  @include breakpoint(small, mini) {
    margin-bottom: 20px;
    margin-right: 0;
    padding-left: 0;
    width: 100%;
  }
  position: relative;
  padding-top: 0.6rem;
}

// Notifications

@mixin topMessage {
  @include p-meta;
  box-shadow: 0px 3px 0px 0px rgba($grey-cool, 0.15);
  left: 0;
  opacity: 1;
  padding: 25px 0;
  position: fixed;
  right: 0;
  text-align: center;
  transition: all 200ms ease-out 400ms;
  z-index: 750;
}

.notification {
  @include topMessage;
  @include breakpoint(huge, overlarge) {
    top: $toolbar-overlarge;
  }
  @include breakpoint(large, medium) {
    top: calc(#{$toolbar-medium} + #{$navigation-medium});
  }
  @include breakpoint(small, mini) {
    top: calc(#{$toolbar-small} + #{$navigation-medium});
  }

  color: $grey-warm;
  
  &.hidden {
    opacity: 0;
    transform: translateY(-10px);
    visibility: hidden;
  }

  &.error {
    background-color: mix($alert, $white, 10%);
    color: $alert;
  }

  &.success {
    background-color: $white;
  }

  .modalContent & {
    top: 0;
  }
}

.notification__close {
  @include icon__clear;
  @include breakpoint(mini, small, medium) {
    right: 24px;
  }

  background-color: $bg-dark;
  border-radius: 50%;
  cursor: pointer;
  display: inline-block;
  float: right;
  height: 20px;
  position: relative;
  right: 38px;
  width: 20px;
  z-index: 751;
}