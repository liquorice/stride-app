html {
  @include breakpoint(huge) {
    font-size: 20px;
  }
  @include breakpoint(overlarge) {
    font-size: 19px;
  }
  @include breakpoint(large) {
    font-size: 18px;
  }
  @include breakpoint(medium) {
    font-size: 17px;
  }
  @include breakpoint(small) {
    font-size: 16px;
  }
  @include breakpoint(mini) {
    font-size: 15px;
  }
  height: 100%;
  position: relative;

  &.wf-loading {
    .header,
    .container,
    .getSupport,
    .footer {
      opacity: 0;
      transform: translateY(-10px);
    }
  }
}

::selection {
  background: $black;
  background: $blue-dark;
  color: $bg;
  text-shadow: none;
}

body {
  background-color: $bg;
  line-height: 1.46667;
  min-height: 100%;
  position: relative;
  width: 100%;
}

main {
  @include breakpoint(huge, overlarge) {
    padding-top: 65px;
  }
  @include breakpoint(large, medium) {
    padding-top: 53px;
  }
  @include breakpoint(small, mini) {
    padding-top: 90px;
  }
}


.page {
  @include breakpoint(medium) {
    padding-bottom: 3.36rem;
    padding-top: 2.4rem;
  }
  @include breakpoint(small, mini) {
    padding-bottom: 3.15rem;
    padding-top: 3rem;
  }
  p {
    margin: 0 auto;
    max-width: 45em;
  }
  background-color: $bg;
  padding-bottom: 3.675rem;
  padding-top: 2.45rem;
  position: relative;
}

.sidebar {
  @include breakpoint(huge, overlarge, large, medium) {
    width: columns(9);
    float: left;
  }
  @include breakpoint(small, mini) {
    margin-bottom: 20px;
    margin-right: 0;
    width: mobile_columns(28);
  }
  position: relative;
}

.content {
  @include breakpoint(huge, overlarge, large, medium) {
    margin-left: columns(10);
  }
  @include breakpoint(small, mini) {
    margin-bottom: 20px;
    margin-right: 0;
    padding-left: 0;
    width: mobile_columns(28);
  }
  position: relative;
}
