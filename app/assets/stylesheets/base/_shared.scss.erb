// Links
@mixin links {
  border-bottom: 1px solid rgba($links, 0.5);
  box-shadow: inset 0 -1.25em 0 rgba($links, 0);
  color: $links;

  &:hover {
    color: mix($blue-dark, $links, 70%);
    box-shadow: inset 0 -1.25em 0 rgba($links, 0.15);
    transition: all 100ms ease-out;
  }
}

@mixin topMessage {
  @include p-meta;
  box-shadow: 0px 3px 0px 0px rgba($grey-cool, 0.15);
  left: 0;
  opacity: 1;
  padding: 25px 0;
  position: fixed;
  right: 0;
  text-align: center;
  transition: all 200ms ease-out 400ms;
  z-index: 750;
}

// Messages

.message-noThreads {
  @include p-regular;
  background: $white;
  color: $grey-warm;
  min-height: 5rem;
  padding: 1.053rem 0 1.053rem 1.842rem;
}

// Warnings

