.Zebra_DatePicker *,
.Zebra_DatePicker *:after,
.Zebra_DatePicker *:before  { -moz-box-sizing: content-box !important; -webkit-box-sizing: content-box !important; box-sizing: content-box !important }

.Zebra_DatePicker           { @include p-meta; position: absolute; background: mix($grey-warm, $white, 10%); border: 3px solid mix($grey-warm, $white, 10%); z-index: 1200; top: 0 }

.Zebra_DatePicker *         { margin: 0; padding: 0; color: $grey-warm; background: transparent; border: none }

/* = GLOBALS
----------------------------------------------------------------------------------------------------------------------*/
.Zebra_DatePicker table                      { border-collapse: collapse; border-spacing: 0; width: auto; table-layout: auto; }

.Zebra_DatePicker td,
.Zebra_DatePicker th                         { text-align: center; padding: 5px 0 }

.Zebra_DatePicker td                         { cursor: pointer }

.Zebra_DatePicker .dp_daypicker,
.Zebra_DatePicker .dp_monthpicker,
.Zebra_DatePicker .dp_yearpicker             { margin-top: 3px }

.Zebra_DatePicker .dp_daypicker td,
.Zebra_DatePicker .dp_daypicker th,
.Zebra_DatePicker .dp_monthpicker td,
.Zebra_DatePicker .dp_yearpicker td         { background: $white; width: 30px; border: 1px solid mix($grey-warm, $white, 20%); }

.Zebra_DatePicker .dp_header .dp_hover,
.Zebra_DatePicker .dp_footer .dp_hover { -webkit-border-radius: 5px; -moz-border-radius: 5px; border-radius: 5px }

/* = VISIBLE/HIDDEN STATES (USE TRANSITIONS FOR EFFECTS)
----------------------------------------------------------------------------------------------------------------------*/
.Zebra_DatePicker.dp_visible               { visibility: visible; filter: alpha(opacity=100); -khtml-opacity: 1; -moz-opacity: 1; opacity: 1; transition: opacity 0.2s ease-in-out }
.Zebra_DatePicker.dp_hidden                { visibility: hidden; filter: alpha(opacity=0); -khtml-opacity: 0; -moz-opacity: 0; opacity: 0 }

/* = HEADER
----------------------------------------------------------------------------------------------------------------------*/
.Zebra_DatePicker .dp_header td             { color: $grey-warm }

.Zebra_DatePicker .dp_header .dp_previous,
.Zebra_DatePicker .dp_header .dp_next       { width: 30px }

.Zebra_DatePicker .dp_header .dp_caption    { @include ff-adelle-bold; }
.Zebra_DatePicker .dp_header .dp_hover      { background: mix($links, $white, 20%); color: $blue-dark }

/* = DATEPICKER
----------------------------------------------------------------------------------------------------------------------*/
.Zebra_DatePicker .dp_daypicker th              { background: mix($grey-warm, $white, 10%); color: $black; }
.Zebra_DatePicker td.dp_not_in_month            { background: mix($grey-warm, $white, 10%); color: mix($grey-warm, $white, 70%); cursor: default }
.Zebra_DatePicker td.dp_not_in_month_selectable { background: $white; color: $grey-warm; cursor: pointer }
.Zebra_DatePicker td.dp_weekend                 { background: $white; }
.Zebra_DatePicker td.dp_weekend_disabled        { color: mix($grey-warm, $white, 70%); cursor: default }
.Zebra_DatePicker td.dp_selected                { background: mix($links, $white, 20%); color: $links !important }
.Zebra_DatePicker td.dp_week_number             { background: mix($grey-warm, $white, 10%); color: $black; cursor: text; font-style: italic }

/* = MONTHPICKER
----------------------------------------------------------------------------------------------------------------------*/
.Zebra_DatePicker .dp_monthpicker td    { width: 33% }

/* = YEARPICKER
----------------------------------------------------------------------------------------------------------------------*/
.Zebra_DatePicker .dp_yearpicker td     { width: 33% }

/* = FOOTER
----------------------------------------------------------------------------------------------------------------------*/
.Zebra_DatePicker .dp_footer            { margin-top: 3px }
.Zebra_DatePicker .dp_today .dp_hover,
.Zebra_DatePicker .dp_clear .dp_hover   { background: mix($links, $white, 20%); color: $blue-dark }

/* = SELECT CURRENT DAY
----------------------------------------------------------------------------------------------------------------------*/
.Zebra_DatePicker .dp_today { color: $grey-warm; padding: 3px }

/* = CLEAR DATE
----------------------------------------------------------------------------------------------------------------------*/
.Zebra_DatePicker .dp_clear { color: $grey-warm; padding: 3px }

/* = SOME MORE GLOBALS (MUST BE LAST IN ORDER TO OVERWRITE PREVIOUS PROPERTIES)
----------------------------------------------------------------------------------------------------------------------*/
.Zebra_DatePicker td.dp_current             { background: $white; color: $links }
.Zebra_DatePicker td.dp_disabled_current    { color: mix($grey-warm, $white, 70%) }
.Zebra_DatePicker td.dp_disabled            { background: mix($grey-warm, $white, 10%); color: mix($grey-warm, $white, 70%); cursor: default }
.Zebra_DatePicker td.dp_hover               { background: mix($links, $white, 20%); color: $links }

/* = ICON
----------------------------------------------------------------------------------------------------------------------*/
button.Zebra_DatePicker_Icon                { display: block; position: absolute; width: 16px; height: 16px; background: url("<%= asset_data_uri 'calendar.png' %>") no-repeat left top; text-indent: -9000px; border: none; cursor: pointer; padding: 0; line-height: 0; vertical-align: top; }
button.Zebra_DatePicker_Icon_Disabled       { background-image: url("<%= asset_data_uri 'calendar-disabled.png' %>");}

/* don't set vertical margins! */
button.Zebra_DatePicker_Icon                { margin: 0 0 0 3px }
button.Zebra_DatePicker_Icon_Inside_Right   { margin: 0 3px 0 0 }
button.Zebra_DatePicker_Icon_Inside_Left    { margin: 0 0 0 3px }