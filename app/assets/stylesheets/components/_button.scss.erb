//
// Buttons
//

@mixin login {
  @include ff_adelle-regular;
  @include breakpoint(huge, overlarge) {
    font-size: 0.75rem;
    margin: 20px 0 20px 20px;
  }
  @include breakpoint(large) {
    font-size: 0.75rem;
  }
  border-radius: 2px;
  color: $grey-warm;
  font-size: 13px;
  line-height: 1.4;
  overflow: hidden;

  a {
    color: $grey-warm;
    display: block;
    padding: 0.25em 0.75em;

    &:active,
    &.active {
      background-color: rgba($grey-warm, 0.08);
    }
  }

  .header-user__triangle {
    display: inline;
    fill: mix($grey-warm, $white, 50%);
    vertical-align: middle;
  }
}

@mixin button-standard {
  @include ff_adelle-bold;
  @include unselectable;
  background: rgba($grey-warm, 0.08);
  border-radius: 3px;
  border: none;
  color: $grey-warm;
  display: inline-block;
  font-size: 1rem;
  line-height: 1;
  padding: 0.571em 0.857em 0.643em;

  &:hover {
    background: rgba($grey-warm, 0.18);
    box-shadow: none;
    color: $black;
    transition: all 100ms ease-out;
  }
}

@mixin button-short {
  @include button-standard;
  font-size: 0.933334rem;
  line-height: 1;
  margin-bottom: 0.4rem;
  padding-top: 0.5357em;
}

@mixin button-midLevel{
  @include button-standard;
  background: $white;
  color: $links;

  &:hover {
    background: mix($links, white, 20%);
    color: $blue-dark;
  }
}

@mixin button-midLevel-short {
  @include button-short;
  background: $white;
  color: $links;

  &:hover {
    background: mix($links, white, 20%);
    color: $blue-dark;
  }
}

@mixin button-primary-short {
  @include button-short;
  background: $primary;
  color: $white;

  &:hover {
    background: $primary-dark;
    color: $white;
  }
}

@mixin button-meta {
  @include button-short;
  @include p-meta;
  padding: 0.21em 0.75em 0.2877em;
  margin: 0;
}

@mixin button-midLevel-meta {
  @include button-meta;
  background: rgba($links, 0.08);
  color: $links;
  padding: 0.21em 1.357em 0.2877em;

  &:hover {
    background: mix($links, white, 20%);
    color: $blue-dark;
  }
}