//
// Buttons
//

@mixin btn-standard {
  @include antialias;
  @include unselectable;
  @include ff_adelle-bold;
  background: rgba($grey-warm, 0.08);
  color: $grey-warm;
  font-weight: bold;
  padding: 0.571em 0.857em 0.643em;
  border-radius: 3px;
  border: none;
  display: inline-block;
  line-height: 1;
  font-size: 1rem;
  transition: all 100ms ease-out;

  &:hover {
    box-shadow: none;
    color: $black;
    background: rgba($grey-warm, 0.18);
    transition: all 100ms ease-out;
  }
}

@mixin btn-short {
  @include btn-standard;
  @include breakpoint (large, overlarge, huge) {
    padding-top: 0.5357em;
  }
  font-size: 0.933334rem;
  line-height: 1;
  margin-bottom: 0.4rem;
}

@mixin btn-meta {
  @include ff_adelle-regular;
  @include unselectable;
  @include breakpoint (large, overlarge, huge) {
    font-size: 0.75rem;
  }
  background: rgba($grey-warm, 0.08);
  color: $grey-warm;
  border-bottom: none;
  border-radius: 2px;
  display: inline-block;
  font-size: 13px;
  line-height: 1.4;
  margin-right: 6px;
  margin-top: 6px;
  padding: 0.21em 0.75em 0.2877em;

  &:hover {
    box-shadow: none;
    color: $black;
    background: rgba($grey-warm, 0.18);
    transition: all 100ms ease-out;
  }
}

@mixin btn-mid {
  background: white;
  color: $links;

  &:hover {
    background: mix($links, white, 20%);
    color: $blue-dark;
  }
}

@mixin btn-primary {
  background: $primary;
  color: white;

  &:hover {
    background: $primary-dark;
    color: white;
  }
}

@mixin btn-blue {
  background: mix($links, white, 8%);
  color: $links;
  &:hover {
    color: $blue-dark;
    box-shadow: none;
    background: mix($links, white, 20%);
  }
}



.standard_btn {
  @include btn-standard;
}

.standard_btn-primary {
  @include btn-standard;
  @include btn-primary;
}

.standard_btn-mid {
  @include btn-standard;
  @include btn-mid;
}

.standard_btn-blue {
  @include btn-standard;
  @include btn-blue;
}


.short_btn {
  @include btn-short;
}

.short_btn-primary {
  @include btn-short;
  @include btn-primary;
}

.short_btn-mid {
  @include btn-short;
  @include btn-mid;
}

.short_btn-blue {
  @include btn-short;
  @include btn-blue;
}


.meta_btn {
  @include btn-meta;
}

.meta_btn-primary {
  @include btn-meta;
  @include btn-primary;
}

.meta_btn-mid {
  @include btn-meta;
  @include btn-mid;
}

.meta_btn-blue {
  @include btn-meta;
  @include btn-blue;
}
