.strip__dark {
  @include retina() {
  background:
    url('header-forum@2x.png') top left repeat,
    url('noise-diamonds-283x283-@2x.png') top left repeat;
    background-color: $teal;
    background-size: 660px 235px, 283px 283px;
  }
  background:
  url('header-forum.png') top left repeat,
  url('noise-diamonds-283x283-@2x.png') top left repeat;
  background-color: $teal;
  background-size: 660px 235px, 283px 283px;
}

.strip__dark {
  text-align: center;
}

  .strip__dark-forum {
    @include breakpoint(small, mini) {
      padding: 1.567rem 0;
    }
    padding: 0.9902rem 0;
  }

  .strip__dark-topic {
    @include breakpoint(small, mini) {
      padding: 2.254rem 0;
    }
    padding: 3.2635rem 0;
  }

  .strip__dark-thread,
  .strip__dark-regular {
    @include breakpoint(small, mini) {
      padding: 2.254rem 0;
    }
    padding: 2.9713rem 0;
  }

  h1 {
    .strip__dark-forum & {
      @include heading-forum;
    }

    .strip__dark-topic &,
    .strip__dark-regular & {
      @include heading-topic;
    }

    .strip__dark-thread & {
      @include heading-thread;
    }
  }

  h2 {
    .strip__dark-topic &,
    .strip__dark-thread &,
    .strip__dark-regular & {
      @include heading-breadcrumb;
    }

    .strip__dark-topic & a:hover,
    .strip__dark-thread & a:hover,
    .strip__dark-regular & a:hover {
      color: $primary;
      transition: all 200ms ease-out;
    }

    .strip__dark-topic & a:hover > svg *,
    .strip__dark-thread & a:hover > svg *,
    .strip__dark-regular & a:hover > svg * {
      fill: $primary;
      transition: all 200ms ease-out;
    }
  }

.strip__edit {
  margin-bottom: -2.1em;
  margin-top: -1.7em;
  padding-top: 0;
  position: relative;
  text-align: center;
  z-index: 30;

  .btn__edit {
    @include button-primary-short;
    padding-right: 1rem;

    &:before {
      @include icon__edit-white;
      content: " ";
      float: left;
      height: 1em;
      margin: 0 3px 0 0;
      width: 1em;
    }
  }
}

.strip__light {
  @include breakpoint(medium) {
    padding-bottom: 3.36rem;
    padding-top: 3.2rem;
  }
  @include breakpoint(small, mini) {
    padding-bottom: 3.15rem;
    padding-top: 3rem;
  }
  p {
    margin: 0 auto;
    max-width: 45em;
  }
  background-size: 1440px 530px;
  background: url('noise-1440x530.png') center center repeat $bg;
  background-color: $bg-dark;
  padding-bottom: 3.675rem;
  padding-top: 3.5rem;

  header {
    text-align: center;
  }

  p {
    @include p-leading;
    text-align: center;
    a {
      @include links;
    }
  }
}