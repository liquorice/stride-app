// Moderator Only Message Styles

.strip__modOnly {
  @include p-meta;
  background-color: $black;
  color: $white;
  font-size: 13px;
  left: 0;
  line-height: 1.6;
  opacity: 0.7;
  padding: 0 6px;
  position: absolute;
  top: 0;
}

// Default and Error Strip Styles

.strip__default {
  background-color: $blue-dark;
  background-size: 283px 283px;
  background: url('noise-diamonds-283x283-@2x.png') center center repeat;
  padding: 2.526rem 0 3.211rem;
  text-align: center;

  h1 {
    @include h1-level3;
  }
}

// Chat Strip Styles

.strip__chat {
  @include retina() {
    background:
    url('header-chat@2x.png') center center repeat,
    url('noise-diamonds-283x283-@2x.png') center center repeat;
    background-color: $grey-cool;
    background-size: 660px 235px, 283px 283px;
  }
  background:
  url('header-chat.png') center center repeat,
  url('noise-diamonds-283x283-@2x.png') center center repeat;
  background-color: $grey-cool;
  background-size: 660px 235px, 283px 283px;
  text-align: center;
}

.heading__chat {
  display: inline-block;
  height: 5.684rem;
  width: 26.42rem;

  path#bolt {
    fill: $primary;
  }
}

// Forum Strip Styles

.strip__forum {
  @include retina() {
    background:
    url('header-forum@2x.png') center center repeat,
    url('noise-diamonds-283x283-@2x.png') center center repeat;
    background-color: $teal;
    background-size: 660px 235px, 283px 283px;
  }
  background:
  url('header-forum.png') center center repeat,
  url('noise-diamonds-283x283-@2x.png') center center repeat;
  background-color: $teal;
  background-size: 660px 235px, 283px 283px;
  text-align: center;
}

// Shared Strip Styles

  .strip__dark-chat {
    @include breakpoint(small, mini) {
      padding: 2.842rem 0 2.263rem;
    }
    padding: 2.842rem 0 2.263rem;
  }

  .strip__dark-forum {
    @include breakpoint(small, mini) {
      padding: 1.567rem 0;
    }
    padding: 0.9902rem 0;
  }

  .strip__dark-topic {
    @include breakpoint(small, mini) {
      padding: 2.254rem 0;
    }
    padding: 3.2635rem 0;
  }

  .strip__dark-thread,
  .strip__dark-regular {
    @include breakpoint(small, mini) {
      padding: 2.254rem 0;
    }
    padding: 2.9713rem 0;
  }

  h1 {
    .strip__dark-forum & {
      @include h1-level1;
    }

    .strip__dark-topic &,
    .strip__dark-regular & {
      @include h1-level2;
    }

    .strip__dark-thread & {
      @include h1-level3;
    }
  }

  h2 {
    .strip__dark-topic &,
    .strip__dark-thread &,
    .strip__dark-regular & {
      @include h1-breadcrumb;
      a {
        padding: 1rem;
      }
    }

    .strip__dark-topic & a:hover,
    .strip__dark-thread & a:hover,
    .strip__dark-regular & a:hover {
      color: $primary;
      transition: all 200ms ease-out;
    }

    .strip__dark-topic & a:hover > svg *,
    .strip__dark-thread & a:hover > svg *,
    .strip__dark-regular & a:hover > svg * {
      fill: $primary;
      transition: all 200ms ease-out;
    }
  }

  h3 {
    .strip__dark-regular & {
      @include h1-level3;
    }
  }

.strip__edit {
  margin-bottom: -2.1em;
  margin-top: -1.7em;
  padding-top: 0;
  position: relative;
  text-align: center;
  z-index: 30;

  .btn__edit {
    @include btn-short;
    @include btn-primary;
    @include breakpoint(huge, overlarge, large, medium) {
      padding-left: 1.0526rem;
      padding-right: 1.0526rem;
    }

    &:before {
      @include icon__edit-white;
      float: left;
      margin-right: 4px; 
    }
  }
}

.strip__light {
  @include breakpoint(small, mini) {
    padding: 1.579rem 12px;
  }
  background-size: 1440px 530px;
  background: url('noise-1440x530.png') center center repeat $bg-dark;
  padding: 2.632rem 12px 2.895rem;

  p {
    @include p-leading;
    color: $blue-dark;
    margin: 0 auto;
    max-width: 39.26rem;
    text-align: center;
    a {
      @include links;
    }
  }

  .avatar-error {
    margin: 0.3684rem auto 1rem;
    height: 7.263rem;
    width: 7.263rem;
    display: block;
  }
}