.page__forum {
  .strip__dark {
    @include retina() {
    background:
      url('header-forum@2x.png') top left repeat,
      url('noise-diamonds-283x283-@2x.png') top left repeat;
      background-color: $teal;
      background-size: 660px 235px, 283px 283px;
    }
    background:
    url('header-forum.png') top left repeat,
    url('noise-diamonds-283x283-@2x.png') top left repeat;
    background-color: $teal;
    background-size: 660px 235px, 283px 283px;
  }
}

.strip__dark {
  @include breakpoint(huge, overlarge) {
    padding-top: 18px;
  }
  @include breakpoint(large) {
    padding-top: 34px;
  }
  @include breakpoint(medium) {
    padding-top: 32px;
  }
  @include breakpoint(small) {
    padding-top: 23px;
  }
  @include breakpoint(mini) {
    padding-top: 13.5px;
  }

  h1 {
    @include forum-heading;
    line-height: .9;
    margin-top: 1.5rem;
    text-align: center;
  }

  h2 {
    @include topic-heading;
    margin-top: 1rem;
    text-align: center;
    padding-bottom: 1rem;

    &.small {
      padding-bottom: 0;
    }
  }

  h3.topic__title, h3.users__title {
    @include topic-heading-sub;
    position: relative;
    text-align: center;
  }

  h3.thread__title, h3.user__title {
    @include thread-heading;
    position: relative;
    text-align: center;
  }
}

.strip__edit {
  margin-bottom: -2.1em;
  margin-top: -1.7em;
  padding-top: 0;
  position: relative;
  text-align: center;
  z-index: 30;

  .btn__edit {
    @include button-primary-short;
    padding-right: 1rem;

    &:before {
      @include icon__edit-white;
      content: " ";
      float: left;
      height: 1em;
      margin: 0 3px 0 0;
      width: 1em;
    }
  }
}

.strip__light {
  @include breakpoint(medium) {
    padding-bottom: 3.36rem;
    padding-top: 3.2rem;
  }
  @include breakpoint(small, mini) {
    padding-bottom: 3.15rem;
    padding-top: 3rem;
  }
  p {
    margin: 0 auto;
    max-width: 45em;
  }
  background-size: 1440px 530px;
  background: url('noise-1440x530.png') center center repeat $bg;
  background-color: $bg-dark;
  padding-bottom: 3.675rem;
  padding-top: 3.5rem;

  header {
    text-align: center;
  }

  p {
    @include p-large;
    text-align: center;
    a {
      @include links;
    }
  }
}