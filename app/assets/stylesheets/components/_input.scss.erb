// Textfield style

.input__textfield {
  @include p-regular;
  color: $grey-warm;
  height: 40px;
  width: 360px;
  padding-left: 14px;
  border-bottom: 1px solid rgba($grey-warm, 0.12);

  &:focus {
    color: $links;
    border-bottom: 1px solid $links;
    box-shadow: 0px 0px 3px 1px rgba($links,0.15);
  }
}

// Toggle style

.input__toggle {
  position: absolute;
  visibility: hidden;
}

.input__toggle + label {
  display: block;
  position: relative;
  cursor: pointer;
  outline: none;
  user-select: none;
}

input.input__toggle-flat + label {
  padding: 2px;
  width: 34px;
  height: 17px;
  background-color: $grey-warm-40;
  border-radius: 60px;
  transition: background 0.4s;
  .toggle__text-right {
    color: rgba($grey-warm, 0.5);
  }
}
input.input__toggle-flat + label:before,
input.input__toggle-flat + label:after {
  display: block;
  position: absolute;
  content: "";
}
input.input__toggle-flat + label:before {
  top: 2px;
  left: 2px;
  bottom: 2px;
  right: 2px;
  background-color: $grey-warm-40;
  border-radius: 60px;
  transition: background 0.4s;
}
input.input__toggle-flat + label:after {
  top: 1px;
  left: 1px;
  bottom: 1px;
  width: 15px;
  background-color: $white;
  border-radius: 52px;
  transition: margin 0.4s, background 0.4s;
}
input.input__toggle-flat:checked + label {
  background-color: $green-dark;
  .toggle__text-right {
    color: $green-dark;
  }
  .toggle__text-left {
    color: rgba($grey-warm, 0.5);
  }
}
input.input__toggle-flat:checked + label:before {
  background-color: $green-dark;
}
input.input__toggle-flat:checked + label:after {
  margin-left: 17px;
  background-color: $white;
}
