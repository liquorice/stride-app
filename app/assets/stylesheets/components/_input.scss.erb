// Text Input Mixin

@mixin input-text {
  @include p-short;
  @include breakpoint (small, mini) {
    margin-top: 4px;
  }
  border-bottom: 1px solid rgba($grey-warm, 0.12);
  color: $grey-warm;
  margin-top: 6px;
  width: 100%;

  &:focus {
    @include breakpoint (small, mini) {
      width: calc(100% - 6px);
      margin-left: 3px;
      padding-left: 7px;
    }
    border-bottom: 1px solid $links;
    box-shadow: 0px 0px 3px 1px rgba($links, 0.15);
    color: $links;
  }
}

// Textfield

.input__textfield {
  @include input-text;
  @include breakpoint (small, mini) {
    height: 32px;
    padding: 0 0 0 10px;
  }
  padding: 0 0 0 14px;
  height: 40px;
}

// Textarea

.input__textarea {
  @include input-text;
  @include breakpoint (small, mini) {
    padding: 6px 10px;
    min-height: 112px;
  }
  padding: 10px 14px;
  min-height: 139px;
  resize: none;
  &.onWhite {
    background-color: $bg;
  }
}

// Checkbox

.checkbox {
  cursor: pointer;
  display: block;
  position: relative;
  vertical-align: text-bottom;

  input {
    opacity: 0;
    position: absolute;
    z-index: -1;
  }
}

.form__checkbox {
  background-color: $white;
  border-radius: 3px;
  border: 1px solid rgba($grey-warm, 0.15);
  height: 17px;
  left: 0;
  position: absolute;
  top: 2px;
  width: 17px;

  &:after {
    content: '';
    display: none;
    position: absolute;
  }
}

  .checkbox:hover input ~ .form__checkbox {
    border: 1px solid rgba($links, 0.15);
    box-shadow: 0px 0px 3px 1px rgba($links, 0.15);
  }

  .checkbox input:checked ~ .form__checkbox {
    background-color: $links;
    border: 1px solid $links;

    &:after {
      @include breakpoint(overlarge) {
        top: 0;
      }
      @include breakpoint(large, medium) {
        top: 1px;
      }
      @include breakpoint(small) {
        top: 2px;
      }
      @include breakpoint(mini) {
        top: 3px;
      }
      content: url("<%= asset_path 'icons/icon_check-white.svg' %>");
      display: block;
      height: 8px;
      left: 3px;
      top: -0.05rem;
      width: 9px;
    }
  }

.checkbox__text {
  @include p-meta;
  color: $grey-warm;
  display: block;
  margin-left: 22px;
}

.checkbox__text.leftFloat {
  float: left;
}

// Radio buttons

.radiobuttons {
  display: inline-block;
  text-align: left;
  vertical-align: top;

  label {
    @include p-meta;
    color: $grey-warm;
    cursor: pointer;
    display: block;
    padding-left: 24px;
    position: relative;

    & input {
      opacity: 0;
      position: absolute;
      z-index: -1;
    }

    &:nth-of-type(n+2) {
      margin-top: 11px;
    }
  }

  .radiobutton {
    background-color: $bg;
    border-radius: 50%;
    border: 1px solid mix($grey-warm, $white, 15%);
    display: block;
    height: 17px;
    left: 0;
    position: absolute;
    top: 0;
    transition: all 200ms ease-in;
    width: 17px;
  }

  label:hover input ~ .radiobutton {
    border: 6px solid rgba($links, 0.15);
  }

  label input:checked ~ .radiobutton {
    border: 6px solid $links;
    background-color: $white;
  }

  label:hover input:checked ~ .radiobutton {
    border: 6px solid $blue-dark;
    background-color: $white;
  }
}


// Toggle

.toggle {
  @include p-meta;
  @include unselectable;
  display: block;
  overflow: hidden;
}

  .toggle input {
    left: 0;
    position: absolute;
    top: 0;
    visibility: hidden;
  }

  .toggle__text {
    clear: none;
    cursor: pointer;
    float: left;
    outline: none;
    position: relative;
    transition: color 0.2s;
    user-select: none;

    &:first-of-type {
      color: $grey-warm;
      margin-right: 34px;
      padding-right: 5px;

      .toggle input:checked ~ & {
        color: rgba($grey-warm, 0.5);
      }

      &:before {
        background-color: rgba($grey-warm, 0.5);
        border-radius: 17px;
        content: '';
        display: block;
        height: 17px;
        left: 100%;
        position: absolute;
        top: 0;
        transition: background 0.2s;
        width: 34px;

        .toggle input:checked ~ & {
          background-color: $green-dark;
        }
      }

      &:after {
        background-color: $white;
        border-radius: 15px;
        content: '';
        height: 15px;
        left: calc(100% + 1px);
        position: absolute;
        top: 1px;
        transition: all 0.2s;
        width: 15px;

        .toggle input:checked ~ & {
          left: calc(100% + 18px);
        }
      }
    }

    &:nth-of-type(2) {
      color: rgba($grey-warm, 0.5);
      padding-left: 5px;

      .toggle input:checked ~ & {
        color: $green-dark;
      }
    }
  }
