.searchResults {
  position: relative;
}

  .searchResults-header {
    @include breakpoint(huge, overlarge, large, medium) {
      height: 240px;
    }
    background: url('/images/noise-diamonds-283x283-@2x.png') top left repeat $blue-dark;
    background-size: 283px 283px;

    .constrained {
      position: relative;
      height: 100%;
    }
  }

    .searchResults-header__content {
      bottom: 0;
      left: 0;
      margin-bottom: 36px;
      position: absolute;
      width: 100%;

      h1 {
        @include h2-regular;
        color: $white;
      }
    }

      .searchResults-header__content-form {
        @include breakpoint(huge, overlarge, large, medium) {
          height: 57px;
          background-color: $white;
        }
        position: relative;
        width: 100%;

        label {
          display: block;
          left: -5000px;
          position: absolute;
          top: 0;
        }

        input {
          @include ff_adelle-regular;
          padding: 10px 36px 10px 10px;
          font-size: 1.3rem;
          width: 100%;
          height: 100%;
          color: $blue-dark;
        }
      }

      .searchResults-header__form-button {
        background-color: $white;
        border-radius: 2px;
        cursor: pointer;
        height: 28px;
        overflow: hidden;
        position: absolute;
        right: 14px;
        top: 14px;
        width: 28px;

        &:hover {
          background-color: rgba($grey-warm, 0.08);
        }

        svg {
          @include breakpoint(huge, overlarge) {
            right: 4px;
            top: 4px;
            width: 20px;
            height: 20px;
          }
          @include breakpoint(large, medium) {
            right: 6px;
            top: 6px;
            width: 11px;
            height: 11px;
          }
          @include breakpoint(small, mini) {
            right: 6px;
            top: 6px;
            width: 11px;
            height: 11px;
          }
          display: block;
          position: absolute;

          .cls-4 {
            fill: $grey-warm;
          }
        }
      }


  .searchResults-lists {
    @include breakpoint(huge, overlarge, large, medium) {
      padding: 44px 0 70px;
    }
    @include breakpoint(small, mini) {
      padding: 36px 0 56px;
    }
    background-color: $bg;

    h2 {
      @include h2-regular;
      margin-bottom: 20px;
    }

    .constrained > p {
      @include p-regular;
    }
  }

// Remove Optional when stylesheet is added
    .searchResults-list {
      @extend .articleSnapshots !optional;
    }