.dropdown {
  width: 360px;
  position: relative;
  overflow: hidden;

  select {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    border: 0;
  }

  &.small {
    width: 181px;
  }
}

  .dropdown__display {
    @include p-regular;
    background: $white url("<%= asset_data_uri 'icons/dropdown-arrow-down.svg' %>") 100% center no-repeat;
    border-bottom: 1px solid rgba($grey-warm, 0.12);
    box-sizing: border-box;
    color: $grey-warm;
    display: block;
    height: 40px;
    line-height: 40px;
    padding-left: 14px;
    width: 100%;

    &.small {
      @include p-meta;
      background: $bg url("<%= asset_data_uri 'icons/dropdown-arrow-down.svg' %>") 100% center no-repeat;
      color: $black;
      height: 26px;
      line-height: 26px;
      padding-left: 8px;
    }
  }