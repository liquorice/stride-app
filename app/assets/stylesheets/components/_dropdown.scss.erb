.dropdown {
  width: 100%;
  position: relative;
  overflow: hidden;

  select {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    border: 0;
  }
}

  .dropdown__display {
    @include p-regular;
    background: $white url("<%= asset_data_uri 'icons/dropdown-arrow-down.svg' %>") 100% center no-repeat;
    border-bottom: 1px solid rgba($grey-warm, 0.12);
    box-sizing: border-box;
    color: $grey-warm;
    display: block;
    height: 40px;
    line-height: 40px;
    padding-left: 14px;
    width: 100%;
  }