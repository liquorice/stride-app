// Dropdown style

.input__dropdown {
  width: 360px;
}

.dropcontainer {
  position: relative;
}

.dropdownhidden {
  display: none;
}

.dropdownvisible {
  height: auto;
}

.trigger {
  @include p-regular;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  background: $white url("<%= asset_data_uri 'icons/dropdown-arrow-down.svg' %>") 100% center no-repeat;
  border-bottom: 1px solid rgba($grey-warm, 0.12);
  box-sizing: border-box;
  color: $grey-warm;
  display: block;
  height: 40px;
  line-height: 40px;
  padding-left: 14px;
  width: 100%;
}

.activetrigger {
  @include p-regular;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  background: $white url("<%= asset_data_uri 'icons/dropdown-arrow-up.svg' %>") 100% center no-repeat;
  border-bottom: 1px solid $links;
  box-shadow: 0px 0px 3px 1px rgba($links,0.15);
  box-sizing: border-box;
  color: $links;
  display: block;
  height: 40px;
  line-height: 40px;
  margin-bottom: 0;
  padding-left: 14px;
  width: 100%;
}

.activetrigger:hover {
  background: rgba($links, 0.15) url("<%= asset_data_uri 'icons/dropdown-arrow-up-hover.svg' %>") 100% center no-repeat;
}

.activetrigger:active {
  background: $white url("<%= asset_data_uri 'icons/dropdown-arrow-up.svg' %>") 100% center no-repeat;
}

.dropcontainer ul li {
  transition: all 100ms ease-out;
}

.dropcontainer ul {
  @include p-regular;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  background: #fff;
  box-shadow: 0px 0px 3px 1px rgba($links,0.15);
  box-sizing: border-box;
  list-style-type: none;
  margin: 0;
  width: 100%;
  overflow: hidden;

  a {
    border: 0;
    color: rgba($grey-warm, 0.5);

    &:hover {
      box-shadow: none;
    }
  }
}

.dropcontainer li {
  border-bottom: 1px solid rgba($grey-warm, 0.1);
  padding: 5px 14px;
}

.dropcontainer li:hover {
  background: rgba($links, 0.15);
  border-bottom: 1px solid $links;
  a {
    color: mix($blue-dark, $links, 70%);
  }
}