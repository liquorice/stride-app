// Tags editor

.tags {
  @include p-meta;
  @include breakpoint (small, mini) {
    margin-top: 4px;
    min-height: 32px;
    padding: 0 11px;
  }
  background: $white;
  border-bottom: 1px solid rgba($grey-warm, 0.12);
  color: $grey-warm;
  cursor: text;
  margin-top: 7px;
  min-height: 40px;
  overflow: hidden;
  padding: 0 12px;
  resize: none;
  width: 100%;

  &.focus {
    border-bottom: 1px solid $links;
    box-shadow: 0px 0px 3px 1px rgba($links, 0.15);
    color: $links;
  }
}

  .tags__tag {
    @include btn-meta;
    @include breakpoint (small, mini) {
      margin-top: 5px;
    }
    clear: none;
    float: left;
    margin-right: 7px;

    .tags.focus & {
      @include btn-blue;
    }
  }

    .tags__tag-display {
      display: inline-block;
    }

    .tags__tag-remove {
      @include icon__clear;
      background-color: $bg-dark;
      border-radius: 50%;
      cursor: pointer;
      display: inline-block;
      height: 1em;
      vertical-align: sub;
      width: 1em;
    }

  .tags__entry {
    @include p-short;
    background: transparent;
    clear: none;
    color: $grey-warm;
    display: block;
    float: left;
    padding: 7px;

    &:focus {
      color: $links;
    }
  }
