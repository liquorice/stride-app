@mixin avatar-chat {
  @include breakpoint(small, medium) {
    height: 52px;
    width: 52px;
  }
  @include breakpoint(mini) {
    height: 34px;
    width: 34px;
  }
  height: 60px;
  width: 60px;
}

@mixin avatar-mini {
  height: 18.1px;
  width: 18.1px;
}

@mixin avatar-small {
  @include breakpoint(medium, large, overlarge, huge){
    height: 25px;
    width: 25px;

    .avatar {
      &:after {
        height: 23px;
        left: 1px;
        top: 1px;
        width: 23px;
      }
    }
  }
  @include breakpoint(small, mini) {
    height: 24px;
    width: 24px;
    .avatar {
      &:after {
        height: 22px;
        left: 1px;
        top: 1px;
        width: 22px;
      }
    }
  }
}

@mixin avatar-medium {
  height: 40px;
  width: 40px;
}

@mixin avatar-large {
  @include breakpoint(small, medium) {
    height: 52px;
    width: 52px;
  }
  @include breakpoint(mini) {
    height: 47px;
    width: 47px;
  }
  height: 60px;
  width: 60px;
}

@mixin avatar-overlarge {
  @include breakpoint (small, mini) {
    height: 8.267rem;
    margin: auto;
    width: 8.267rem;
  }
  height: 6.526rem;
  width: 6.526rem;
}

.avatar {
  height: 100%;
  position: relative;
  width: 100%;

  &:before {
    background-repeat: no-repeat;
    background-size: 100% 100%;
    bottom: 0;
    content: '';
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    transition: all 200ms ease-in-out;
    z-index: 2;
  }

  &[data-face='1']:before {
    background-image: url(<%= asset_path 'avatars/avatar_face-01.svg' %>);
  }

  &[data-face='2']:before {
    background-image: url(<%= asset_path 'avatars/avatar_face-02.svg' %>);
  }

  &[data-face='3']:before {
    background-image: url(<%= asset_path 'avatars/avatar_face-03.svg' %>);
  }

  &[data-face='4']:before {
    background-image: url(<%= asset_path 'avatars/avatar_face-04.svg' %>);
  }

  &[data-face='5']:before {
    background-image: url(<%= asset_path 'avatars/avatar_face-05.svg' %>);
  }

  &[data-face='6']:before {
    background-image: url(<%= asset_path 'avatars/avatar_face-06.svg' %>);
  }

  &[data-face='7']:before {
    background-image: url(<%= asset_path 'avatars/avatar_face-07.svg' %>);
  }

  &[data-face='8']:before {
    background-image: url(<%= asset_path 'avatars/avatar_face-08.svg' %>);
  }

  &[data-face='9']:before {
    background-image: url(<%= asset_path 'avatars/avatar_face-09.svg' %>);
  }

  &[data-face='10']:before {
    background-image: url(<%= asset_path 'avatars/avatar_face-10.svg' %>);
  }


  &:after {
    background: $avatar-skin-primary;
    border-radius: 50%;
    content: '';
    height: 96%;
    left: 2%;
    position: absolute;
    top: 2%;
    transition: all 200ms ease-in-out;
    width: 96%;
    z-index: 1;
  }

  &[data-colour='0']:after {
    background: $avatar-skin-primary;
  }

  &[data-colour='1']:after {
    background: $avatar-skin-1;
  }

  &[data-colour='2']:after {
    background: $avatar-skin-2;
  }

  &[data-colour='3']:after {
    background: $avatar-skin-3;
  }

  &[data-colour='4']:after {
    background: $avatar-skin-4;
  }

  &[data-colour='5']:after {
    background: $avatar-skin-5;
  }

  &[data-colour='6']:after {
    background: $avatar-skin-6;
  }

  &[data-colour='7']:after {
    background: $avatar-skin-7;
  }

  &[data-colour='8']:after {
    background: $avatar-skin-8;
  }

  &[data-colour='9']:after {
    background: $avatar-skin-9;
  }

  &[data-colour='10']:after {
    background: $avatar-skin-10;
  }
}
