//
// Avatars
//

//skin colors
$avatar-skin-primary: $primary;
$avatar-skin-1: #925929;
$avatar-skin-2: #ceb49f;
$avatar-skin-3: #1e94ac;
$avatar-skin-4: $other-primary;

//faces
//$primary-face: url(/images/avatars/avatar_face-dale.svg);

@mixin avatar-base {
 //the skin and base color
  &:before{
    background: $avatar-skin-primary;
    border-radius: 50%;
    content: '';
    display: block;
    height: 93%;
    left: 3.5%;
    position: absolute;
    top: 3.5%;
    width: 93%;
  }
  //avatar face
  &:after {
    content: $primary-face;
    display: block;
    height: 100%;
    position: absolute;
    width: 100%;
  }
  position: relative;
}

//dale or petes face
@mixin avatar-primary {
  @include avatar-base;
}
