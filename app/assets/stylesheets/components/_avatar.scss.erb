@mixin avatar-base {
 //the skin and base color
  &:before{
    background: $avatar-skin-primary;
    border-radius: 50%;
    content: '';
    display: block;
    height: 93%;
    left: 3.5%;
    position: absolute;
    top: 3.5%;
    width: 93%;
  }
  //avatar face
  &:after {
    content: $face-primary;
    display: block;
    height: 100%;
    position: absolute;
    width: 100%;
  }
  position: relative;
}

//dale or petes face
@mixin avatar-primary {
  @include avatar-base;
}

