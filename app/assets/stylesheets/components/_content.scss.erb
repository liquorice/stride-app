.standardPage {
  @include section-base;
  background-color: $bg-dark;
  position: relative;
}

.page__left {
  @include breakpoint(huge, overlarge, large, medium) {
    margin-right: columns(0.5);
    padding-left: columns(0.5);
    width: columns(9);
  }
  @include breakpoint(small, mini) {
    margin-bottom: 20px;
    margin-right: mobile_columns(1);
    padding-left: mobile_columns(1);
    width: mobile_columns(14);
  }

  float: left;
  position: relative;

  &:before {
    content: "";
    background-color: rgba($grey-warm, 0.15);
    position: absolute;
    top: 0;
    left: 0;
    width: 1px;
    height: 100%;
  }
}

.page__right {
  @include breakpoint(huge, overlarge, large, medium) {
    margin-right: columns(0.5);
    padding-left: columns(0.5);
    width: columns(27);
  }
  @include breakpoint(small, mini) {
    margin-bottom: 20px;
    margin-right: mobile_columns(1);
    padding-left: mobile_columns(1);
    width: mobile_columns(14);
  }

  float: left;
  position: relative;

  &:before {
    content: "";
    background-color: rgba($grey-warm, 0.15);
    position: absolute;
    top: 0;
    left: 0;
    width: 1px;
    height: 100%;
  }
}

