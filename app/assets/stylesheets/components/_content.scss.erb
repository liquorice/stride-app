.page {
  @include section__base;
  background-color: $bg-dark;
  position: relative;
}

.sidebar {
  @include section__sidebar;
  float: left;
  position: relative;

  // Just for visual assistance for breakpoint testing, please remove before staging
  &:before {
    background-color: rgba($grey-warm, 0.15);
    content: "";
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 1px;
  }
}

.content {
  @include section__content;
  float: left;
  position: relative;

  // Just for visual assistance for breakpoint testing, please remove before staging
  &:before {
    content: "";
    background-color: rgba($grey-warm, 0.15);
    position: absolute;
    top: 0;
    left: 0;
    width: 1px;
    height: 100%;
  }
}
