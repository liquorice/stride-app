//
// Banners
//
@mixin banner-base {
  @include breakpoint(huge) {
    &:after {
      background: url('/images/gradient-dark-blue.png') top left repeat-y;
      background-size: 100% auto;
      content: '';
      display: block;
      height: 100%;
      left: 0;
      margin: 0 auto;
      position: absolute;
      right: 0;
      top: 0;
      width: 1200px;
    }
  }

  background-color: $blue-dark;
}

@mixin noise {
  background: url('/images/noise-200px@1.5x.png') 200px 200px;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
