// Pagination images defined here because pagination styles update these

// Pagination default and disabled icons
$icon-pagination-first-grey: url("<%= asset_data_uri 'icons/icon_first-arrow-grey.svg' %>");
$icon-pagination-prev-grey: url("<%= asset_data_uri 'icons/icon_prev-arrow-grey.svg' %>");
$icon-pagination-next-grey: url("<%= asset_data_uri 'icons/icon_next-arrow-grey.svg' %>");
$icon-pagination-last-grey: url("<%= asset_data_uri 'icons/icon_last-arrow-grey.svg' %>");

// Pagination hover icons
$icon-pagination-first-blue: url("<%= asset_data_uri 'icons/icon_first-arrow-blue.svg' %>");
$icon-pagination-prev-blue: url("<%= asset_data_uri 'icons/icon_prev-arrow-blue.svg' %>");
$icon-pagination-next-blue: url("<%= asset_data_uri 'icons/icon_next-arrow-blue.svg' %>");
$icon-pagination-last-blue: url("<%= asset_data_uri 'icons/icon_last-arrow-blue.svg' %>");

@mixin icon__standard {
  height: 0.9rem;
  width: 0.9rem;

  @include breakpoint(medium) {
    height: 11px;
    width: 11px;
    margin-top: 3px;
  }
  @include breakpoint(mini, small) {
    height: 11px;
    width: 11px;
    margin-top: 5px;
  }
}

@mixin icon__login {
  @include icon__standard;
  background: url("<%= asset_data_uri 'icons/side-bar-icons_profile--white.svg' %>") no-repeat;
}

@mixin icon__newThreadInactive {
  @include icon__standard;
  background: url("<%= asset_data_uri 'icons/side-bar-icons_plus-threads--blue copy 2.svg' %>") no-repeat;
}

@mixin icon__newThreadActive {
  @include icon__standard;
  background: url("<%= asset_data_uri 'icons/side-bar-icons_plus-threads--blue.svg' %>") no-repeat;
}

@mixin icon__newTopicActive {
  @include icon__standard;
  background: url("<%= asset_data_uri 'icons/side-bar-icons_plus-threads--blue copy.svg' %>") no-repeat;
}

@mixin icon__newChatActive {
  @include icon__standard;
  background: url("<%= asset_data_uri 'icons/side-bar-icons_plus-chat--blue.svg' %>") no-repeat;
}

@mixin icon__sideMenu {
  background-size: 1rem 0.55rem;
  background-image: url("<%= asset_data_uri 'icons/side-bar-icons_arrow-right--grey-warm.svg' %>");
  background-repeat: no-repeat;
  background-position: center center;
}

@mixin icon__edit {
  background-size: 0.9em 0.9em;
  background-image: url("<%= asset_data_uri 'icons/icon_edit-white.svg' %>");
  background-repeat: no-repeat;
  background-position: center 82%;
}

@mixin icon__back {
  @include icon__standard;
  background: url("<%= asset_data_uri 'icons/icon_back-arrow-white.svg' %>") no-repeat;
}

@mixin icon__first {
  background-size: 10.8px 10.1px;
  background-image: $icon-pagination-first-grey;
  background-repeat: no-repeat;
  background-position: center center;
}

@mixin icon__prev {
  background-image: $icon-pagination-prev-grey;
  background-size: 5.9px 10.1px;
  background-repeat: no-repeat;
  background-position: center center;
}

@mixin icon__next {
  background-image: $icon-pagination-next-grey;
  background-size: 5.9px 10.1px;
  background-repeat: no-repeat;
  background-position: center center;
}

@mixin icon__last {
  background-image: $icon-pagination-last-grey;
  background-size: 10.8px 10.1px;
  background-repeat: no-repeat;
  background-position: center center;
}

@mixin icon__lock {
  background: url("<%= asset_data_uri 'icons/icon_lock-gray.svg' %>") no-repeat;
  height: 0.8rem;
  width: 1rem;
}
