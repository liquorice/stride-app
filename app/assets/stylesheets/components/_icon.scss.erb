@mixin icon__mobileMenu-show {
  content: url("<%= asset_data_uri 'icons/side-bar-icons_arrow-down--blue--bold.svg' %>");
  height: 12px;
  width: 12px;
}

@mixin icon__mobileMenu-hide {
  content: url("<%= asset_data_uri 'icons/side-bar-icons_arrow-up--blue--bold.svg' %>");
  height: 12px;
  width: 12px;
}

@mixin icon__login {
  content: url("<%= asset_data_uri 'icons/side-bar-icons_profile--white.svg' %>");
}

@mixin icon__newThread-inactive {
  content: url("<%= asset_data_uri 'icons/side-bar-icons_plus-threads--grey.svg' %>");
}

@mixin icon__newThread {
  content: url("<%= asset_data_uri 'icons/side-bar-icons_plus-threads--blue.svg' %>");
}

@mixin icon__newTopic {
  content: url("<%= asset_data_uri 'icons/side-bar-icons_plus-topics--blue.svg' %>");
}

@mixin icon__newChat {
  content: url("<%= asset_data_uri 'icons/side-bar-icons_plus-chat--blue.svg' %>");
}

@mixin icon__arrow-right {
  content: url("<%= asset_data_uri 'icons/side-bar-icons_arrow-right--grey-warm.svg' %>");
}

@mixin icon__edit-white {
  @include breakpoint (small, mini) {
    height: 0.7333rem;
    width: 0.7333rem;
  }
  content: url("<%= asset_data_uri 'icons/icon_edit-white.svg' %>");
  height: 0.7368rem;
  width: 0.7368rem;
}

@mixin icon__edit-blue {
  background-size: 11px 11px;
  background-image: url("<%= asset_data_uri 'icons/icon_edit-blue.svg' %>");
  background-repeat: no-repeat;
  background-position: center 82%;
}

@mixin icon__lock {
  background: url("<%= asset_data_uri 'icons/icon_lock-gray.svg' %>") no-repeat;
  height: 0.8rem;
  width: 1rem;
}

@mixin icon__hide {
  background-image: url("<%= asset_data_uri 'icons/icon_hide.svg' %>");
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 14px 14px;
}

@mixin icon__clear {
  background-image: url("<%= asset_data_uri 'icons/icon_cross-grey.svg' %>");
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 8.925px 8.925px;
}

@mixin icon__quote {
  background-image: url("<%= asset_data_uri 'icons/icon_quote.svg' %>");
  background-position: center bottom;
  background-repeat: no-repeat;
  background-size: 6.6px 6.1px;
}

@mixin icon__option {
  content: url("<%= asset_data_uri 'icons/icon_dots-grey.svg' %>");
}

.icon__pagination {
  @include breakpoint (small, mini) {
    height: 0.6rem;
    width: 0.6rem;
  }
  display: inline-block;
  height: 0.5263rem;
  width: 0.5263rem;
}

.icon__back {
  @include breakpoint (small, mini) {
    height: 1rem;
    width: 1rem;
  }
  display: inline-block;
  height: 1.053rem;
  width: 1.053rem;
}

.icon__pin {
  display: inline-block;
  float: left;
  height: 16px;
  margin: 0 10px 0 0;
  margin: 0.6em 0.3em 0 0.15em;
  transition: all 100ms ease-out;
  width: 16px;

  &.pinned:hover {
    height: 11px;
    margin: calc(0.6em + 5px) calc(0.3em + 5px) 0 0.15em;
    width: 11px;
  }

  &.unpinned {
    height: 11px;
    margin: calc(0.6em + 5px) calc(0.3em + 5px) 0 0.15em;
    width: 11px;
    & .st0 {
      fill: $grey-warm;
    }
  }

  &.unpinned:hover {
    height: 16px;
    margin: 0.6em 0.3em 0 0.15em;
    width: 16px;
  }
}

.icon__avatar {
  display: inline-block;
  height: 2.947rem;
  margin-right: 0.6rem;
  vertical-align: middle;
  width: 2.947rem;
}
