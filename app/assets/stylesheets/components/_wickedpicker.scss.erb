.wickedpicker {
  @include unselectable;
  background: $white;
  margin: 0 auto;
  width: 5.368rem;
  height: auto;
  display: none;
  border-bottom: 1px solid $links;
  box-shadow: 0px 0px 3px 1px rgba($links, 0.15);

  // &__close {
  //   transform: (translateY(-25%));
  //   position: absolute;
  //   top: 25%;
  //   right: 10px;
  //   cursor: pointer;
  //   height: 15px;
  //   width: 15px;
  //   &:before {
  //     content: url("<%= asset_data_uri 'icons/icon_cross-grey.svg' %>");
  //   }
  // }

  &__controls {
    @include p-short;
    color: $links;
    margin: 0;
    &__control {
      vertical-align: middle;
      display: inline-block;
      margin: 0 auto;
      padding: 0.2rem;
      text-align: center;
      &-up, &-down {
        position: relative;
        display: block;
        cursor: pointer;
        width: 1rem;
        margin: auto;
      }
      &-up:before {
        content: url("<%= asset_data_uri 'icons/modal-arrow-small-up.svg' %>");
      }
      &-down:after {
        content: url("<%= asset_data_uri 'icons/modal-arrow-small-down.svg' %>");
      }
      &--separator {
        @extend .wickedpicker__controls__control;
        width: 5px;
      }
    }
  }
}
