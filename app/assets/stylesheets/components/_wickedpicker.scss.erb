.wickedpicker {
  @include unselectable;
  background: $white;
  border-radius: 3px;
  box-shadow: 0px 0px 6px 3px rgba($grey-warm, 0.15);
  display: none;
  height: auto;
  margin: 0 auto;

  &:before {
    border-color: transparent transparent $white transparent;
    border-style: solid;
    border-width: 0.3rem;
    content: "";
    height: 0;
    left: 14px;
    position: absolute;
    top: -0.5rem;
    width: 0;
  }

  &__controls {
    @include p-short;
    border-radius: 3px;
    color: $links;
    margin: 0;
    &__control {
      display: inline-block;
      margin: 0 auto;
      text-align: center;
      vertical-align: middle;

      &-up, &-down {
        cursor: pointer;
        display: block;
        height: 30px;
        margin: auto;
        position: relative;
        width: 38px;
      }
      &-up {
        background: url("<%= asset_data_uri 'icons/modal-arrow-small-up.svg' %>") no-repeat center center;
        background-size: 9px 5px;
        border-bottom: 1px solid rgba($grey-warm, 0.12);
        content: " ";

        &:hover {
          background: url("<%= asset_data_uri 'icons/modal-arrow-small-up-blue.svg' %>") no-repeat center center;
          background-color: mix($links, $white, 20%);
          background-size: 9px 5px;
          transition: all 200ms ease-out;
        }
      }
      &-down {
        background: url("<%= asset_data_uri 'icons/modal-arrow-small-down.svg' %>") no-repeat center center;
        background-size: 9px 5px;
        border-top: 1px solid rgba($grey-warm, 0.12);
        content: " ";

        &:hover {
          background: url("<%= asset_data_uri 'icons/modal-arrow-small-down-blue.svg' %>") no-repeat center center;
          background-color: mix($links, $white, 20%);
          background-size: 9px 5px;
          transition: all 200ms ease-out;
        }
      }
      &--hours,
      &--minutes,
      &--meridiem {
        line-height: 32px;
      }
      &--separator {
        display: none;
      }
    }
  }
}
