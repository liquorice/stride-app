// Links
@mixin links {
  border-bottom: 1px solid rgba($links, 0.5);
  box-shadow: inset 0 -1.25em 0 rgba($links, 0);
  color: $links;

  &:hover {
    color: mix($blue-dark, $links, 70%);
    box-shadow: inset 0 -1.25em 0 rgba($links, 0.15);
    transition: all 100ms ease-out;
  }
}

// Messages

.message-required {
  @include p-meta;
  color: $grey-warm;
  display: block;
  margin-top: 1rem;
  span.alert {
    color: $alert;
  }
}

.message-noThreads {
  @include p-regular;
  background: $white;
  color: $grey-warm;
  min-height: 5rem;
  padding: 1.053rem 0 1.053rem 1.842rem;
}

.message-threadDisabled {
  @include p-meta;
  color: $grey-warm;
  padding-bottom: 0.2105rem;
  text-align: right;

  span.italic {
    @include ff-adelle-regularItalic;
  }

  p {
    &.hidden:before {
      @include icon__hide;
      content: " ";
      display: inline-block;
      height: 14px;
      width: 14px;
    }
    &.locked:before {
      @include icon__lock;
      content: " ";
      display: inline-block;
      height: 14px;
      width: 14px;
    }
  }
}

.message-replyDisabled {
  margin-bottom: 6.211rem;
  margin-top: 2.105rem;
  width: 100%;
  background-color: $bg-dark;

  h3 {
    @include h3-regular;
    @include breakpoint (mini, small) {
      @include p-short;
      @include ff-adelle-bold;
      color: $grey-warm;
      padding: 0.334rem 1.2rem;
    }
    color: $grey-warm;
    padding: 0.5263rem 1.421rem;

    a {
      @include links;
      border: none;
    }
  }
}

.message-postHidden {
  @include p-short;
  @include ff-adelle-bold;
  background-color: $bg-dark;
  padding: 1rem 1.579rem 1.24rem;
  width: 100%;
}

.message-modal {
  @include p-meta;
  display: block;
  background-color: rgba($primary, 0.2);
  width: 100%;
  padding: 1.105rem 1.368rem 1.263rem;

  h3 {
    @include h3-regular;
    margin-bottom: 0.6316rem;
  }

  li {
    margin-left: 7px;

    &:before {
      content: "â€“";
      margin-left: -7px;
    }
  }
}