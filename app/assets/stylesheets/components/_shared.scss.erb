//
// Horizontal rules
//

@mixin hr {
  border-left: 0;
  border-top-color: rgba($grey-warm, 0.1);
  height: 1px;
}

@mixin links {
  border-bottom: 1px solid rgba($links, 0.5);
  box-shadow: inset 0 -1.25em 0 rgba($links, 0);
  color: $links;

  &:hover {
    color: mix($blue-dark, $links, 70%);
    box-shadow: inset 0 -1.25em 0 rgba($links, 0.15);
    transition: all 100ms ease-out;
  }
}

.warning {
  @include p-regular;
  display: block;
  background-color: rgba($primary, 0.2);
  width: 100%;
  padding: 1rem;

  ul {
    margin-bottom: 0.5rem;
  }

  li {
    margin-left: 1rem;
    margin-top: 0.5rem;

