//
// Horizontal rules
//

@mixin hr {
  border-left: 0;
  border-top-color: rgba($grey-warm, 0.1);
  height: 1px;
}

@mixin dotted-line {
  background: url('/images/dot.svg') top left repeat-x;
  background-size: 10px 4px;
  height: 4px;
}

@mixin hr--three-px {
   @include hr;
   border-top-width: 3px;
}

@mixin hr--two-px {
  @include hr;
  border-top-width: 2px;
}

@mixin borders--dark {
  @include hr;
  padding: 1em;
  background: $bg-dark;
}

//
// Extra Font Styles
//

@mixin blockquote {
  @include ff_adelle-boldItalic;
  color: $blue-dark;
  font-size: 1.263rem;
}

@mixin extract {
  @include ff_adelle-boldItalic;
  color: $blue-dark;
  font-size: 1.263rem;
  line-height: 1.35;

  &:before {
    content: "";
    background: url('/images/dot.svg') repeat-x;
    background-size: 12px 8px;
    display: block;
    height: 13px;
    margin-bottom: 6px;
    width: 37px;
  }
}

@mixin lists {
  ul, ol {
    @include p-regular;
    list-style-type: none;
    line-height: 1.46667;
    position: relative;
    left: 25px;
  }

  ul li {
    margin: 0 0 0.333334em;
    padding: 0;
    position: relative;

    &:before {
      @include ff_adelle-bold;
      color: $primary;
      content: "â€”";
      font-size: .75rem;
      line-height: 1.8;
      position: absolute;
      margin-left: -24px;
    }
  }

  ol li {
    counter-increment: list-counter;
    margin: 0.333334em 0;
    position: relative;

    &:before {
      @include ff_adelle-bold;
      color: $primary;
      content: counter(list-counter);
      margin-right: .8rem;
      position: absolute;
      margin-left: -24px;
    }
  }
}

@mixin links {
  border-bottom: 1px solid rgba($links, 0.5);
  box-shadow: inset 0 -1.25em 0 rgba($links, 0);
  color: $links;
  transition: all 100ms ease-out;

  &:hover {
    color: mix($blue-dark, $links, 70%);
    box-shadow: inset 0 -1.25em 0 rgba($links, 0.15);
    transition: all 100ms ease-out;
  }
}
