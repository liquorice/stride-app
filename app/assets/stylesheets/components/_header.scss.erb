// Toolbar and Navigation Styles

.toolbar, .navigation {
  @media screen and (min-width: 900px) and (max-width: 1199px) {
    width: 84%;
  }
  @media screen and (min-width: 720px) and (max-width: 899px) {
    width: 90%;
  }
  @include breakpoint(small, mini) {
    width: 90%;
  }
  border-bottom: 1px solid mix($grey-warm, $white, 15%);
}

.toolbar {
  @include breakpoint(huge, overlarge) {
    height: $toolbar-overlarge;
  }
  @include breakpoint(large, medium) {
    height: $toolbar-medium;
  }
  @include breakpoint(small, mini) {
    height: $toolbar-small;
  }
  background-color: $white;
  margin: 0 auto;
  position: relative;
}

// Logo Styles

.toolbar__logo {
  bottom: 0;
  display: block;
  left: 0;
  position: absolute;
  top: 0;
  width: 299px;

  & > svg {
    @include breakpoint(huge, overlarge) {
      height: 25px;
      width: 96px;
    }
    @include breakpoint(large, medium) {
      height: 20px;
      width: 74px;
    }
    @include breakpoint(small, mini) {
      height: 20px;
      width: 64px;
    }
    bottom: 0;
    left: 0;
    margin: auto 0;
    position: absolute;
    top: 0;

    .logo-path {
      fill: $primary;
    }
  }
}

  .toolbar__logo-alt {
    display: block;
    left: -5000px;
    position: absolute;
    top: 0;
  }

// Search Bar Styles

.toolbar__search {
  @include breakpoint(huge, overlarge) {
    border-right: 1px solid mix($grey-warm, $white, 15%);
    max-width: 300px;
    padding: 0 12px 0 18px;
    right: 0;
    width: calc(50% - 201px);
  }

  @include breakpoint(small, mini) {
    padding: 0 15px;
    right: 53px;
    width: 24px;

    &.expand {
      width: calc(100% - 53px);
      input {
        padding: 4px 28px 4px 5px;
        width: 100%;
      }
    }
  }

  background-color: $white;
  height: 100%;
  padding: 0 18px;
  position: absolute;
  right: 65px;
  top: 0;
  vertical-align: middle;
  width: 258px;
}

  .toolbar__search-form {
    display: block;
    height: 100%;
    position: relative;
    width: 100%;

    label,
    input {
      @include p-short;
      @include breakpoint(huge, overlarge) {
        height: 34px;
      }
      @include breakpoint(large, medium, small, mini) {
        height: 24px;
      }
      background-color: $bg;
      border-radius: 2px;
      bottom: 0;
      color: $black;
      margin: auto 0;
      position: absolute;
      right: 0;
      top: 0;
    }

    label {
      @include breakpoint(huge, overlarge) {
        padding: calc((34px - 24px)/2) 4px 0 0;
        width: 28px;
      }
      padding: 0;
      width: 24px;
      z-index: 10;

      span {
        display: block;
        left: -5000px;
        position: absolute;
        top: 0;
      }
    }

    input {
      @include breakpoint(small, mini) {
        padding: 0;
        width: 24px;
      }
      display: block;
      padding: 4px 28px 4px 5px;
      transition: width 200ms ease-out;
      vertical-align: middle;
      width: 100%;
      z-index: 5;
    }
  }

// User Menu Styles

.toolbar__user {
  @include unselectable;
  @include breakpoint(huge, overlarge) {
    width: 80px;
    right: -80px;
  }
  @include breakpoint(large, medium) {
    width: 65px;
  }
  @include breakpoint(small, mini) {
    width: 53px;
  }
  bottom: 0;
  margin: auto 0;
  position: absolute;
  right: 0;
  top: 0;

  .header-user__triangle {
    fill: mix($grey-warm, $white, 50%);
  }
}

  .toolbar__login {
    @include p-meta;
    @include breakpoint(huge, overlarge) {
      line-height: 64px;
      margin-left: 22px;
    }
    @include breakpoint(large, medium) {
      line-height: calc(#{$toolbar-medium} - 1px);
    }
    @include breakpoint(small, mini) {
      line-height: calc(#{$toolbar-small} - 1px);
    }
    border-bottom: none;
    color: $grey-warm;
    position: absolute;
  }

  .toolbar__menu {
    cursor: pointer;
    height: 100%;
    position: relative;
    width: 100%;
  }

    .toolbar__menu-avatar {
      @include avatar-small;
      @include breakpoint(huge, overlarge) {
        margin-top: calc((#{$toolbar-overlarge} - 1px - 25px)/2);
        margin-left: 22px;
      }
      @include breakpoint(medium, large) {
        margin-top: calc((#{$toolbar-medium} - 1px - 25px)/2);
      }
      @include breakpoint(small, mini) {
        margin-top: calc((#{$toolbar-small} - 1px - 24px)/2);
      }
      display: inline-block;
      margin-right: 4px;
    }

    .toolbar__menu-triangle {
      @include breakpoint(huge, overlarge) {
        line-height: 64px;
      }
      @include breakpoint(medium, large) {
        line-height: calc(#{$toolbar-medium} - 1px);
      }
      @include breakpoint(small, mini) {
        line-height: calc(#{$toolbar-small} - 1px);
      }
      display: inline-block;
      position: absolute;
    }

// User Menu Dropdown Style

      .toolbar__dropdown {
        @include breakpoint(huge, overlarge) {
          right: 7px;
          top: calc((#{$toolbar-overlarge} - 25px)/2 + 25px);
        }
        @include breakpoint(medium, large) {
          right: 15px;
          top: calc((#{$toolbar-medium} - 25px)/2 + 25px);
        }
        @include breakpoint(small, mini) {
          right: 3px;
          top: calc((#{$toolbar-small} - 25px)/2 + 25px);
        }

        background-color: $white;
        border-radius: 3px;
        box-shadow: 0px 0px 3px 1px rgba($grey-warm, 0.15);
        opacity: 0;
        position: absolute;
        text-align: left;
        transition: all 200ms ease-out;
        visibility: hidden;
        z-index: 10;

        .toolbar__menu:hover & {
          opacity: 1;
          visibility: visible;
        }

        a, span {
          @include p-short;
          color: $grey-warm;
          display: block;
          font-size: 0.895rem;
          line-height: 41px;
          min-width: 230px;
          padding-left: 15px;
        }

        span {
          @include ff_adelle-bold;
          border-top: 0;
          cursor: default;
        }

        a {
          border-top: 1px solid mix($grey-warm, $white, 10%);

          &:hover {
            background: rgba($grey-warm, 0.08);
            transition: all 100ms ease-out;
          }
        }

        &:before,&:after {
          content: "";
          height:0;
          position:absolute;
          width:0;
        }

        &:before {
          border-bottom: 8px solid rgba($grey-warm, 0.1);
          border-left: 8px solid transparent;
          border-right: 8px solid transparent;
          border-top: 7px solid transparent;
          right: 9px;
          top: -15px;
        }

        &:after {
          border-bottom: 7px solid $white;
          border-left: 7px solid transparent;
          border-right: 7px solid transparent;
          border-top: 7px solid transparent;
          right: 10px;
          top: -14px;
        }
      }

// Navigation Menu Styles

.navigation {
  @include breakpoint(huge, overlarge) {
    margin-left: calc(50% - 201px);
    position: absolute;
    top: 0;
    width: 403px;
  }
  @include breakpoint(large, medium, small, mini) {
    height: $navigation-medium;
    margin: 0 auto;
  }
  @include breakpoint(large, medium) {
    top: $toolbar-medium;
  }
  @include breakpoint(small, mini) {
    top: $toolbar-small;
  }
  background-color: mix($grey-warm, $white, 8%);
  height: 100%;
  overflow: hidden;

  &:before {
    @include breakpoint(large, medium, small, mini) {
      background-color: mix($grey-warm, $white, 8%);
      border-bottom: 1px solid mix($grey-warm, $white, 15%);
      border-top: 1px solid mix($grey-warm, $white, 15%);
      bottom: 0;
      content: "";
      display: block;
      height: calc(#{$navigation-medium} + 1px);
      left: 0;
      position: absolute;
      right: 0;
      z-index: 1;
    }
  }

  li {
    @include ff_adelle-regular;
    @include breakpoint(huge, overlarge) {
      font-size: 18px;
    }
    @include breakpoint(large) {
      font-size: 15px;
    }
    @include breakpoint(medium, small, mini) {
      font-size: 14px;
    }

    @include breakpoint(large, medium, small) {
      max-width: 85px;
    }
    @include breakpoint(mini) {
      display: inline-block;
    }

    border-right: 1px solid mix($grey-warm, $white, 15%);
    clear: none;
    color: $grey-warm;
    float: left;
    height: 100%;
    overflow: hidden;
    position: relative;
    text-align: center;
    transition: background-color 100ms, color 100ms;
    width: 25%;
    z-index: 2;

    &:first-of-type {
      border-left: 1px solid mix($grey-warm, $white, 15%);
    }

    a {
      @include breakpoint(huge, overlarge) {
        line-height: $toolbar-overlarge;
      }
      @include breakpoint(large, medium) {
        line-height: calc(#{$navigation-medium} - 1px);
      }
      @include breakpoint(small, mini) {
        line-height: $navigation-medium;
      }

      color: $grey-warm;
      display: block;
      height: 100%;
      transition: background-color 200ms;
      width: 100%;

      &.active {
        @include ff_adelle-boldItalic;
        background-color: $white;
        color: $primary;

        &:hover {
          @include breakpoint(huge, overlarge, large, medium) {
            color: $blue-mid;
          }
        }
      }

      &:hover {
        @include breakpoint(huge, overlarge, large, medium) {
          background-color: $white;
          color: $blue-mid;
        }
      }
    }
  }
}