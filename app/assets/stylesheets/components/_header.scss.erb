.header {
  @include breakpoint(huge, overlarge) {
    border-bottom: 1px solid rgba($grey-warm, 0.15);
    height: 66px;
  }
  @include breakpoint(large, medium) {
    border-bottom: 1px solid rgba($grey-warm, 0.15);
    height: 54px;
  }
  @include breakpoint(small, mini) {
    height: 90px;
  }
  background-color: $white;
  position: fixed;
  width: 100%;
  z-index: 1000;
}

.toolbar {
  @include breakpoint(huge, overlarge) {
    height: 65px;
  }
  @include breakpoint(large, medium) {
    height: 53px;
  }
  @include breakpoint(small, mini) {
    height: 50px;
  }
  margin: 0 auto;
  max-width: 1200px;
  position: relative;
  width: 90%;
}

  .toolbar__logo {
    bottom: 0;
    display: block;
    left: 0;
    position: absolute;
    top: 0;
    width: 280px;

    & > svg {
      @include breakpoint(huge, overlarge) {
        height: 25px;
        width: 96px;
      }
      @include breakpoint(large, medium) {
        height: 20px;
        width: 74px;
      }
      @include breakpoint(small, mini) {
        height: 20px;
        width: 64px;
      }
      bottom: 0;
      left: 0;
      margin: auto 0;
      position: absolute;
      top: 0;

      .logo-path {
        fill: $primary;
      }
    }
  }

    .toolbar__logo-alt {
      display: block;
      left: -5000px;
      position: absolute;
      top: 0;
    }

  .toolbar__search {
    @include breakpoint(huge, overlarge, large) {
      border-right: 1px solid mix($grey-warm, $white, 15%);
      padding: 0 12px;
      position: absolute;
      right: 80px;
      top: 0;
      width: calc(100% - (50% + 283px));
    }
    @include breakpoint(medium) {
      padding: 0 12px;
      position: absolute;
      right: 55px;
      top: 0;
      width: calc(100% - (50% + 283px));
    }
    @include breakpoint(small, mini) {
      overflow: hidden;
      padding-top: 15px;
      position: absolute;
      right: 65px;
    }
    background-color: $white;
    height: 100%;
    margin-right: 0;
    position: relative;
    vertical-align: middle;

    &.active {
      @include breakpoint(small, mini) {
        width: 100%;

        .toolbar__search-form{
          position: absolute;
          right: 0;
          top: 15px;
          width: calc(100% - 83px);
        }
      }
    }
  }

    .toolbar__search-form {
      @include breakpoint(small, mini) {
        border-radius: 2px;
        height: 24px;
        overflow: hidden;
        width: 24px;
      }
      display: block;
      height: 100%;
      position: relative;
      width: 100%;

      label {
        @include ff_adelle-regular;
        @include breakpoint(huge, overlarge) {
          height: 33px;
        }
        @include breakpoint(large, medium) {
          height: 25px;
        }
        @include breakpoint(small, mini) {
          height: 24px;
        }
        background-color: $bg;
        bottom: 0;
        color: $black;
        margin: auto 0;
        position: absolute;
        right: 0;
        top: 0;
        width: 24px;
        z-index: 10;

        span {
          display: block;
          left: -5000px;
          position: absolute;
          top: 0;
        }

        svg {
          @include breakpoint(huge, overlarge) {
            height: 14px;
            right: 6px;
            top: 8px;
            width: 14px;
          }
          @include breakpoint(large, medium) {
            height: 11px;
            right: 6px;
            top: 6px;
            width: 11px;
          }
          @include breakpoint(small, mini) {
            height: 11px;
            right: 6px;
            top: 6px;
            width: 11px;
          }
          display: block;
          position: absolute;

          .cls-4 {
            fill: $grey-warm;
          }
        }
      }

      input {
        @include ff_adelle-regular;
        @include breakpoint(huge, overlarge) {
          font-size: 0.75rem;
          height: 33px;
        }
        @include breakpoint(large, medium) {
          font-size: 0.75rem;
          height: 25px;
        }
        @include breakpoint(small, mini) {
          height: 24px;
        }
        background-color: $bg;
        bottom: 0;
        color: $black;
        display: block;
        font-size: 13px;
        line-height: 1.4;
        margin: auto 0;
        padding-right: 28px;
        padding: 4px 28px 4px 5px;
        position: absolute;
        right: 0;
        top: 0;
        vertical-align: middle;
        width: 100%;
        z-index: 5;
      }
    }

  .toolbar__user {
    @include unselectable;
    @include breakpoint(huge, overlarge, large) {
      width: 80px;
    }
    @include breakpoint(medium, small, mini) {
      width: 65px;
    }
    bottom: 0;
    margin: auto 0;
    position: absolute;
    right: 0;
    top: 0;

    .header-user__triangle {
      fill: mix($grey-warm, $white, 50%);
    }
  }

  .toolbar__login {
    @include p-meta;
    border-bottom: none;
    color: $grey-warm;
    margin-left: 19px;
    position: absolute;
    top: 1rem;
  }

  .toolbar__menu {
    position: relative;
    width: 100%;
    height: 100%;
    cursor: pointer;
  }

    .toolbar__menu-avatar {
      @include avatarSize-small;
      @include breakpoint(small, mini, medium, large) {
        margin-top: 0.75rem;
      }
      display: inline-block;
      margin-left: 19px;
      margin-top: 1rem;
      margin-right: 7px;
    }

    .toolbar__menu-triangle {
      @include breakpoint(medium, large) {
        margin-top: 1rem;
      }
      display: inline-block;
      position: absolute;
      margin-top: 1.25rem;
    }

  .toolbar__dropdown {
    @include breakpoint(huge, overlarge) {
      right: 6px;
    }
    @include breakpoint(large) {
      right: 8px;
    }
    @include breakpoint(small, mini, medium) {
      right: -3px;
    }
    transition: all 200ms ease-out;
    opacity: 0;
    background-color: $white;
    border-radius: 3px;
    box-shadow: 0px 0px 3px 1px rgba($grey-warm, .15);
    position: absolute;
    text-align: left;
    top: 70%;
    z-index: 900;
    visibility: hidden;

    .toolbar__menu:hover & {
      opacity: 1;
      visibility: visible;
    }

    a {
      @include ff_adelle-regular;
      @include breakpoint(huge, overlarge) {
        font-size: 0.75rem;
      }
      @include breakpoint(large) {
        font-size: 0.75rem;
      }
      color: $grey-warm;
      font-size: 13px;
      line-height: 1.4;
      display: block;
      padding: 10px 15px;
      min-width: 230px;
      border-top: 1px solid rgba($grey-warm, 0.1);

      &:first-child {
        @include ff_adelle-bold;
        border-top: 0;
      }

      &:hover {
        background: rgba($grey-warm, 0.08);
        transition: all 100ms ease-out;
      }
    }

    &:before,&:after {
      @include breakpoint(huge, overlarge) {
        top: -0.7rem;
      }
      @include breakpoint(large) {
        top: -0.8rem;
      }
      @include breakpoint(small, medium) {
        top: calc( -0.75rem + 1px);
      }
      @include breakpoint(mini) {
        top: calc( -0.85rem + 1px);
      }
      border-color: transparent transparent $white transparent;
      border-style:solid;
      border-width:0.4rem;
      content: "";
      height:0;
      position:absolute;
      right: 0.5rem;
      width:0;
    }

    &:before {
      @include breakpoint(huge) {
        right: 12px;
      }
      @include breakpoint(overlarge) {
        right: 11px;
      }
      @include breakpoint(large) {
        right: 10px;
      }
      @include breakpoint(medium) {
        right: 9px;
      }
      @include breakpoint(small) {
        right: 8px;
      }
      @include breakpoint(mini) {
        right: 7px;
      }
      border-bottom-color: rgba($grey-warm, 0.5);
      border-bottom: 6px solid rgba($grey-warm, 0.5);
      border-left: 6px solid transparent;
      border-right: 6px solid transparent;
      content: "";
      position:absolute;
    }
  }

.navigation {
  @include breakpoint(huge, overlarge, large) {
    margin-left: calc(50% - 203px);
    position: relative;
    top: -100%;
    width: 406px;
  }
  @include breakpoint(medium) {
    margin-left: calc(50% - 213px);
    position: relative;
    top: -100%;
    width: 406px;
  }
  @include breakpoint(small, mini) {
    box-shadow: 0px 1px rgba($grey-warm, .15);
    height: 40px;
    margin: 0 auto;
    width: 90%;
  }
  overflow: hidden;
  height: 100%;

  &:before {
    @include breakpoint(small, mini) {
      background-color: mix($grey-warm, $white, 8%);
      border-bottom: 1px solid rgba($grey-warm, 0.15);
      border-top: 1px solid rgba($grey-warm, 0.15);
      bottom: -1px;
      content: "";
      display: block;
      height: 42px;
      left: 0;
      position: absolute;
      right: 0;
      z-index: 1;
    }
  }

  li {
    @include ff_adelle-regular;
    @include breakpoint(huge, overlarge, large, medium) {
      background-color: mix($grey-warm, $white, 8%);
      width: 25%;

      &:first-child {
        a {
          border-left: 1px solid rgba($grey-warm, .15);
        }
      }
    }
    @include breakpoint(huge, overlarge) {
      font-size: 18px;
    }
    @include breakpoint(large, medium) {
      font-size: 15px;
    }
    @include breakpoint(small) {
      border-right: 1px solid rgba($grey-warm, .15);
      max-width: 85px;
      width: 25%;

      &:first-of-type {
        border-left: 1px solid rgba($grey-warm, .15);
      }
    }
    @include breakpoint(mini) {
      border-left: 1px solid rgba($grey-warm, .15);
      display: inline-block;
      width: 25%;

      &:last-of-type {
        border-right: 1px solid rgba($grey-warm, .15);
      }
    }
    @include breakpoint(small, mini) {
      font-size: 14px;
    }
    clear: none;
    color: $grey-warm;
    float: left;
    height: 100%;
    overflow: hidden;
    position: relative;
    text-align: center;
    transition: background-color 100ms, color 100ms;
    z-index: 2;

    a {
      color: $grey-warm;
      display: block;

      @include breakpoint(huge, overlarge) {
        border-right: 1px solid rgba($grey-warm, .15);
        padding-top: 1rem;

        &:hover {
          background-color: $white;
          color: $blue-mid;
        }
      }
      @include breakpoint(large, medium) {
        border-right: 1px solid rgba($grey-warm, .15);
        padding: 0.82rem 0;

        &:hover {
          background-color: $white;
          color: $blue-mid;
        }
      }
      @include breakpoint(small) {
        padding: 10px 0.5em;

        &:active {
          background-color: $white;
          color: $blue-mid;
        }
      }
      @include breakpoint(mini) {
        padding: 10px 0.5em;
        text-align: center;

        &:active {
          background-color: $white;
          color: $blue-mid;
        }
      }
      display: block;
      width: 100%;
      height: 100%;

      &.active {
        @include ff_adelle-boldItalic;
        background-color: $white;
        color: $primary;

        &:hover {
          color: $blue-mid;
        }
      }
    }
  }
}