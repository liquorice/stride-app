//
// Header Navigation Styles
//

@mixin nav-item {
  @include ff_adelle-regular;
  @include breakpoint(huge, overlarge) {
    font-size: 18px;
  }
  @include breakpoint(large, medium) {
    font-size: 15px;
  }
  @include breakpoint(small, mini) {
    font-size: 14px;
  }
  color: $grey-warm;
  display: block;
  float: left;
  text-align: center;
  transition: background-color 100ms, color 100ms;

  a {
    color: $grey-warm;
    display: block;
  }
}

.hdrToolbar {
  @include breakpoint(large, medium) {
    border-bottom: 1px solid rgba($grey-warm, 0.15);
    height: 53px;
  }
  @include breakpoint(small, mini) {
    border-bottom: 1px solid rgba($grey-warm, 0.15);
    height: 50px;
  }
  height: 100%;
  position: relative;

  .group {
    height: 100%;
    text-align: right;
  }
}

  .hdrToolbar__logo {
    bottom: 0;
    display: block;
    left: 0;
    margin: auto 0;
    position: absolute;
    top: 0;
    width: 280px;

    & > svg {
      @include breakpoint(huge, overlarge) {
        height: 25px;
        width: 96px;
      }
      @include breakpoint(large, medium) {
        height: 20px;
        width: 74px;
      }
      @include breakpoint(small, mini) {
        height: 20px;
        width: 64px;
      }

      bottom: 0;
      left: 0;
      margin: auto 0;
      position: absolute;
      top: 0;

      .logo-path {
        fill: $primary;
      }
    }
  }

    .hdrToolbar__logo-alt {
      display: block;
      left: -5000px;
      position: absolute;
      top: 0;
    }

  .hdrToolbar__search {
    @include breakpoint(huge, overlarge, large) {
      border-right: 1px solid mix($grey-warm, $white, 15%);
      padding: 0 12px;
      position: absolute;
      right: 80px;
      top: 0;
      width: calc(100% - (50% + 283px));
    }
    @include breakpoint(medium) {
      padding: 0 12px;
      position: absolute;
      right: 55px;
      top: 0;
      width: calc(100% - (50% + 283px));
    }
    @include breakpoint(small, mini) {
      overflow: hidden;
      padding-top: 15px;
      position: absolute;
      right: 65px;
    }
    background-color: $white;
    height: 100%;
    margin-right: 0;
    position: relative;
    vertical-align: middle;

    &.active {
      @include breakpoint(small, mini) {
        width: 100%;

        .hdrToolbar__search-form{
          position: absolute;
          right: 0;
          top: 15px;
          width: calc(100% - 83px);
        }
      }
    }
  }

    .hdrToolbar__search-form {
      @include breakpoint(small, mini) {
        border-radius: 2px;
        height: 24px;
        overflow: hidden;
        width: 24px;
      }
      display: block;
      height: 100%;
      position: relative;
      width: 100%;

      label {
        @include ff_adelle-regular;
        @include breakpoint(huge, overlarge) {
          height: 33px;
        }
        @include breakpoint(large, medium) {
          height: 25px;
        }
        @include breakpoint(small, mini) {
          height: 24px;
        }
        background-color: $bg;
        bottom: 0;
        color: $black;
        margin: auto 0;
        position: absolute;
        right: 0;
        top: 0;
        width: 24px;
        z-index: 10;

        span {
          display: block;
          left: -5000px;
          position: absolute;
          top: 0;
        }

        svg {
          @include breakpoint(huge, overlarge) {
            height: 14px;
            right: 6px;
            top: 8px;
            width: 14px;
          }
          @include breakpoint(large, medium) {
            height: 11px;
            right: 6px;
            top: 6px;
            width: 11px;
          }
          @include breakpoint(small, mini) {
            height: 11px;
            right: 6px;
            top: 6px;
            width: 11px;
          }
          display: block;
          position: absolute;

          .cls-4 {
            fill: $grey-warm;
          }
        }
      }

      input {
        @include ff_adelle-regular;
        @include breakpoint(huge, overlarge) {
          font-size: 0.75rem;
          height: 33px;
        }
        @include breakpoint(large, medium) {
          font-size: 0.75rem;
          height: 25px;
        }
        @include breakpoint(small, mini) {
          height: 24px;
        }
        background-color: $bg;
        bottom: 0;
        color: $black;
        display: block;
        font-size: 13px;
        line-height: 1.4;
        margin: auto 0;
        padding-right: 28px;
        padding: 4px 28px 4px 5px;
        position: absolute;
        right: 0;
        top: 0;
        vertical-align: middle;
        width: 100%;
        z-index: 5;
      }
    }

  .hdrToolbar__user {
    @include unselectable;
    @include breakpoint(huge, overlarge, large) {
      width: 80px;
    }
    @include breakpoint(medium, small, mini) {
      width: 65px;
    }
    bottom: 0;
    margin: auto 0;
    padding: 0 0 0 19px;
    position: absolute;
    right: 0;
    top: 0;

    p {
      @include login;
      -ms-transform: translateY(100%);
      -webkit-transform: translateY(100%);
      position: relative;
      text-align: left;
      top: 100%;
      transform: translateY(100%);
    }

    .header-user__triangle {
      fill: mix($grey-warm, $white, 50%);
    }
  }

  .hdrToolbar__menu {
    position: absolute;
    text-align: left;
    top: calc(50% - 12px);
    z-index: 5;

    div:nth-child(n) {
      float: left;
      margin-right: 4px;
    }
  }

    .hdrToolbar__menu-avatar {
      display: block;
      float: left;
      height: 25px;
      width: 25px;
    }

    .hdrToolbar__menu-triangle {
      @include breakpoint(huge, overlarge) {
        margin-top: 2px;
      }
      @include breakpoint(small, mini, medium, large) {
        margin-top: 5px;
      }
    }

  .hdrToolbar__dropdown {
    @include breakpoint(huge, overlarge) {
      right: 9px;
      top: 65%;
    }
    @include breakpoint(large) {
      right: 11px;
      top: 70%;
    }
    @include breakpoint(small, mini, medium) {
      right: 0;
      top: 70%;
    }
    background-color: $white;
    border-radius: 3px;
    box-shadow: 0px 0px 1px 1px rgba($grey-warm, 0.1);
    display: none;
    min-width: 230px;
    position: absolute;
    text-align: left;
    width: 230px;
    z-index: 900;

    a {
      @include login;
      display: block;
      padding: 10px 15px;

      &:nth-child(n + 2) {
        border-top: 1px solid rgba($grey-warm, 0.1);
      }

      &:hover {
        background: rgba($grey-warm, 0.08);
        transition: all 100ms ease-out;
      }
    }

    &:before,&:after {
      @include breakpoint(huge, overlarge) {
        top: -0.7rem;
      }
      @include breakpoint(large) {
        top: -0.8rem;
      }
      @include breakpoint(small, medium) {
        top: -0.75rem;
      }
      @include breakpoint(mini) {
        top: -0.85rem;
      }
      border-color: transparent transparent $white transparent;
      border-style:solid;
      border-width:0.4rem;
      content: "";
      height:0;
      position:absolute;
      right: 0.5rem;
      width:0;
    }

    &:before {
      @include breakpoint(huge) {
        right: 12px;
      }
      @include breakpoint(overlarge) {
        right: 11px;
      }
      @include breakpoint(large) {
        right: 10px;
      }
      @include breakpoint(medium) {
        right: 9px;
      }
      @include breakpoint(small) {
        right: 8px;
      }
      @include breakpoint(mini) {
        right: 7px;
      }
      border-bottom-color: rgba($grey-warm, 0.5);
      border-bottom: 6px solid rgba($grey-warm, 0.5);
      border-left: 6px solid transparent;
      border-right: 6px solid transparent;
      content: "";
      position:absolute;
    }
  }

.hdrNav {
  @include breakpoint(huge, overlarge, large) {
    height: 100%;
    left: calc(50% - 203px);
    position: absolute;
    top: 0;
  }
  @include breakpoint(medium) {
    height: 100%;
    left: calc(50% - 213px);
    position: absolute;
    top: 0;
  }
  @include breakpoint(small, mini) {
    background-color: mix($grey-warm, $white, 8%);
    box-shadow: 0px 1px rgba($grey-warm, .15);
    display: block;
    height: 40px;
    width: 100%;
  }
  display: block;
  position: relative;

  .group {
    @include breakpoint(huge, overlarge, large, medium) {
      margin: 0;
      max-width: 100%;
      padding: 0;
      width: 100%;
    }
    height: 100%;
  }

  ul {
    @include breakpoint(huge, overlarge, large, medium) {
      display: inline-block;
      width: 406px;
    }
    @include breakpoint(small) {
      display: block;
      width: 90%;
    }
    @include breakpoint(mini) {
      display: block;
      text-align: center;
      width: 320px;
    }
    height: 100%;
    position: relative;

    li {
      @include nav-item;
      @include breakpoint(huge, overlarge, large, medium) {
        background-color: mix($grey-warm, $white, 8%);
        height: 100%;
        width: 25%;

        &:first-child {
          a {
            border-left: 1px solid rgba($grey-warm, .15);
          }
        }
      }
      @include breakpoint(small) {
        border-right: 1px solid rgba($grey-warm, .15);
        display: inline-block;
        max-width: 85px;
        width: 25%;

        &:first-of-type {
          border-left: 1px solid rgba($grey-warm, .15);
        }
      }
      @include breakpoint(mini) {
        border-left: 1px solid rgba($grey-warm, .15);
        display: inline-block;
        width: 25%;

        &:last-of-type {
          border-right: 1px solid rgba($grey-warm, .15);
        }
      }
      overflow: hidden;

      a {
        @include breakpoint(huge, overlarge) {
          border-right: 1px solid rgba($grey-warm, .15);
          padding: 1rem 0;

          &:hover {
            background-color: $white;
            color: $blue-mid;
          }
        }
        @include breakpoint(large, medium) {
          border-right: 1px solid rgba($grey-warm, .15);
          padding: 0.82rem 0;

          &:hover {
            background-color: $white;
            color: $blue-mid;
          }
        }
        @include breakpoint(small) {
          padding: 10px 0.5em;

          &:active {
            background-color: $white;
            color: $blue-mid;
          }
        }
        @include breakpoint(mini) {
          padding: 10px 0.5em;
          text-align: center;

          &:active {
            background-color: $white;
            color: $blue-mid;
          }
        }
        display: block;
        height: 100%;
        transition: background-color 200ms;

        &.active {
          @include ff_adelle-boldItalic;
          background-color: $white;
          color: $primary;

          &:hover {
            color: $blue-mid;
          }
        }
      }
    }
  }
}