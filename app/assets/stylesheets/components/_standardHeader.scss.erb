$pages: 'forum' $teal, 'articles' $blue-dark, 'support' $blue-dark;

@each $p in $pages {
  body.page-#{nth($p, 1)} .standardHeader {
    @include retina() {
      background:
        url('header-#{nth($p, 1)}@2x.png') top left repeat,
        url('noise-diamonds-283x283-@2x.png') top left repeat;
      background-size: 660px 235px, 283px 283px;
      background-color: nth($p, 2);
    }

    background:
      url('header-#{nth($p, 1)}.png') top left repeat,
      url('noise-diamonds-283x283-@2x.png') top left repeat;
    background-size: 660px 235px, 283px 283px;
    background-color: nth($p, 2);
  }
}

$plain-pages: '404' $blue-dark, 'terms-of-use' $blue-dark, 'privacy-policy' $blue-dark;

@each $p in $plain-pages {
  body.page-#{nth($p, 1)} .standardHeader {
    @include retina() {
      background: url('/images/noise-diamonds-283x283-@2x.png') top left repeat;
      background-size: 283px 283px;
      background-color: nth($p, 2);
    }

    background: url('/images/noise-diamonds-283x283-@2x.png') top left repeat;
    background-size: 283px 283px;
    background-color: nth($p, 2);
  }
}

.standardHeader {
  @include breakpoint(huge, overlarge) {
    padding-top: 18px;
    min-height: 212px;
  }
  @include breakpoint(large) {
    padding-top: 36px;
     min-height: 212px;
  }
  @include breakpoint(medium) {
    padding-top: 36px;
     min-height: 200px;
  }
  @include breakpoint(small) {
    padding-top: 30px;
     min-height: 160px;
  }
  @include breakpoint(mini) {
    padding-top: 30px;
     min-height: 130px;
  }
  position: relative;

  &.plain {
    @include breakpoint(huge, overlarge, large, medium) {
      min-height: 164px;
    }
    @include breakpoint(small) {
      min-height: 140px;
    }
    @include breakpoint(mini) {
      min-height: 130px;
    }
    padding-top: 0;

    .constrained {
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    h1 {
      @include ff_adelle-bold;
      @include breakpoint(small, mini) {
        font-size: 2.4rem;
        line-height: 1.09em;
        margin-top: 3.2rem;
      }
      color: $white;
      font-size: 3.06rem;
      line-height: 1.09em;
      transform: none;
      margin-top: 2.8rem;
    }
  }

  h1 {
    @include section-heading;
    color: $white;
    text-align: center;
    line-height: .9;
    margin-top: 1.5rem;
  }
}