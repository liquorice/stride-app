@mixin pagination__btn {
  @include btn-short;
  @include p-meta;
  @include breakpoint (small, mini) {
    height: 1.6rem;
    line-height: 0.9;
  }
  background-color: $white;
  border-radius: 0;
  color: $grey-warm;
  height: 1.579rem;
  line-height: 1;
  margin: 0;

  &:hover {
    background: rgba($links, 0.2);
    color: $blue-dark;
  }

  &:not(.disabled):hover > svg * {
    fill: $blue-dark;
  }

  &.disabled {
    background: rgba($bg-dark, 0.5);
    color: $grey-warm;
    cursor: default;
    opacity: 0.7;

    &:hover {
      background: rgba($bg-dark, 0.5);
      color: $grey-warm;
    }
  }

  &.disabled svg > *,
  &.disabled:hover svg > * {
    fill: mix($grey-warm, $white, 70%);
  }
}

.pagination {
  display: block;
  margin-top: 7px;
  margin: auto auto;
  text-align: center;
}

.pagination__link,
.pagination__display {
  @include pagination__btn;
}

.pagination__display {
  @include breakpoint(mini) {
    width: 83.25px;
  }
  padding-left: 0;
  padding-right: 0;
  width: 150px;

  &:hover {
    background: $white;
    color: $grey-warm;
  }
}

.pagination__link.first,
.pagination__link.prev {
  @include breakpoint(small, mini) {
    padding-left: 0.566em;
    padding-right: 0.6245em;
  }
  padding-left: 0.6428em;
}

.pagination__link.next,
.pagination__link.last {
  @include breakpoint(small, mini) {
    padding-left: 0.6245em;
    padding-right: 0.566em;
  }
  padding-right: 0.6428em;
}

.pagination__link.first {
  border-bottom-left-radius: 3px;
  border-right: 1px solid rgba($grey-warm, 0.1);
  border-top-left-radius: 3px;
}

.pagination__link.prev {
  border-right: 1px solid rgba($grey-warm, 0.1);
}

.pagination__link.next {
  border-left: 1px solid rgba($grey-warm, 0.1);
}

.pagination__link.last {
  border-bottom-right-radius: 3px;
  border-left: 1px solid rgba($grey-warm, 0.1);
  border-top-right-radius: 3px;
}
