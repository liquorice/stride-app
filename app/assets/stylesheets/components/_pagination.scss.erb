@mixin pagination__btn {
  content: " ";
  height: 10.8px;
  width: 10.1px;
  line-height: 1.4;
  display: inline-block;
}

.pagination {
  text-align: center;
  width: 342px;
  display: block;
  margin: auto auto;

  .disabled {
    background: rgba($bg-dark, 0.5);
    opacity: 0.7;

    &:hover {
      background: rgba($bg-dark, 0.5);
      color: $grey-warm;
    }
  }
}

.pagination__link,
.pagination__display {
  @include button-meta;
  margin: 0;
  border-radius: 0;
  background-color: $white;

  &:hover {
    background: rgba($links, 0.2);
    color: $blue-dark;
  }
}

.pagination__link.disabled {
  cursor: default;
}

.pagination__link, {
  padding: 0.5357rem 0.2rem;
}

.pagination__display {
  padding: 0.5357rem 2rem;
  width: 150px;
}

.pagination__link.first {
  width: 30.84px;
  border-right: 2px solid rgba($grey-warm, 0.1);
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
  &:before {
    @include icon__first;
    @include pagination__btn;
  }
  &:hover {
    &:before {
      background-image: $icon-pagination-first-blue;
    }
  }
  &.disabled {
    &:before {
      background-image: $icon-pagination-first-grey;
    }
  }
}

.pagination__link.prev {
  border-right: 2px solid rgba($grey-warm, 0.1);
  width: 62.76px;
  &:before {
    @include icon__prev;
    @include pagination__btn;
    margin-right: 3px;
  }
  &:hover {
    &:before {
      background-image: $icon-pagination-prev-blue;
    }
  }
  &.disabled {
    &:before {
      background-image: $icon-pagination-prev-grey;
    }
  }
}

.pagination__link.next {
  border-left: 2px solid rgba($grey-warm, 0.1);
  width: 62.76px;
  &:after {
    @include icon__next;
    @include pagination__btn;
    margin-left: 3px;
  }
  &:hover {
    &:after {
      background-image: $icon-pagination-next-blue;
    }
  }
  &.disabled {
    &:after {
      background-image: $icon-pagination-next-grey;
    }
  }
}

.pagination__link.last {
  border-left: 2px solid rgba($grey-warm, 0.1);
  width: 30.84px;
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
  &:after {
    @include icon__last;
    @include pagination__btn;
  }
  &:hover {
    &:after {
      background-image: $icon-pagination-last-blue;
    }
  }
  &.disabled {
    &:after {
      background-image: $icon-pagination-last-grey;
    }
  }
}