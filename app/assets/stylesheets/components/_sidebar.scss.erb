//
// Sidebar Button Mixins
//

@mixin btn-sideBar {
  @include ff_adelle-regular;
  border-radius: 0;
  margin: 0;
  width: 100%;
}

@mixin btn-sideBar-icon {
  @include btn-short;
  @include btn-sideBar;
  @include btn-mid;
  @media screen and (min-width: 720px) and (max-width: 900px) {
    font-size: 0.8235rem;
  }
  @include breakpoint (mini, small) {
    padding: 0.571em 0 0.643em 1rem;
  }
  margin-bottom: 2px;
  padding: 0.571em 0 0.643em 0.89em;

  &:hover > svg * {
    fill: $blue-dark;
  }

  &.inactive {
    background: rgba($grey-warm, 0.08);
    color: rgba($black, 0.5);

    &:hover {
      background: rgba($grey-warm, 0.08);
      color: rgba($black, 0.5);
    }

    & > svg * {
      fill: rgba($black, 0.5);
    }
  }
}

//
// Sidebar Buttons
//

.btn__loginRegister,
.btn__newThread,
.btn__newTopic,
.btn__newChat {
  @include btn-sideBar-icon;
}

.btn__loginRegister {
  @include btn-primary;

  &:hover > svg * {
    fill: $white;
  }
}

//
// Mobile Styles
//

.sidebar__group {
  @include breakpoint (small, mini) {
    display: none;
  }
  .sidebar.expanded & {
    display: block;
  }
}

.btn__menu-show,
.btn__menu-hide {
  @include btn-sideBar-icon;
  @include ff_adelle-bold;
  @include breakpoint (medium, large, overlarge, huge) {
    display: none;
  }
  cursor: pointer;
}

.btn__menu-show {
  .sidebar.expanded & {
    display: none;
  }
}

.btn__menu-hide {
  display: none;
  .sidebar.expanded & {
    display: block;
  }
}

//
// Sidebar Styles
//

.sidebar {
  .sidebar__group:last-child {
    @include breakpoint(small, mini) {
      border-bottom: 1px solid rgba($grey-warm, 0.1);
    }
    border-bottom: none;
  }

  .sidebar__group[locked-group]:nth-child(n+2):nth-last-child(2) {
    border-bottom: 1px solid rgba($grey-warm, 0.1);
    padding: 0.6316rem 0 0.8421rem;
  }

  .sidebar__group:nth-child(n+4):nth-last-child(2) {
    border-bottom: 1px solid rgba($grey-warm, 0.1);
    padding: 0.6316rem 0 0.8421rem;
  }
}

.sideBar__menu {
  a {
    @include p-meta;
    @include btn-sideBar;
    background-color: $bg;
    color: $grey-warm;
    display: block;
    padding: 0.3546em 1.4283em 0.4288em 1.1271em;

    &:after {
      @include icon__arrow-right;
      float: right;
      height: 0.5263rem;
      vertical-align: baseline;
      width: 0.2632rem;
    }

    &:hover {
      background: rgba($grey-warm, 0.18);
      box-shadow: none;
      color: $black;
      transition: all 100ms ease-out;
    }
  }
}

.sideBar__forums {
  h2 > a {
    @include p-meta;
    @include ff_adelle-bold;
    color: $grey-warm;
    padding: 0.5688em 1.4283em 0.4288em 1.1271em;
  }

  a {
    @include p-meta;
    color: $grey-warm;
    display: block;
    padding: 0.3546em 1.4283em 0.4288em 1.1271em;

    &:hover {
      background: rgba($grey-warm, 0.18);
      box-shadow: none;
      color: $black;
      transition: all 100ms ease-out;
    }

    &[data-active] {
      @include ff_adelle-boldItalic;
      color: $primary;
      &:hover {
        background: none;
      }
    }
  }
}
