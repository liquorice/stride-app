//
// Button Mixins
//

@mixin btn__sideBar {
  @include ff_adelle-regular;
  border-radius: 0;
  margin: 0;
  overflow: hidden;
  width: 100%;
}

@mixin btn__sideAction {
  @include btn__sideBar;
  @include ff_adelle-regular;

  &:before {
    content: " ";
    float: left;
    margin: 0 10px 0 0;
  }
}

@mixin btn__sideMenu {
  @include button-short;
  @include btn__sideBar;
  @include p-meta;
  background-color: $bg;
  padding: 0.2em 0.857em;

  &:after {
    @include icon__sideMenu;
    content: " ";
    float: right;
    height: 1rem;
    vertical-align: baseline;
    width: 0.35rem;
  }
}

//
// Buttons
//

.btn__sideLogin {
  @include button-primary-short;
  @include btn__sideAction;

  &:before {
    @include icon__login;
  }
}

.btn__newThreadInactive {
  @include button-short;
  @include btn__sideAction;
  color: rgba($black, 0.5);

  &:before {
    @include icon__newThreadInactive;
  }

  &:hover {
    background: rgba($grey-warm, 0.08);
    color: rgba($black, 0.5);
  }
}

.btn__newThreadActive {
  @include button-midLevel-short;
  @include btn__sideAction;

  &:before {
    @include icon__newThreadActive;
  }
}

.btn__newTopicActive {
  @include button-midLevel-short;
  @include btn__sideAction;

  &:before {
    @include icon__newTopicActive;
  }
}

.btn__newChatActive {
  @include button-midLevel-short;
  @include btn__sideAction;

  &:before {
    @include icon__newChatActive;
  }
}

//
// Sidebar Styles
//

.sidebar {
  .side__group {
    padding: 0.65em 0;
  }
}

.sideMenu {
  a {
    @include btn__sideMenu;
  }
}

.sideTopics {
  @include p-meta;

  h1 {
    padding: 1.5em 0.857em 0.5em;
  }

  li {
    padding: 0.4em 0.857em;

    a {
      border: 0;
      color: $grey-warm;

      &:hover {
        background: rgba($grey-warm, 0.18);
        box-shadow: none;
        color: $black;
        transition: all 100ms ease-out;
      }

      &[data-active] {
        @include ff_adelle-boldItalic;
        color: $primary;
        &:hover {
          background: none;
        }
      }
    }
  }

  &:before {
    background-color: rgba($grey-warm, 0.08);
    content: " ";
    display: block;
    height: 1px;
    width: 100%;
  }
}
