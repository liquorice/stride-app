/* Shared Styles */
//
//  Heading Styles
//

@mixin h1-regular {
  @include ff_quatroSlab;
  color: $black;
  letter-spacing: -0.01em;
  line-height: 1.1;
  margin-bottom: 0.5em;
}

@mixin h1-primary {
  @include h1-regular;
  color: $primary;
}

@mixin h1-flood {
  @include ff_flood;
  @include breakpoint(small, mini) {
    font-size: 2.4rem;
  }
  color: $black;
  font-size: 3.2rem;
  line-height: 0.96em;
  margin-bottom: 0.6rem;
}

@mixin h2-regular {
  @include ff_adelle-bold;
  @include breakpoint(small, mini) {
    font-size: 20px;
  }
  color: $black;
  font-size: 1.46rem;
  line-height: 1.2;
  margin-bottom: 0.6rem;
}

@mixin h2-primary {
  @include h2-regular;
  color: $primary;
}

@mixin h3-regular {
  @include ff_adelle-bold;
  color: $black;
  font-size: 1.1rem;
  line-height: 1.33334;
  margin-bottom: 0.6rem;
}

@mixin h3-primary {
  @include h3-regular;
  color: $primary;
}

@mixin h3-flood {
  @include ff_flood;
  color: $black;
  font-size: 2rem;
  line-height: 1.9em;
  margin-bottom: 0.6rem;
}

@mixin forum-heading {
  @include ff_flood;
  @include breakpoint(huge) {
    font-size: 140px;
  }
  @include breakpoint(overlarge) {
    font-size: 120px;
  }
  @include breakpoint(large) {
    font-size: 100px;
  }
  @include breakpoint(medium) {
    font-size: 92px;
  }
  @include breakpoint(small) {
    font-size: 72px;
  }
  @include breakpoint(mini) {
    font-size: 4rem;
  }
  color: $white;
  letter-spacing: -0.025em;
  margin-bottom: 0.5em;
  transform: rotateZ(-5deg);
}

@mixin topic-heading {
  @include ff_flood;
  @include breakpoint(huge, overlarge) {
    font-size: 72px;
  }
  @include breakpoint(large, medium) {
    font-size: 64px;
  }
  @include breakpoint(small) {
    font-size: 53px;
  }
  @include breakpoint(mini) {
    font-size: 3rem;
  }
  color: $white;
  letter-spacing: -0.025em;
  margin-bottom: 0.5em;
}

@mixin topic-heading-sub {
  @include ff_flood;
  @include breakpoint(huge, overlarge) {
    font-size: 1.46rem;
    line-height: 1.05;
  }
  @include breakpoint(large) {
    font-size: 1.38rem;
    line-height: 1.05;
  }
  @include breakpoint(mini, small, medium) {
    font-size: 1.309rem;
    line-height: 1.05;
  }
  color: $white;
  font-size: 55%;
  letter-spacing: -0.02em;
  line-height: 0.8;
  margin-bottom: 0;
  margin-top: 1.5rem;
  word-spacing: -0.05em;

  a {
    color: $white;
    &:hover {
      color: $primary;
      transition: all 100ms ease-out;
    }
  }
}

@mixin thread-heading {
  @include ff_adelle-bold;
  @include breakpoint(huge, overlarge) {
    font-size: 2.67rem;
    line-height: 1.05;
  }
  @include breakpoint(large) {
    font-size: 2.52rem;
    line-height: 1.05;
  }
  @include breakpoint(mini, small, medium) {
    font-size: 2.38rem;
    line-height: 1.05;
  }
  color: $white;
  margin-bottom: 3rem;
}

//
// Paragraph Styles
//

@mixin p-regular {
  @include ff_adelle-regular;
  @include bold-italic;
  a {
    @include links;
  }
  color: $black;
  font-size: 1rem;
  line-height: 1.46667;
  margin-bottom: 0.6rem;
}


@mixin p-small {
  @include ff_adelle-regular;
  @include bold-italic;
  a {
    @include links;
  }
  color: $black;
  font-size: 0.933334rem;
  line-height: 1.3;
  margin-bottom: 0.4rem;
}

@mixin p-large {
  @include ff_adelle-regular;
  @include bold-italic;
  a {
    @include links;
  }
  color: $blue-dark;
  font-size: 1.26rem;
  margin-bottom: 0.6rem;
  margin-left: auto;
  margin-right: auto;
  max-width: 44em;
}

@mixin p-meta {
  @include ff_adelle-regular;
  @include bold-italic;
  @include breakpoint(huge, overlarge, large) {
    font-size: 0.75rem;
  }
  @include breakpoint(mini, small, medium) {
    font-size: 13px;
  }
  a {
    @include links;
  }
  color: $grey-warm;
  font-size: 13px;
  line-height: 1.4;
}

@mixin p-xsmall {
  @include p-meta;
}

//
// Extra styles
//

@mixin bold-italic {
  em {
    @include ff_adelle-regularItalic;
  }
  strong {
    @include ff_adelle-bold;
  }
  strong em,
  em strong {
    @include ff_adelle-boldItalic;
  }
}
